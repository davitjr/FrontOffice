@{
    Layout = null;
}
<style>
    .radio-inline {
        margin-top: -22px;
        font-size: 14px;
    }

    .ui-widget-content {
        color: #6d6d6d;
    }

    .form-control {
        color: #6d6d6d;
    }
</style>
<div id="approvementSchemaDetailsLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>

<form ng-controller="ApprovementSchemaCtrl" style="min-width:650px;" id="ApprovementSchemaDetailsForm" name="ApprovementSchemaDetailsForm" role="form" ng-submit="ApprovementSchemaDetailsForm.$valid && saveApprovementSchemaDetails()" novalidate class="form-horizontal" prevent-enter-submit labels-required>

    <div id="newapprovementschemadetails_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="ApprovementSchemaDetailsForm.$setSubmitted();ApprovementSchemaDetailsForm.$valid && saveApprovementSchemaDetails();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newapprovementschemadetails')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div style="max-width:700px">
            <errors></errors>
        </div>
        <div style="max-width:700px;margin-left:50px">
            <a style="color:red">
                {{alert}}
            </a>
        </div>

        <div class="col-sm-10">
            <div class="form-group">
                <label class="tab_title col-sm-6 " for="stepName">Քայլի անվանում</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input type="text" class="form-control" id="stepName" name="stepName" ng-model="schemaDetails.Step.Description" required>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="ApprovementSchemaDetailsForm.$submitted || ApprovementSchemaDetailsForm.stepOrder.$dirty"
                                     for="ApprovementSchemaDetailsForm.stepName.$error">
                            <ng-message when="required" class="errors">
                                Քայլի անվանումը մուտքագրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>

                </div>
            </div>


            <div class="form-group">
                <label class="tab_title col-sm-6 " for="stepOrder">Քայլի կարգահամար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input type="number" onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="form-control" id="stepOrder" name="stepOrder" ng-model="schemaDetails.Order" required>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="ApprovementSchemaDetailsForm.$submitted || ApprovementSchemaDetailsForm.stepOrder.$dirty"
                                     for="ApprovementSchemaDetailsForm.stepOrder.$error">
                            <ng-message when="required" class="errors">
                                Քայլի կարգահամարը մուտքագրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>

                </div>
            </div>
                <div class="form-group">

                    <label class="tab_title col-sm-6 " for="DetailsGroup">Հասանելիության խումբ</label>
                    <div class="col-sm-6" data-ng-init="getXBUserGroups(); setXBUserGroup(schemaDetails.Group)" ng-controller="XBUserGroupCtrl">
                        <div class="row">
                            <loading-control scopevariable="groups"></loading-control>
                            <select data-ng-model="schemaDetails.Group" class="form-control " name="DetailsGroup" id="DetailsGroup"
                                    data-ng-options="a.GroupName for a in groups" required>
                                <option class="tab_text" hidden value="">Ընտրեք...</option>
                            </select>
                        </div>
                        <div class="row">
                            <ng-messages ng-if="ApprovementSchemaDetailsForm.$submitted || ApprovementSchemaDetailsForm.DetailsGroup.$dirty"
                                         for="ApprovementSchemaDetailsForm.DetailsGroup.$error">
                                <ng-message when="required" class="errors">
                                    Հասանելիության խումբը մուտքագրված չէ
                                </ng-message>
                            </ng-messages>
                        </div>

                    </div>
               
            </div>
        </div>

        <br />
    </div>



</form>


