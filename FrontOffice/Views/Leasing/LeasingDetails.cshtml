
@{
    Layout = null;
}

<style>
    .mainPanelSuccessPeriodic {
        width: 64%; 
        margin-left: 182px;
    }
    .panelHeadingPeriodic {
        color: #6d6d6d!important;  
        background-color: rgba(111, 113, 111, 0.16)!important;
    }

</style>


<div style="">
    <div class="panel panel-success"  ng-class="(isperiodic==true) ? 'mainPanelSuccessPeriodic' : ''" >
        <div class="panel-heading"  ng-class="(isperiodic==true) ? 'panelHeadingPeriodic' : ''"  >Lիզինգի հաճախորդի տվյալներ</div>
        <div class="form-group ">
            <label class="tab_title col-sm-3" style="padding-left:20px" for="amount">Հաճախորդ</label>
            <div class="col-sm-9">
                <div class="row-no-margin input-group" style="margin-top:4px;">
                    <input style="text-align:left;padding-left:2px;width:225px" readonly type="text" class="form-control tab_title" value="{{leasingDetails.Name}} {{leasingDetails.LastName}}">
                    <div class="input-group-btn " style="width:125px!important;">
                        <button type="button" class="btn btn-primary searchButton" ng-click="searchleasingcustomers()" title="Լիզինգի հաճախորդի  որոնում"><span class="glyphicon glyphicon-search greenStyle"></span></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group ">
            <label class="tab_title col-sm-3" style="padding-left:20px" for="amount">Անվանում</label>
            <div class="col-sm-9">
                <div class="row-no-margin input-group">
                    <input style="text-align:left;padding-left:2px;width:263px" readonly type="text" class="form-control tab_title" ng-model="leasingDetails.OrganizationName">
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-success" ng-class="(isperiodic==true) ? 'mainPanelSuccessPeriodic' : ''">
        <div class="panel-heading" ng-class="(isperiodic==true) ? 'panelHeadingPeriodic' : ''"  >Lիզինգի վարկի տվյալներ</div>
        <div class="panel-body" style="margin-left:20px">
            <div class="row" style="">
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Պայմ.համար</div>
                    <div class="product-detail-cell product-detail-value" style="text-align: right;padding-left:180px">{{leasingDetails.GeneralNumber}} </div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Պայմ.գումար</div>
                    <div class="product-detail-cell product-detail-value" style="text-align: right;padding-left:180px">{{leasingDetails.StartCapital|number:2}}</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Սկիզբ</div>
                    <div class="product-detail-cell product-detail-value" style="text-align: start;padding-left:180px">{{leasingDetails.StartDate| mydate | date: 'dd/MM/yyyy'}}</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Վերջ</div>
                    <div class="product-detail-cell product-detail-value" style="text-align: start;padding-left:180px">{{leasingDetails.EndDate| mydate | date: 'dd/MM/yyyy'}}</div>
                </div>

            </div>

        </div>
    </div>


</div>

