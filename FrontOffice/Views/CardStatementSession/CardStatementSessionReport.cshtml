
<form id="CardStatementSessionReport" ng-controller="CardStatementSessionCtrl" name="CardStatementSessionReportForm" class="form-horizontal">
    <div id="cardstatementsessionreport_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="actionType == 2 ? printLoanSessionStatements(SessionNumber, startDate, endDate) : printCardSessionStatements(SessionNumber,statementStartDate,statementEndDate, actionType)">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Տպել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('cardstatementsessionreport')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
    </div>
    <div style="padding:10px;min-width:600px">
        <div id="CardStatementSessionReportLoad" class="overlay hidden">
            <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
        </div>

        <div class="form-group">
            <label class="tab_title col-sm-6">Քաղվածքի կարգավիճակ</label>
            <select class="col-sm-6 form-control " data-ng-model="statementCreationStatus">
                <option value="0" selected="selected">Բոլորը</option>
                <option value="1">Ստեղծված</option>
                <option value="2">Չստեղծված</option>
            </select>
        </div>

        <div class="form-group">
            <label class="tab_title col-sm-6">Ուղարկման կարգավիճակ</label>
            <select data-ng-model="statementSendStatus" class="col-sm-6 form-control ">
                <option value="0" selected="selected">Բոլորը</option>
                <option value="1">Ուղարկված</option>
                <option value="2">Չուղարկված</option>
            </select>
        </div>

        <div ng-if="actionType == 2" class="form-group">
            <label class="tab_title col-sm-6">Քաղվածքի ա/թ սկիզբ</label>
            <input type="date" class="form-control " id="startDate" name="startDate" ng-model="statement.StartDate">
        </div>

        <div ng-if="actionType == 2" class="form-group">
            <label class="tab_title col-sm-6">Քաղվածքի ա/թ վերջ</label>
            <input type="date" class="form-control " id="endDate" name="endDate" ng-model="statement.EndDate">
        </div>
    </div>
</form>

