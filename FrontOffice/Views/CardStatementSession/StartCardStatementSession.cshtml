@{
    Layout = null;
}
<form id="StartCardStatementSessionForm" ng-controller="CardStatementSessionCtrl" style="overflow-x:hidden;min-width:500px;min-height:250px;" name="StartCardStatementSessionForm" role="form" class="form-horizontal">
    <div id="startcardstatementsession_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="StartCardStatementSessionForm.$setSubmitted();StartCardStatementSessionForm.$valid && startCardStatementSessionSubscription(SessionNumber)">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('startcardstatementsession')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
    </div>

    <div style="max-width:400px;margin-left:5px">
        <errors></errors>
    </div>

    <div class="form-group">
        <div class="col-sm-6 " style="margin-top:10px;margin-left:45px">
            <div class="row">
                <div class="input-group col-sm-12" style="display:inline-flex">
                    <span class="input-group-addon " style="display: inline-block;padding-right: 20px;padding-top: 10px;">
                        <input type="radio" name="schedule" aria-label="..." value="1" ng-model="StartType">
                    </span>
                    <span ng-disabled="1" class="form-control ">Սկսել հիմա </span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div style="margin-top:20px">
            <div class="col-sm-6 " style="margin-left:45px">
                <div class="row">
                    <div class="input-group col-sm-12" style="display:inline-flex">
                        <span class="input-group-addon " style="display: inline-block;padding-right: 20px;padding-top: 10px;">
                            <input type="radio" name="schedule" aria-label="..." value="2" ng-model="StartType">
                        </span>
                        <input type="datetime-local" ng-disabled="StartType==1" class="col-sm-11 form-control" name="subscriptionSchedule" id="subscriptionSchedule" ng-model="Schedule" ng-required="StartType == 2">
                    </div>
                </div>
                <div class="row">
                    <ng-messages ng-if="StartCardStatementSessionForm.$submitted "
                                 for="StartCardStatementSessionForm.subscriptionSchedule.$error">
                        <ng-message when="required" class="errors">
                            Գրաֆիկը ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>
    </div>
</form>
