
@{
    Layout = null;
}
<style type="text/css">
    #periodicUtilityForm .ui-widget input {
        font-family: 'webly_semibold';
    }

    #periodicSwiftStatementOrderForm {
        min-width: 600px;
    }
</style>
<form name="periodicSwiftStatementOrderForm" id="periodicSwiftStatementOrderForm" role="form" class="form-horizontal" novalidate >
    <errors></errors>
    <div ng-if="periodic==5" ng-init="getPeriodicSwiftStatementOrderFee()">


        <paymentaccount data-ng-init="getDebitAccounts()"
                        accountselectname="debitAccount"
                        accounts="debitAccounts"
                        accountnumber="DebitAccountNumber"
                        account="periodicorder.StatementAccount"
                        check="0"
                        nameforaccount="'SWIFT քաղվածքի հաշիվ'"
                        nameforcurrency="''">
        </paymentaccount>
        <div class="row">
            <div class="col-sm-5"></div>
            <ng-messages ng-if="periodicSwiftStatementOrderForm.$submitted || periodicSwiftStatementOrderForm.debitAccount.$dirty"
                         for="periodicSwiftStatementOrderForm.debitAccount.$error">
                <ng-message when="required" class="errors">
                    Հաշիվը ընտրված չէ
                </ng-message>
            </ng-messages>
        </div>


        <div class="form-group ">
            <label class="tab_title col-sm-5 control-label" labels-required> SWIFT կոդ քաղվածքի համար <span style="color: #337AB7; cursor:pointer;" ng-controller="PopUpCtrl" ng-click="params={}; openWindow('/PeriodicOrder/SWIFTCodeInfoDetails','SWIFT Կոդ','SWIFTCodeInfoDetails')" class="glyphicon glyphicon-info-sign"></span></label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="input-group col-sm-10">
                        <input type="text" ng-model="periodicorder.ReceiverBankSwiftCode" name="ReceiverBankSwiftCode" class="tab_title form-control" style="text-align:left" required ng-minlength="12" />
                        <div class="input-group-btn" style="display:block;">
                            <button type="button" class="btn btn-default searchButton" ng-click="searchSwiftCodes()" title="SWIFT կոդի որոնում"><span class="glyphicon glyphicon-search greenStyle"></span></button>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <ng-messages ng-if="periodicSwiftStatementOrderForm.$submitted || periodicSwiftStatementOrderForm.ReceiverBankSwiftCode.$dirty"
                                 for="periodicSwiftStatementOrderForm.ReceiverBankSwiftCode.$error">
                        <ng-message when="required" class="errors">
                            SWIIFT կոդ դաշտը լրացված չէ
                        </ng-message>
                        <ng-message when="minlength" class="errors">
                            SWIFT  կոդը պետք է լինի առնվազն 12 նիշ:
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="tab_title col-sm-5" for="ExistenceOfCirculation">Շրջանառության առկայություն</label>
            <div class="col-sm-6">
                <div class="row">
                    <select data-ng-model="periodicorder.ExistenceOfCirculation" name="ExistenceOfCirculation" id="ExistenceOfCirculation" class="form-control" required>
                        <option value="" hidden="hidden" style=" margin-left:25px">Ընտրեք տեսակը...</option>
                        <option value="true">Այո</option>
                        <option value="false">Ոչ</option>
                    </select>
                </div>
                <div class="row">
                    <ng-messages ng-if="periodicSwiftStatementOrderForm.$submitted || periodicSwiftStatementOrderForm.ExistenceOfCirculation.$dirty"
                                 for="periodicSwiftStatementOrderForm.ExistenceOfCirculation.$error">
                        <ng-message when="required" class="errors">
                            Շրջանառության առկայության տեսակն ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>

            </div>
        </div>



    </div>
</form>
