<form ng-controller="PeriodicOrderCtrl" ng-init="getPeriodicUtilityPaymentOrder(selectedOrderId);" style="width:450px">
    <loading-control style="margin-left:20em" scopevariable="order"></loading-control>
    <div ng-show="order" class="menu-bar dialog-menu light-green "
         style="margin-left:-3px;margin-top:0px">
        <ul ng-if="order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50 && $root.SessionProperties.IsCalledFromHB != true" id="menu" class="dialog-menu">
            <li class="root-menu-item-5 " ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հրաժարման հայտ','removalOrder',callbackgetPeriodicUtilityPaymentOrder)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5"><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;Հրաժարման հայտ</span>
            </li>
        </ul>
    </div>

    <div ng-show="order" class="product-details bhoechie-tab-content" style="padding-left:10px;min-width:450px">
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հայտի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.Id}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{order.RegistrationDateString}}</div>
        </div>
        <div class="product-detail-row" ng-if="$root.SessionProperties.IsCalledFromHB != true">
            <div class="product-detail-cell product-detail-lable">Գործառնական օր</div>
            <div class="product-detail-cell product-detail-value">{{order.OperationDateString}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պարբերական փոխանցման տեսակը</div>
            <div class="product-detail-cell product-detail-value">Կոմունալ վճարում</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կոմունալի տեսակը</div>
            <div class="product-detail-cell product-detail-value">{{CommunalTypeDescription}}</div>
        </div>
        <div ng-if="order.UtilityPaymentOrder.CommunalType==7 || order.UtilityPaymentOrder.CommunalType==8 || order.UtilityPaymentOrder.CommunalType==9 || order.UtilityPaymentOrder.CommunalType==10" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հեռախոսահամար</div>
            <div class="product-detail-cell product-detail-value">{{order.UtilityPaymentOrder.Code}}</div>
        </div>
        <div ng-if="order.UtilityPaymentOrder.CommunalType==3 || order.UtilityPaymentOrder.CommunalType==4 || order.UtilityPaymentOrder.CommunalType==5 || order.UtilityPaymentOrder.CommunalType==6 || order.UtilityPaymentOrder.CommunalType==11" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Բաժանորդի քարտի համարը</div>
            <div class="product-detail-cell product-detail-value">{{order.UtilityPaymentOrder.Code}}</div>
        </div>
        <div ng-if="order.UtilityPaymentOrder.CommunalType==3 || order.UtilityPaymentOrder.CommunalType==4 || order.UtilityPaymentOrder.CommunalType==5 || order.UtilityPaymentOrder.CommunalType==6 || order.UtilityPaymentOrder.CommunalType==11" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Անուն Ազգանուն / Անվանում</div>
            <div class="product-detail-cell product-detail-value">{{order.PeriodicDescription}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ամբողջ պարտքը</div>
            <div ng-if="order.AllDebt==true" class="product-detail-cell product-detail-value">Այո</div>
            <div ng-if="order.AllDebt==false" class="product-detail-cell product-detail-value">Ոչ</div>
        </div>
        <div ng-if="order.AllDebt==true" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Թողնվող մնացորդ</div>
            <div class="product-detail-cell product-detail-value">{{order.MinDebetAccountRest.toFixed(2)}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Նվազագույն գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.MinAmountLevel.toFixed(2)}}</div>
        </div>
        <div ng-if="order.AllDebt==true" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Առավելագույն գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.MaxAmountLevel.toFixed(2)}}</div>
        </div>
        <div ng-if="order.LastOperationDate!=null" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վերջ</div>
            <div class="product-detail-cell product-detail-value">{{order.LastOperationDate | mydate | date: 'dd/MM/yyyy' }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Թույլատրել մասնակի վճարում</div>
            <div ng-if="order.PartialPaymentSign==1" class="product-detail-cell product-detail-value">Այո</div>
            <div ng-if="order.PartialPaymentSign!=1" class="product-detail-cell product-detail-value">Ոչ</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պարբերականություն</div>
            <div class="product-detail-cell product-detail-value">{{order.Periodicity}} օր</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Առաջին փոխանցման օրը</div>
            <div class="product-detail-cell product-detail-value">{{order.FirstTransferDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ստուգման օրերի քանակ</div>
            <div class="product-detail-cell product-detail-value">{{order.CheckDaysCount}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ելքագրվող (դեբետ) հաշիվ</div>
            <div class="product-detail-cell product-detail-value">{{order.DebitAccount.AccountNumber}} {{order.DebitAccount.Currency}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.AmountString}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Արժույթ</div>
            <div class="product-detail-cell product-detail-value">{{order.Currency}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div ng-if="order.Quality==30" class="product-detail-cell product-detail-value greenStyle">{{ order.QualityDescription }}</div>
            <div ng-if="order.Quality==31" class="product-detail-cell product-detail-value redStyle">{{ order.QualityDescription }}</div>
            <div ng-if="order.Quality!=31 && order.Quality!=30" class="product-detail-cell product-detail-value">{{ order.QualityDescription }}</div>
        </div>
        <div ng-if="order.Quality==31" ng-controller="OrderCtrl" ng-init="getOrderRejectHistory(selectedOrderId)" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մերժման պատճառ`</div>
            <div class="product-detail-cell product-detail-value"><span class="redStyle">{{ rejectHistory.ReasonDescription }}</span></div>
        </div>
        <div class="product-detail-row" ng-if="$root.SessionProperties.IsCalledFromHB != true">
            <div class="product-detail-cell my_text1">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>
        </div>
    </div>
</form>
