    <div class="product-details bhoechie-tab-content" style="min-width:800px;margin-left:10px;">

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Համար</div>
            <div class="product-detail-cell product-detail-value">
                {{safekeepingItem.ProductId}}
            </div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value">{{safekeepingItem.Quality == 1?'Գործող':'Փակված'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Գումար</div>
            <div class="product-detail-cell product-detail-value" style="font-weight:bold;"> {{ safekeepingItem.Amount | number:2 }} {{safekeepingItem.Currency}}</div>
        </div>
        @*<div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Արժույթ</div>
            <div class="product-detail-cell product-detail-value">{{safekeepingItem.OpenDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>*@
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Փաթեթի համար</div>
            <div class="product-detail-cell product-detail-value">{{safekeepingItem.PacketNumber}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Սկիզբ</div>
            <div class="product-detail-cell product-detail-value">{{safekeepingItem.StartDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable redStyle">Վերջ</div>
            <div class="product-detail-cell product-detail-value">{{safekeepingItem.EndDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row" ng-if="safekeepingItem.ClosingDate != null && safekeepingItem.ClosingDate != undefined">
            <div class="product-detail-cell product-detail-lable">Փաստացի Ելքի ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{safekeepingItem.ClosingDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մասնաճյուղ</div>
            <div class="product-detail-cell product-detail-value">{{filialList[safekeepingItem.FilialCode]}}</div>
        </div>
      
    </div>
  
</div>
<script type="text/javascript">

    $("#safekeepingItemDetails div.bhoechie-tab-menu>div.list-group>div").click(function (e) {
        e.preventDefault();
        $(this).siblings('#safekeepingItemDetails div.active').removeClass("active");
        $(this).addClass("active");
        var index = $(this).index();
        $("#safekeepingItemDetails div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
        $("#safekeepingItemDetails div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
    });


</script>