@{
    Layout = null;
}
<div id="InsuranceOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="InsuranceOrderCtrl" name="InsuranceOrderForm" id="InsuranceOrderForm" role="form" style="min-width:1000px;" novalidate class="form-horizontal" labels-required ng-init="showEndDateTime = true;showStartDateTime = true">
    <div id="newaccount_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-3 " ng-if="order.Insurance.InsuranceContractType != 2" ng-click="InsuranceOrderForm.$setSubmitted();InsuranceOrderForm.$valid && StartDateTimeValid && EndDateTimeValid && getPaymentOrderDetails();">
                <span id="h-menu-item-3"><img id="h-menu-icon-3" class="h-menu-icon printButton">Հանձնարարական</span>
            </li>
            <li class="root-menu-item-4 " ng-click="InsuranceOrderForm.$setSubmitted();InsuranceOrderForm.$valid && StartDateTimeValid && EndDateTimeValid && saveInsuranceOrder()">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newInsuranceOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>


    <div>
        <div class="col-sm-7">
            <div style="max-width:530px">
                <errors></errors>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="tab_title col-sm-5" for="InsuranceContractType">Ապահովագրության պայմանագրի տեսակ</label>
                    <div class="col-sm-6" data-ng-init="getInsuranceContractTypesByProductType()">
                        <div class="row">
                            <loading-control scopevariable="insuranceContractTypes"></loading-control>
                            <select ng-model="order.Insurance.InsuranceContractType" ng-show="insuranceContractTypes" ng-change="getInsuranceTypesByContractType(order.Insurance.InsuranceContractType);order.Insurance.CompensationCurrency='AMD'" name="InsuranceContractType" id="InsuranceContractType" class="form-control" required
                                    data-ng-options="k as v for (k,v) in insuranceContractTypes">

                                <option value="" hidden="hidden" style=" margin-left:25px">Ընտրեք տեսակը...</option>

                            </select>
                        </div>
                        <div class="row">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.InsuranceContractType.$dirty"
                                         for="InsuranceOrderForm.InsuranceContractType.$error">
                                <ng-message when="required" class="errors">
                                    Ապահովագրության պայմանագրի տեսակը ընտրված չէ
                                </ng-message>
                            </ng-messages>
                        </div>
                    </div>
                </div>




                <div class=" form-group">
                    <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
                    <div class="col-sm-6 row">
                        <div class="multiple_columns col-sm-8 ">
                            <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                        </div>
                    </div>

                </div>







                <div class="form-group">
                    <label class="tab_title col-sm-5" for="InsuranceType">Ապահովագրության տեսակ</label>
                    <div class="col-sm-6">
                        <div class="row">
                            <select ng-model="order.Insurance.InsuranceType" ng-change="getInsuranceCompanies(order.Insurance.InsuranceType);getInsuranceCompanySystemAccountNumber(order.Insurance.Company,order.Insurance.InsuranceType);order.Insurance.CompensationCurrency='AMD'" name="InsuranceType" id="InsuranceType" class="form-control" required
                                    data-ng-options="k as v for (k,v) in insuranceTypes">

                                <option value="" hidden="hidden" style=" margin-left:25px">Ընտրեք տեսակը...</option>

                            </select>
                        </div>
                        <div class="row">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.InsuranceType.$dirty"
                                         for="InsuranceOrderForm.InsuranceType.$error">
                                <ng-message when="required" class="errors">
                                    Ապահովագրության տեսակը ընտրված չէ
                                </ng-message>
                            </ng-messages>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <label class="tab_title col-sm-5" for="Company">Ապահովագրական ընկերություն</label>
                    <div class="col-sm-6">
                        <div class="row">

                            <select ng-model="order.Insurance.Company" ng-change="getInsuranceCompanySystemAccountNumber(order.Insurance.Company,order.Insurance.InsuranceType)" name="Company" id="Company" class="form-control" required
                                    data-ng-options="k as v for (k,v) in insuranceCompanies">

                                <option value="" hidden="hidden" style=" margin-left:25px">Ընտրեք տեսակը...</option>

                            </select>
                        </div>
                        <div class="row">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.Company.$dirty"
                                         for="InsuranceOrderForm.Company.$error">
                                <ng-message when="required" class="errors">
                                    Ապահովագրական ընկերությունը ընտրված չէ
                                </ng-message>
                            </ng-messages>
                        </div>
                    </div>
                </div>



                <div class="form-group" ng-init="getTimehours();getTimeMinutes()">
                    <label class="tab_title col-sm-5" for="InsuranceStartDate">Պայմանգրի սկիզբ</label>
                    <div class="col-sm-6 row">
                        <div class="input-group " style="width:100%">
                            <input type="date" required ng-model="order.Insurance.StartDate" ng-blur="setFullStartDate()" id="InsuranceStartDate" name="InsuranceStartDate" style="width:60%" class="form-control tab_title" />
                            <input type="text" title="00:00-ից 23:59" style="width:37%" ng-show="showStartDateTime" ng-disabled="order.Insurance.StartDate==undefined" mask-time required ng-model="StartDateTime" class="form-control tab_title" placeholder="hh:mm" />
                        </div>
                        <div class="row" style="margin-left: 0px;">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.InsuranceStartDate.$dirty"
                                         for="InsuranceOrderForm.InsuranceStartDate.$error">
                                <ng-message when="required" class="errors">
                                    Պայմանգրի սկիզբը նշված չէ
                                </ng-message>
                                <ng-message when="date" class="errors">
                                    Պայմանգրի սկիզբը սխալ է նշված
                                </ng-message>
                                <span ng-show="(StartDateTime==undefined || StartDateTime=='') && StartDateTimeValid!=false " class="errors">
                                    Պայմանգրի սկիզբի ժամը նշված չէ
                                </span>
                            </ng-messages>
                            <span ng-show="StartDateTimeValid==false" class="errors">
                                Պայմանգրի սկիզբի ժամը սխալ է լրացված
                            </span>
                        </div>
                    </div>
                </div>






                <div class="form-group">
                    <label class="tab_title col-sm-5" for="InsuranceEndDate">Պայմանգրի վերջ</label>
                    <div class="col-sm-6 row">
                        <div class="input-group " style="width:100%">
                            <input type="date" required ng-blur="setFullEndDate()" ng-model="order.Insurance.EndDate" id="InsuranceEndDate" name="InsuranceEndDate" style="width:60%" class="form-control tab_title" />
                            <input type="text" style="width:37%" title="00:00-ից 23:59" ng-show="showEndDateTime" ng-disabled="order.Insurance.EndDate==undefined" required mask-time ng-model="EndDateTime" class="form-control tab_title" placeholder="hh:mm" />
                        </div>
                        <div class="row" style="margin-left: 0px;">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.InsuranceEndDate.$dirty"
                                         for="InsuranceOrderForm.InsuranceEndDate.$error">
                                <ng-message when="required" class="errors">
                                    Պայմանգրի վերջը նշված չէ
                                </ng-message>
                                <ng-message when="date" class="errors">
                                    Պայմանգրի վերջը սխալ է նշված
                                </ng-message>
                                <span ng-show="(EndDateTime==undefined || EndDateTime=='') &&  EndDateTimeValid!=false;" class="errors">
                                    Պայմանգրի վերջի ժամը նշված չէ
                                </span>
                            </ng-messages>
                            <span ng-show="EndDateTimeValid==false" class="errors">
                                Պայմանգրի վերջի ժամը սխալ է լրացված
                            </span>
                        </div>
                    </div>
                </div>





                <div class="form-group" ng-if="order.Insurance.InsuranceContractType != 2">
                    <label class="tab_title col-sm-5" for="CompensationAmount">Ապահովագրական գումար<span class="redStyle">*</span></label>
                    <div class="col-sm-6">

                        <div class="row">

                            <div class="input-group col-sm-10">
                                <input type="text" ng-model="order.Insurance.CompensationAmount" id="CompensationAmount" onkeypress='return event.charCode >= 48 && event.charCode <= 57 || event.charCode==46' name="CompensationAmount" required class="form-control tab_title" fcsa-number />
                                <span class="input-group-addon" id="basic-addon2" style="width: 0;">{{order.Insurance.CompensationCurrency!=undefind?order.Insurance.CompensationCurrency:'AMD'}} </span>
                            </div>

                        </div>
                        <div class="row ">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.CompensationAmount.$dirty"
                                         for="InsuranceOrderForm.CompensationAmount.$error">
                                <ng-message when="required" class="errors">
                                    Ապահովագրական գումարը լրացված չէ
                                </ng-message>

                                <ng-message when="fcsaNumber" class="errors">
                                    Ապահովագրական գումարը սխալ է լրացված
                                </ng-message>
                            </ng-messages>
                        </div>
                    </div>
                </div>
                <div class="form-group" ng-if="order.Insurance.InsuranceType==6 && order.Insurance.InsuranceContractType != 2">
                    <label class="tab_title col-sm-5" for="CompensationCurrency">Ապահովագրական գումարի արժույթ</label>
                    <div class="col-sm-6">
                        <div class="row">
                            <select ng-model="order.Insurance.CompensationCurrency" name="CompensationCurrency" id="CompensationCurrency" class="form-control" required>

                                <option value="" hidden="hidden" style=" margin-left:25px">Ընտրեք արժույթը...</option>
                                <option value="AMD" style="margin-left:25px">AMD</option>
                                <option value="EUR" style="margin-left:25px">EUR</option>
                                <option value="USD" style="margin-left:25px">USD</option>
                            </select>
                        </div>
                        <div class="row">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.CompensationCurrency.$dirty"
                                         for="InsuranceOrderForm.CompensationCurrency.$error">
                                <ng-message when="required" class="errors">
                                    Ապահովագրական գումարի արժույթը ընտրված չէ
                                </ng-message>
                            </ng-messages>
                        </div>
                    </div>
                </div>

                <paymentaccount accounts="debitAccounts" ng-if="order.Insurance.InsuranceContractType != 2"
                                ng-init="getDebitAccounts()"
                                accountselectname="debitAccount"
                                forinputcheckbox="true"
                                account="order.DebitAccount"
                                check="$parent.checkForDebitAccount"
                                nameforaccount="'Դեբետագրվող հաշիվ'"
                                onlyamd="true"
                                nameforcurrency="'Դեբետագրվող արժույթ'"
                                formname="InsuranceEndDate">
                </paymentaccount>
                <div class="row">
                    <div class="col-sm-5"></div>
                    <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.debitAccount.$dirty"
                                 for="InsuranceOrderForm.debitAccount.$error">
                        <ng-message when="required" class="errors">
                            <span ng-if="checkForDebitAccount==0">Հաշիվը ընտրված չէ</span>
                            <span ng-if="checkForDebitAccount==1">Արժույթը ընտրված չէ</span>
                        </ng-message>
                    </ng-messages>
                </div>


                <div ng-if="order.Insurance.InsuranceContractType != 2" class="form-group ">
                    <label class="tab_title col-sm-5" for="amount">Գումար<span class="redStyle">*</span></label>
                    <div class="col-sm-6">

                        <div class="row">

                            <div class="input-group col-sm-10">
                                <input type="text" ng-model="order.Amount" onkeypress='return event.charCode >= 48 && event.charCode <= 57 || event.charCode==46' name="amount" required class="form-control tab_title" fcsa-number />
                                <span class="input-group-addon" id="basic-addon2" style="width: 0;"> AMD </span>
                            </div>

                        </div>
                        <div class="row ">
                            <ng-messages ng-if="InsuranceOrderForm.$submitted || InsuranceOrderForm.amount.$dirty"
                                         for="InsuranceOrderForm.amount.$error">
                                <ng-message when="required" class="errors">
                                    Գումարը լրացված չէ
                                </ng-message>

                                <ng-message when="fcsaNumber" class="errors">
                                    Գումարը սխալ է լրացված
                                </ng-message>
                            </ng-messages>
                        </div>
                    </div>
                </div>

                <orderdescription description="order.Description" ng-if="order.Insurance.InsuranceContractType != 2"
                                  operations="null"
                                  labeldescription=" 'Նկարագրություն' "
                                  formname=" InsuranceOrderForm">
                </orderdescription>


                <usersetnumber ng-if="order.Insurance.InsuranceContractType != 2" setnumber="order.Insurance.InvolvingSetNumber" formname="InsuranceOrderForm" labelname="Ներգրավող ՊԿ"></usersetnumber>
            </div>
        </div>
        <div class="col-sm-5">
            <noncashopperson formname="paymentOrderForm" ng-if="checkForDebitAccount==0 && ( $root.SessionProperties.CustomerType==6 || checkForReciverAccount==1) " opperson="order.OPPerson" ordertype="order.Type" accountnumber="order.DebitAccount.AccountNumber"></noncashopperson>
            <cashopperson ng-if="checkForDebitAccount==1" formname="paymentOrderForm" opperson="order.OPPerson"></cashopperson>
            @*<cashopperson ng-if="transfer!=undefined && showOPPerson " transfer="transfer" formname="paymentOrderForm" opperson="order.OPPerson"></cashopperson>*@
        </div>
    </div>

</form>











