
@{
    Layout = null;
}

<div id="Loader" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<div style="max-width:630px">
    <errors></errors>
</div>
<div ng-controller="FondCtrl" data-ng-init="getFondByID(fondID)" id="fondDetails" style="width:400px; ">
   

    <div class="product-details bhoechie-tab-content" style="min-width:210px;margin-left:10px;">
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Համար</div>
            <div class="product-detail-cell product-detail-value">{{fond.ID}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Անվանում</div>
            <div class="product-detail-cell product-detail-value">{{::fond.Description}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Գործող ֆոնդ</div>
            <div class="product-detail-cell product-detail-value">{{fond.IsActive==true?'Այո':'Ոչ'}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Սուբսիդավորում</div>
            <div class="product-detail-cell product-detail-value">{{fond.IsSubsidia==true?'Այո':'Ոչ'}}</div>
        </div>
    </div>

    <table class="table table-condensed table-hover" style=" width:100%;">
        <thead >
            <tr class="product-container-header">
                <td class="text-center col-md-6" style="padding-right:0px; text-align:left;">Արժույթ</td>
                <td class="text-center col-md-6" style="padding-right:0px; text-align:left;">Տոկոսադրույք</td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="providingDetail in fond.ProvidingDetails" ng-if="fond.ProvidingDetails!=0 " ng-class="{'selected':$index == selectedRow}" style="cursor: pointer;" ng-click="setClickedRow($index);">
                <td class="col-md-6">
                    {{::providingDetail.Currency}}
                </td>
                <td class="col-md-6">
                    {{::providingDetail.InterestRate*100}} <span> %</span>
                </td>
            </tr>
            <tr ng-if="fond.ProvidingDetails.length==0 ">
                <td colspan="2" style="text-align:center;">
                    Առկա չեն ֆոնդի տրամադրման պայմանները
                </td>
            </tr>
        </tbody>
    </table>
    <br/>

       
    </div>



