@{
    Layout = null;
}

<div ng-controller="HBTokenCtrl">
    <div class="product-content-table custom-scroll" id="hbusersContent" ng-class="{'product-content-table-full_height' : hideBlank!='true' }" ng-init="getHBTokens()">
        <div ng-if="hbtokens==undefined">
            <loading></loading>
        </div>

        <div class="product-container" style="width:90%;">
            <div class="header-title">
                ՀԲ թոքեններ
                <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
            </div>
            <div class="product-collapsable-section">
                <div class="product-container-header">
                    <div class="product-container-header">
                        <span style="text-align:center;width:25px;margin-right:20px;margin-left:10px">Token-ի համար </span>
                        <span style="text-align:center;width:25px;margin-right:20px">Օր․ Սահմանաչափ</span>
                        <span style="text-align:center;width:25px;margin-right:20px">Գործ․ սահմանարափ</span>
                        <span style="text-align:center;width:10px;">Կարգավիճակ</span>

                    </div>
                </div>

                <div class="product-content-table-full_height custom-scroll" id="hbUsersContent" style="min-height:100px;">
                    <div ng-if="hbtokens==undefined">
                        <loading></loading>
                    </div>
                    <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">

                        <tbody>
                            <tr ng-repeat="hbtoken in hbtokens" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index,hbtoken)" style="max-height:200px">
                                <td>{{::hbtoken.TokenNumber}}</td>
                                <td style="text-align:right">{{::hbtoken.DayLimit|number:2}}</td>
                                <td style="text-align:right">{{::hbtoken.TransLimit|number:2}}</td>
                                <td style="text-align:center">{{::hbtoken.QualityDescription}}</td>
                                <td ng-if="filter==1" class="col-sm-1 click_toggle" context="contextHBOpenedTokens" id="contextMenu"><div id="contextMenu"></div> </td>
                                <td ng-if="filter==2" class="col-sm-1 click_toggle" context="contextHBClosedTokens" id="contextMenu"><div id="contextMenu"></div> </td>
                                <td ng-if="filter==3" class="col-sm-1 click_toggle" context="contextHBstilNotActivatedTokens" id="contextMenu"><div id="contextMenu"></div> </td>
                            </tr>
                            <tr ng-if="hbtokens.length==0 ">
                                <td colspan="3" style="text-align:center;">
                                    Տվյալները բացակայում են
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <ul ng-if="filter==1" id="contextHBOpenedTokens"  class="dropdown-menu">
                        <li><a style="color: black;text-decoration:none!important ;" ui-sref="hbtokendetails({ hbtokenid : hbtoken.ID})">Մանրամասն դիտարկում</a></li>
                    </ul>
                    <ul ng-if="filter==2" id="contextHBClosedTokens" class="dropdown-menu">
                        <li><a style="color: black;text-decoration:none!important ;" ui-sref="hbtokendetails({ hbtokenid : hbtoken.ID})">Մանրամասն դիտարկում</a></li>
                    </ul>
                    <ul ng-if="filter==3" id="contextHBstilNotActivatedTokens" class="dropdown-menu">
                        <li><a style="color: black;text-decoration:none!important ;" ui-sref="hbtokendetails({ hbtokenid : hbtoken.ID})">Մանրամասն դիտարկում</a></li>
                    </ul>
                    <br />
                </div>
            </div>
        </div>

    </div>

</div>



