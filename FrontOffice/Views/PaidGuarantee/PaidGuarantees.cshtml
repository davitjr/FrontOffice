<style>
    .redBold {
        font-weight: bold;
        color: red;
    }

    .blueBold {
        font-weight: bold;
        color: blue;
    }
</style>
<script type="text/javascript">
    $("#paidGuarantieesContent").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>
<div class="product-container" id="AllPaidGuarantees" ng-controller="PaidGuaranteeCtrl" data-ng-init="$root.SessionProperties.CustomerType != 6 && getPaidGuarantees()" ng-show="(hideBlank!='true' && paidGuarantees.length==0) || (paidGuarantees.length!=0 && paidGuarantees.length!=undefined)">
    <div class="header-title">
        <a  ui-sref="paidGuarantees" style="color:black;">Վճարված երաշխիքներ</a>
        <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
    </div>
    <div class="product-collapsable-section">
        <div class="product-container-header">
            <div class="include-closed-products">
                <input type="checkbox" class="css-square-checkbox lrg" id="include-closed-paidGuarantiees" data-ng-model="filter" ng-true-value="2" ng-false-value="1" ng-change="QualityFilter()">
                <label for="include-closed-paidGuarantiees" name="include-closed-paidGuarantiees-checkbox_lbl" class="css-label lrg custom-square-checkbox">Դիտել փակվածները</label>
            </div>
        </div>
        <div class="product-content-table custom-scroll" id="paidGuarantieesContent" ng-class="{'product-content-table-full_height' : hideBlank!='true' }">
            <div ng-if="paidGuarantees==undefined">
                <loading></loading>
            </div>
            <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                <tbody>
                    <tr ng-repeat="paidGuarantee in paidGuarantees" ng-if="filter==1 && paidGuarantees.length!=0" style="cursor: pointer;" ng-class="{'selected':$index==selectedRow}" ng-click="setClickedRow($index)" ng-dblclick="selectedPaidGuaranteesIsAccessible && openPaidGuaranteeDetails();">
                        <td class="col-sm-4">
                            {{ ::paidGuarantee.LoanTypeDescription }}
                            <span ng-if="paidGuarantee.CreditCode!=''" style="color:brown;"><br />Կոդ` {{::paidGuarantee.CreditCode}}</span>
                            <br /> <span style="font-weight:bold;" ng-class="{ 'redBold': paidGuarantee.Quality==5 ||  paidGuarantee.Quality==11 || paidGuarantee.Quality==12 || paidGuarantee.Quality==2,'blueBold':paidGuarantee.Quality==10  }">{{ ::paidGuarantee.QualityDescription }}</span>
                            <br /> Վերջ`{{::paidGuarantee.EndDate | mydate | date: 'dd/MM/yyyy'}}
                        </td>
                        <td class="col-sm-2" style="text-align:right;">{{ ::paidGuarantee.CurrentCapitalString }} {{ ::paidGuarantee.Currency }}</td>
                        <td class="col-sm-1 click_toggle" context="contextPaidGuarantees" id="contextMenu"><div id="contextMenu"></div> </td>

                    </tr>
                    <tr ng-if="filter==1 && paidGuarantees.length==0 ">
                        <td colspan="3" style="text-align:center;">
                            Առկա չեն գործող վճարված երաշխիքներ
                        </td>
                    </tr>
                    <tr ng-if="filter!=1"><td style="color:red; border-width:3px" colspan="3">Փակված վճարված երաշխիքներ </td></tr>
                    <tr ng-repeat="paidGuarantee in closingPaidGuarantees" ng-if="closingPaidGuarantees.length!=0" ng-class="{'selected':$index==selectedRowClose}" ng-click="setClickedRowClose($index)" ng-dblclick="selectedPaidGuaranteesIsAccessible && openPaidGuaranteeDetails();">
                        <td class="col-sm-3">
                            {{ ::paidGuarantee.LoanTypeDescription }}
                            <br /> {{ ::paidGuarantee.QualityDescription }}
                            <br /> Վերջ`{{::paidGuarantee.EndDate | mydate | date: 'dd/MM/yyyy'}}

                        </td>
                        <td class="col-sm-2" style="text-align:right;">{{ ::paidGuarantee.CurrentCapitalString}} {{ ::paidGuarantee.Currency }}
                            <br />{{::paidGuarantee.InterestRate * 100 }}%
                        </td>
                        <td class="col-sm-1 click_toggle" context="contextPaidGuarantees" id="contextMenu"><div id="contextMenu"></div> </td>
                    </tr>

                </tbody>
            </table>
            <ul id="contextPaidGuarantees" class="dropdown-menu">
                <li ng-if="$root.SessionProperties.SourceType == 2 && selectedQuality==10"><a href="" style="color: black;text-decoration:none!important ;" ng-controller="PopUpCtrl" ng-click="params={product:selectedPaidGuarantee,orderType:141};openWindow('/LoanProductActivationOrder/PersonalLoanProductActivationOrder','Վճարված երաշխիքի ակտիվացում','newLoanProductActivation')">Ակտիվացում</a></li>
                <li ng-if="selectedPaidGuaranteesIsAccessible"><a style="color: black;text-decoration:none!important ;" ui-sref="paidGuaranteeDetails({ productId : selectedProductId,closedPaidGuarantee:selectedClosedPaidGuarantee })">Մանրամասն դիտարկում</a></li>

            </ul>
        </div>
    </div>
</div>



