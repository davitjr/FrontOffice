<div id="loanProductLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form id="loanApplicationDetailsForm" ng-controller="LoanApplicationCtrl"  >
    <div ng-if="getbydocid!=true" ng-init="getLoanApplication(ProductId)"></div>
    <div ng-if="getbydocid" ng-init="getLoanApplicationByDocId(docid)"></div>
    <loading-control style="margin-left:260px" scopevariable="loanApplication"></loading-control>
    <div id="loanApplicationDetails_menu" class="menu-bar dialog-menu light-green " ng-show="loanApplication.ProductType==54" style="min-width:600px;">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-5 " ng-if="loanApplication.Quality==1" ng-click="saveLoanApplicationQualityChangeOrder(160,loanApplication.ProductId)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon area-customer-service-icon">Վերլուծություն</span>
            </li>
            <li class="root-menu-item-5 " ng-if="loanApplication.Quality==2" ng-click="saveLoanApplicationQualityChangeOrder(161,loanApplication.ProductId)">
                <span id="h-menu-item-5"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Հաստատել</span>
            </li>
            <li class="root-menu-item-5 " ng-if="loanApplication.Quality==2 || loanApplication.Quality==1" 
                ng-controller="PopUpCtrl" ng-click="params={loanApplication:loanApplication};openWindow('/LoanApplication/LoanApplicationTerminationOrder','Հրաժարմնա հայտ','loanApplicationTerminationOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Հրաժարվել</span>
            </li>
            <li class="root-menu-item-5 " ng-if="getbydocid!=true" onclick="CloseBPDialog('loanApplicationDetails')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Ելք</span>
            </li>
            <li class="root-menu-item-5 " ng-if="getbydocid" onclick="CloseBPDialog('newloan')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Ելք</span>
            </li>
        </ul>
    </div>
    <div class="product-details bhoechie-tab-content" style="padding-left:10px;min-width:600px;">
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Դիմումի հերթական համար</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.LoanApplicationNumber}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Դիմումի ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.ApplicationDate  | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վարկի տեսակ</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.ProductTypeDescription}}</div>
        </div>
        <div class="product-detail-row" ng-if="loanApplication.CardNumber">
            <div class="product-detail-cell product-detail-lable">Քարտի համար</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.CardNumber}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Դիմումի գումար</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.Amount | number : 2 }} {{ loanApplication.Currency }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վարկի տևողություն</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.Duration}} ամիս</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Տոկոսադրույք</div>
            <div class="product-detail-cell product-detail-value">{{(loanApplication.InterestRateOffered * 100) | number:2}} %</div>
        </div>
        <div class="product-detail-row" ng-if="order.CommunicationTypeDescription!=undefined">
            <div class="product-detail-cell product-detail-lable">Հաղորդակցման եղանակ</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.CommunicationTypeDescription}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Օգտագործման երկիր</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.LoanUseCountryDescription}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Օգտագործման մարզ</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.LoanUseRegionDescription}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Օգտագործման շրջան</div>
            <div class="product-detail-cell product-detail-value">{{loanApplication.LoanUseLocalityDescription}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <span class="product-detail-cell product-detail-value" ng-class="{ 'redBold': (loanApplication.Quality==6) ,'blueBold':loanApplication.Quality==1  }">{{ loanApplication.QualityDescription }}</span>
        </div>
        <div ng-if="loanApplication.Quality!=1 && loanApplication.ProductType == 54" ng-init="getLoanApplicationFicoScoreResults(loanApplication.ProductId,loanApplication.ApplicationDate)"></div>
        <div class="product-detail-row" ng-if="ficoScoreResults">
            <div class="product-detail-cell product-detail-lable">FICO Սքոր</div>
            <div class="product-detail-cell product-detail-value" style="font-weight:bold;">{{ficoScoreResults[0].FicoScore }}
                <span ng-controller="PopUpCtrl" ng-click="params={ficoScoreResults:ficoScoreResults};openWindow('/LoanApplication/FicoScoreDetails','FICO սքորի տվյալներ','ficoScoreDetails')" title="FICO սքորի տվյալներ" class="glyphicon glyphicon-info-sign" style="left:5pt; color: #337AB7;cursor:pointer">

                </span>
            </div>
        </div>
        <div class="product-detail-row" ng-if="loanApplication.Quality!=1" >
            <div class="product-detail-cell product-detail-lable">ԱՌԱՋԱՐԿՎՈՂ ԳՈՒՄԱՐ</div>
            <div class="product-detail-cell product-detail-value" style="font-weight:bold;">{{loanApplication.OfferedAmount | number : 2 }} {{ loanApplication.Currency }}</div>
        </div>
        <div class="product-detail-row" ng-if="loanApplication.Quality==6">
            <div class="product-detail-cell product-detail-lable">Մերժման պատճառ</div>
            <div class="product-detail-cell product-detail-value redBold" >{{loanApplication.RejectReason }}</div>
        </div>
        <div class="product-detail-row" ng-if="loanApplication.Quality==7">
            <div class="product-detail-cell product-detail-lable">Հրաժարման պատճառ</div>
            <div class="product-detail-cell product-detail-value redBold">{{loanApplication.RefuseReason }}</div>
        </div>
    </div>
</form>

