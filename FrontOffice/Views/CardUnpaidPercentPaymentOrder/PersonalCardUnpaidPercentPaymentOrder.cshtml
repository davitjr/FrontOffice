
@{
    Layout = null;
}


<style type="text/css">
    #cardUnpaidPercentPaymentOrderForm .ui-widget input {
        font-family: 'webly_semibold';
    }

    .input-group-addon {
        width: 0%;
    }

         #cardUnpaidPercentPaymentOrderForm {
        min-width:650px;
    }
</style>

<div id="cardUnpaidPercentPaymentOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form id="cardUnpaidPercentPaymentOrderForm" ng-controller="CardUnpaidPercentPaymentOrderCtrl" style="min-width:650px;" name="CardUnpaidPercentPaymentOrderForm" role="form" novalidate class="form-horizontal" data-ng-init="getAccountsForCurrency()" prevent-enter-submit labels-required>
    <div id="cardUnpaidPercentPayment_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="CardUnpaidPercentPaymentOrderForm.$setSubmitted();CardUnpaidPercentPaymentOrderForm.$valid && saveCardUnpaidPercentPaymentOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('cardUnpaidPercentPayment')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
   
    <div>
        <div class="col-sm-10">
            <div style="max-width:520px">
                <errors></errors>
            </div>

            <div class="form-group">

                <label class="tab_title col-sm-4  text-right" for="CardNumber">Քարտի համար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" class="form-control tab_title" style="text-align: left;" id="CardNumber" name="CardNumber" ng-model="card.CardNumber">
                    </div>
                </div>

            </div>


            <div class="form-group">
                <label class="tab_title col-sm-4 text-right" for="CardNumber">Տոկոսագումար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="input-group col-sm-12">
                            <input disabled="disabled" type="text" ng-model="PositiveRate" id="PositiveRate" name="PositiveRate" class="form-control tab_title" fcsa-number />
                            <span class="input-group-addon" id="basic-addon2"> {{card.Currency}} </span>
                        </div>
                        @*<input disabled="disabled" class="form-control tab_title" style="text-align: left;" id="PositiveRate" name="PositiveRate" ng-model="PositiveRate" fcsa-number> <span>{{card.Currency}}</span>*@
                    </div>
                    <div class="row">
                        <ng-messages class="errors" ng-if="CardUnpaidPercentPaymentOrderForm.$submitted && !(card.PositiveRate > 0)">Առկա չէ չվճարված տոկոսագումար</ng-messages>
                    </div>
                </div>
            </div>
            <div class="form-group" ng-if="card.Currency == 'AMD'">
                <label class="tab_title col-sm-4  text-right" for="CardNumber">Վճարման հաշիվ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" class="form-control tab_title" style="text-align: left;" id="AccountNumber" name="AccountNumber" ng-model="order.Account.AccountNumber" required>
                    </div>
                </div>
            </div>
            <div class="form-group" style="margin-left:0;">
                <paymentaccount ng-if="card.Currency != 'AMD'"
                                nameforaccount="'Վճարման հաշիվ'"
                                accounts="Accounts"
                                account="order.Account"
                                accountselectname="Account"
                                check="0">
                </paymentaccount>
            </div>
            <div class="row">
                <div class="col-sm-4"></div>
                <ng-messages ng-if="CardUnpaidPercentPaymentOrderForm.$submitted || CardUnpaidPercentPaymentOrderForm.Account.$dirty"
                             for="CardUnpaidPercentPaymentOrderForm.Account.$error">
                    <ng-message when="required" class="errors">
                        Հաշիվը ընտրված չէ
                    </ng-message>
                </ng-messages>
            </div>
        </div>
    </div>
   
</form>

