@{
    Layout = null;
}
<form style="width:500px" ng-controller="DemandDepositRateChangeOrderCtrl" data-ng-init="getDemandDepositRateChangeOrder(selectedOrderId)">
    <loading-control style="margin-left:20em" scopevariable="order"></loading-control>
    <div ng-show="order" class="menu-bar dialog-menu light-green " style="margin-left:-5px;margin-top:0">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-5 " ng-show="order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50" ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հրաժարման հայտ','removalOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Հրաժարման հայտ</span>
            </li>
        </ul>
    </div>

    <div ng-show="order" class="product-details bhoechie-tab-content" style="min-width:500px;padding-left:10px">

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հայտի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.Id}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{order.RegistrationDateString}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Գործառնական օր</div>
            <div class="product-detail-cell product-detail-value">{{order.OperationDateString}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ցպահանջ ավանդային հաշիվ</div>
            <div class="product-detail-cell product-detail-value">{{order.DemandDepositAccount.AccountNumber}} {{order.DemandDepositAccount.Currency}}</div>
        </div>



        <div class="product-detail-row" ng-if="order.TariffGroup!=1 && order.TariffGroup!=3">
            <div class="product-detail-cell product-detail-lable">Տոկոսադրույք</div>
            <div class="product-detail-cell product-detail-value">{{(order.Rate*100) | number:2}} %</div>
        </div>
        <div class="product-detail-row" ng-if="order.TariffGroup!=1 && order.TariffGroup!=3">
            <div class="product-detail-cell product-detail-lable">Գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.Amount | number:2}} -ից ավել</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Սակագնի տեսակ</div>
            <div class="product-detail-cell product-detail-value">{{order.TariffGroupDescription}}</div>
        </div>

        <div class="product-detail-row" ng-if="order.DocumentDate!=null">
            <div class="product-detail-cell product-detail-lable" ng-if="order.TariffGroup!=1">Հրամանի ամսաթիվ</div>
            <div class="product-detail-cell product-detail-lable" ng-if="order.TariffGroup==1">Փակման հրամանի ամսաթիվ</div>
            <div class="product-detail-cell product-detail-value">{{order.DocumentDate | mydate | date:'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row" ng-if="order.DocumentDate!=null">
            <div class="product-detail-cell product-detail-lable" ng-if="order.TariffGroup!=1">Հրամանի համար</div>
            <div class="product-detail-cell product-detail-lable" ng-if="order.TariffGroup==1">Փակման հրամանի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.DocumentNumber}}</div>
        </div>




        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div ng-if="order.Quality==30" class="product-detail-cell product-detail-value greenStyle">{{order.QualityDescription}}</div>
            <div ng-if="order.Quality==31" class="product-detail-cell product-detail-value redStyle">{{order.QualityDescription}}</div>
            <div ng-if="order.Quality!=31 && order.Quality!=30" class="product-detail-cell product-detail-value">{{order.QualityDescription}}</div>
        </div>

        <div ng-if="order.Quality==31" class="">
            <div ng-controller="OrderCtrl" ng-init="getOrderRejectHistory(selectedOrderId)" class="" style="clear:both;color:#6F6A6A;font-weight:bold">Մերժման պատճառ`</div>
            <div class="redStyle">&nbsp;&nbsp;&nbsp;{{ rejectHistory.ReasonDescription }}</div>
        </div>
    </div>
    <div style="clear:both;color:#6F6A6A;font-weight:bold;margin-left:10px">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>
</form>
