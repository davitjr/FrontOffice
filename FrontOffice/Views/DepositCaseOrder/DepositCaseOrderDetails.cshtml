@{
    Layout = null;
}
<form style="width:500px" ng-controller="DepositCaseOrderCtrl" data-ng-init="getDepositCaseOrder(selectedOrderId)">
    <loading-control style="margin-left:20em" scopevariable="order"></loading-control>
    <div ng-show="order"  class="menu-bar dialog-menu light-green " style="margin-left:-5px;margin-top:0">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-5 " ng-if="order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50" ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հրաժարման հայտ','removalOrder',callbackgetHBActivationOrder)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Հրաժարման հայտ</span>
            </li>
            <li class="root-menu-item-5 " ng-if="order.Quality!=undefined && order.Quality == 30 " ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հեռացման հայտ','removalOrder',callbackgetPaymentOrder)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հեռացման հայտ</span>
            </li>
        </ul>
    </div>

    <div ng-show="order" class="product-details bhoechie-tab-content" style="min-width:500px;padding-left:10px">

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հայտի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.Id}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{order.RegistrationDateString}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Գործառնական օր</div>
            <div class="product-detail-cell product-detail-value">{{order.OperationDateString}}</div>
        </div>


        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պայմանագրի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.ContractNumber}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ավտոմատ երկարաձգում</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.RecontractPossibility==true?'Այո':'Ոչ'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Համատեղ</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.JointType!=1?'Ոչ':'Այո'}}</div>
        </div>

        <div class="product-detail-row" ng-if="order.DepositCase.JointType==1">
            <div class=" product-detail-cell product-detail-lable">Պայմանագրի տեսակ</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.ContractType==1?'Միաժամանակյա':'Ոչ միաժամանակյա'}}</div>
        </div>
    
        <div class="product-detail-row" ng-repeat="Customer in order.DepositCase.JointCustomers" ng-if="order.DepositCase.JointType==1">
            <div class=" product-detail-cell product-detail-lable">Պահատու 2</div>
            <div class="product-detail-cell product-detail-value">{{::Customer.value}}</div>
        </div>


        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պայմանագրի սկիզբ</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.StartDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պայմանագրի վերջ</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.EndDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պահատուփի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.CaseNumber}}</div>
        </div>

        <div class="product-detail-row" ng-if="order.DepositCase.ConnectAccount.AccountNumber!=undefined">
            <div class="product-detail-cell product-detail-lable">Ընթացիք հաշիվ</div>
            <div class="product-detail-cell product-detail-value">{{order.DepositCase.ConnectAccount.AccountNumber}} {{order.DepositCase.ConnectAccount.Currency}}</div>
        </div>

        <div class="product-detail-row" ng-if="order.Amount>0">
            <div class="product-detail-cell product-detail-lable">Գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.Amount | number:2}} {{order.DepositCase.ConnectAccount.Currency}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div ng-if="order.Quality==30" class="product-detail-cell product-detail-value greenStyle">{{order.QualityDescription}}</div>
            <div ng-if="order.Quality==31" class="product-detail-cell product-detail-value redStyle">{{order.QualityDescription}}</div>
            <div ng-if="order.Quality!=31 && order.Quality!=30" class="product-detail-cell product-detail-value">{{order.QualityDescription}}</div>
        </div>

        <div ng-if="order.Quality==31" class="">
            <div ng-controller="OrderCtrl" ng-init="getOrderRejectHistory(selectedOrderId)" class="" style="clear:both;color:#6F6A6A;font-weight:bold">Մերժման պատճառ`</div>
            <div class="redStyle">&nbsp;&nbsp;&nbsp;{{ rejectHistory.ReasonDescription }}</div>
        </div>
    </div>
    <div style="clear:both;color:#6F6A6A;font-weight:bold;margin-left:10px">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>
</form>
