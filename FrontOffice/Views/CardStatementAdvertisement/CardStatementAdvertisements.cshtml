@{
    Layout = null;
}
<style>
    #summary tr {
        height: auto;
        max-width: 100%;
    }

</style>
<form name="AllCardsAdvertisementsFormName" id="AllCardsAdvertisementsForm" ng-controller="AllCardsAdvertisementsCtrl" ng-init="getAllCardsAdvertisements()" novalidate style="margin-top:15px">
    <div id="cardStatementAdvertisementLoad" class="overlay hidden">
        <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
    </div>
    <div class="col-sm-6" style="padding:0px">
        <div class="product-container col-sm-12" style="min-width:810px;margin-top:-5px;padding:0px">
            <div class="header-title">
                Քարտային քաղվածքների գովազդներ
                <div class="product-collapse tipB fa fa-chevron-down" style="padding-right:17px;" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
            </div>
            
    <table id="allCardAdvertisements" class="product-collapsable-section">
        <thead>
            <tr class="product-container-header">
                <td rowspan="2" class="text-center col-xs-2" style="padding-right:40px">Տեսակ</td>
                <td colspan="5" class="text-center col-xs-4" >
                    <span style="padding-right:80px">Գովազդներ</span>
                    <span style="padding-right:5px">
                        <i class="add-new-product  ng-scope"  data-toggle="tooltip" data-trigger="hover" data-placement="bottom" title="" ng-controller="PopUpCtrl" ng-click="openWindow('/CardStatementAdvertisement/AddNewCardStatementAdvertisement','Գովազդի մուտքագրում','addNewAdvertisement')" data-original-title="Քարտային քաղվածքի նոր գովազդ"></i>
                    </span>
                </td>
            </tr>
            <tr class="product-container-header">
                <td class="text-center col-xs-1">I</td>
                <td class="text-center col-xs-1">II</td>
                <td class="text-center col-xs-1">III</td>
                <td class="text-center col-xs-1">IV</td>
                <td class="text-center col-xs-1"></td>
            </tr>
        </thead>
        <tbody>
            <tr class ="border: 1px ridge rgba(128, 128, 128, 0.15);" ng-repeat="cardAdvertisements in allCardsAdvertisements" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index)" style="max-height:200px">
                <td class="col-xs-1">
                    <img ng-if="cardAdvertisements.CardSystem==3" src="~/Content/Images/Amex_icon.png" height="20" width="20" align="left" style="margin-right:10px;margin-top:3px;" />
                    <img ng-if="cardAdvertisements.CardSystem==4" src="~/Content/Images/Visa_icon.png" height="20" width="20" align="left" style="margin-right:10px;margin-top:3px;" />
                    <img ng-if="cardAdvertisements.CardSystem==5" src="~/Content/Images/MC_icon.png" height="20" width="20" align="left" style="margin-right:10px;margin-top:3px;" />
                    <img ng-if="cardAdvertisements.CardSystem==9" src="~/Content/Images/arca.png" height="20" width="20" align="left" style="margin-right:10px;margin-top:3px;" />
                    <span>{{::cardAdvertisements.CardTypeDescription}}</span>
                </td>
                <td ng-repeat="check in cardAdvertisements.OneCardAdvertisementsCheckBoxes" class="col-sm-2" style="text-align:center">
                        <input type="checkbox" disabled="disabled" class="checkbox-inline" id="advertisement" ng-model="check.isCheck" ng-true-value="1" ng-false-value="0" />
                </td>
                <td class="click_toggle" style="padding-left:48px;" context="context" id="contextMenu"><div id="contextMenu"></div> </td>
            </tr>
        </tbody>
    </table>



        </div>
    </div>
    <ul id="context" class="dropdown-menu">
        <li><a style="color: black;text-decoration:none!important ;" class="my_button" ng-controller="PopUpCtrl" ng-click="params={CardType:currentCardAdvertisements.CardType,CardTypeDescription:currentCardAdvertisements.CardTypeDescription,CardSystemDescription:currentCardAdvertisements.CardSystemDescription}; openWindow('/CardStatementAdvertisement/OneCardAdvertisementsDetails','Մանրամասն դիտարկում ','cardstatementadvertisement')">Դիտարկել</a></li>
    </ul>
</form>
