@{
    Layout = null;
}
<style>
    #object-fit_fill {
        object-fit: fill
    }
</style>
<form ng-show="false">
    <div class="menu-bar dialog-menu light-green">
    </div>
    <div>
    </div>
</form>
<form id="OneCardAdvertisementsDetails" ng-controller="AllCardsAdvertisementsCtrl" ng-init="getOneCardAdvertisements(CardType)" style="max-width:900px;overflow-x:hidden" name="OneCardAdvertisementsDetailsForm" role="form" class="form-horizontal">
    <div id="oneCardAdvertisementsDetailsLoad" class="overlay hidden">
        <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
    </div>

    <div class="col-sm-6" style="padding:0px">
        <div class="product-container col-sm-12" style="min-width:820px;margin-top:-5px;padding:0px;margin-left: 0px">
            <ul id="menu" class="dialog-menu">
                <li class="menu-bar dialog-menu light-green details-menu ng-scope" style="max-width:900px;">
                    <span id="h-menu-item-2" ng-click="deactivateAdvertisement()" style="font-size:15px;color:black"><img id="h-menu-icon-2" class="cancelButton h-menu-icon">&nbsp;Փակել գովազդը</span>
                </li>
            </ul>

            <div class="header-title">
                {{CardTypeDescription}}
                <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
            </div>

            <div class="product-collapsable-section">
                <div class="product-container-header" style="height:30px">
                    <div class="col-sm-12">
                        <div class="col-sm-1" style="text-align:center">Դիրք</div>
                        <div>
                            <div class="col-sm-2" style="text-align:center">Անուն</div>
                            <div class="col-sm-2" style="text-align:center;margin-left:50px">Ֆայլ</div>
                            <div class="col-sm-3" style="text-align:center;margin-left:70px">Մուտքագրման ա/թ</div>
                            <div class="col-sm-2" style="text-align:center;">Մուտքագրող</div>
                        </div>
                    </div>
                </div>
                <div class="product-details bhoechie-tab-content" style="min-width:600px;padding-left:10px;">
                    <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                        <tbody>
                            <tr ng-repeat="oneCardAdvertisement in oneCardAdvertisements" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRowForOneAdvertisement($index)" style="max-height:220px">
                                <td>
                                    <div>
                                        <span class="col-sm-1 " style="text-align:left;"><b>{{oneCardAdvertisement.PositionWithRomanNumeric.romanNumeric}}</b></span>
                                        <div ng-repeat="oneAdvertisementFile in oneCardAdvertisement.Files">
                                            <span class="col-sm-2" style="text-align:left;display:block;word-wrap:break-word;white-space:normal;">{{oneAdvertisementFile.Name}}</span>
                                            <div class="thumbnail col-sm-2" style="margin-bottom:5px;background-image: url({{oneAdvertisementFile.Photo}}); background-repeat:no-repeat; max-width:250px;max-height:110px;min-height:110px;min-width:250px;background-size:cover" id="object-fit_fill">
                                                <button type="button" ng-click="showAdvertisementOneFile(oneAdvertisementFile.ID)" class="btn  btn-primary btn-xs"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></button>
                                            </div>
                                            <span class="col-sm-3" style="text-align:center">{{oneAdvertisementFile.RegistrationDate | mydate | date: 'dd/MM/yyyy' }}</span>
                                            <div class="customerInfo col-sm-2">
                                                <span style="text-align:center;margin-left:40px;">{{oneAdvertisementFile.SetNumber}}</span>
                                                <span style="color: #337AB7; cursor:pointer;" ng-controller="PopUpCtrl" ng-click="params={setNumber:oneAdvertisementFile.SetNumber}; openWindow('/Home/UserDetails','Ֆայլը  մուտքագրողի  տվյալներ','userdetails')" class="glyphicon glyphicon-info-sign"></span>
                                            </div>
                                        </div>
                                    </div><br /><br />
                                    <div><a href="{{oneCardAdvertisement.URL}}" class="col-sm-12" target="_blank">{{oneCardAdvertisement.URL}}</a></div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
