<form ng-controller="FondChangeOrderCtrl" data-ng-init="getFondByID(fondID); initFondChangeOrder()" name="FondChangeOrderForm" id="FondChangeOrderForm" role="form" style="min-width:600px;min-height:570px;" novalidate class="form-horizontal" labels-required>

    <div id="FondOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="FondChangeOrderForm.$setSubmitted(); saveFondChangeOrder()">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('fondchange')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
    </div>
 

    <div class="col-sm-12" style="padding:0;padding-left:5px;">

        <div class="col-sm-12" style="max-width:1000px">

            <div style="max-width:630px">
                <errors></errors>
            </div>


            <div class="product-details bhoechie-tab-content" style="min-width:210px;margin-left:10px;">
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Համար</div>
                    <div class="product-detail-cell product-detail-value">{{fond.ID}}</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Անվանում</div>
                    <div class="product-detail-cell product-detail-value">{{::fond.Description}}</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Սուբսիդավորում</div>
                    <div class="product-detail-cell product-detail-value">{{fond.IsSubsidia==true?'Այո':'Ոչ'}}</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Գործող ֆոնդ</div>
                    <div class="product-detail-cell product-detail-value">{{fond.IsActive==true?'Այո':'Ոչ'}}</div>
                </div>
            </div>

