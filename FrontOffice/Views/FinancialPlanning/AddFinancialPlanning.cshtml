@{
    Layout = null;
}

<form id="addFinancialPlanningForm" ng-controller="FinancialPlanningCtrl" style="width:400px;min-height:175px;overflow-x:hidden" name="addFinancialPlanningForm" role="form" class="form-horizontal" labels-required >
    <div id="addFinancialPlanningForm_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="addFinancialPlanningForm.$setSubmitted();addFinancialPlanningForm.$valid && SaveFinancialPlaning();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('addFinancialPlanning')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
    </div>
    <div>
        <div style="max-width:400px;margin-left:5px">
            <errors></errors>
        </div>
        <div class="form-group col-sm-12" style="padding-left:20px">
            <label class="tab_title col-sm-5 text-right" style="padding-left: 9px;">Վերբեռնել</label>
            <div class="col-sm-7">
                <input type="file" id="readFile" class="form-control">
                <span ng-if="addFinancialPlanningForm.$submitted  && checkFile()" style="color:red" class="errors">
                    Ֆայլը ընտրված չէ
                </span>
            </div>
        </div>
        <div class="form-group col-sm-12" style="padding-left:20px">
            <label class="tab_title col-sm-5 text-right" style="padding-left: 9px;">Պլանի տարբերակ</label>
            <div data-ng-init="GetFinancialPlanningTypes()" class="col-sm-7">
                <loading-control scopevariable="financialPlanningTypes"></loading-control>
                <select ng-show="financialPlanningTypes" data-ng-model="financialPlanningType" name="financialPlanningType" id="financialPlanningType" class="form-control"
                        data-ng-options="v as k for (k, v) in financialPlanningTypes">
                @*    <option selected="selected" value="type" hidden>Բոլորը</option>*@
                </select>
                <ng-messages ng-if="addFinancialPlanningForm.$submitted || addFinancialPlanningForm.financialPlanningType.$dirty"
                             for="addFinancialPlanningForm.financialPlanningType.$error">
                    <ng-message when="required" class="errors">
                        Տեսակը նշված չէ
                    </ng-message>
                </ng-messages>
            </div>
        </div>
    </div>
</form>