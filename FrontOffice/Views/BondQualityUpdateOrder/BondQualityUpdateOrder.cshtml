@{
    Layout = null;
}


<div id="bondQualityUpdateOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="BondQualityUpdateOrderCtrl" ng-init="initBondQualityUpdateOrder(bondId, subType)" name="BondQualityUpdateOrderForm" style="min-width:550px" id="BondQualityUpdateOrderForm" role="form" class="form-horizontal" prevent-enter-submit novalidate labels-required>
    <div id="receivecheque_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="BondQualityUpdateOrderForm.$setSubmitted();BondQualityUpdateOrderForm.$valid && saveBondQualityUpdateOrder(bondId);">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newBondQualityUpdateOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div class="col-sm-12" style="padding-left:10px">
        <div style="max-width:540px;">
            <errors></errors>
        </div>
        <div class="form-group">
            <label class="tab_title col-sm-5" for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-7 ">
                <div class="row">
                    <input type="date" disabled="disabled" class="form-control tab_title unstyled" id="RegistrationDate" name="RegistrationDate" ng-model="order.RegistrationDate" style="text-align:left;" required>
                </div>

            </div>
        </div>

        <div class="form-group" ng-if="order.SubType == 3">
            <label class="tab_title col-sm-5" for="ReasonId">Մերժման պատճառ<span class='redStyle'>*</span></label>
            <div class="col-sm-7">
                <div class="row">
                    <loading-control scopevariable="reasons"></loading-control>
                    <div data-ng-init="getBondRejectReasonTypes()">
                        <select ng-show="reasons" data-ng-model="order.ReasonId" class="form-control"
                                data-ng-options="k as v for (k,v) in reasons" name="ReasonId" required>
                            <option value="" style="margin-left:25px">-Ընտրեք-</option>
                        </select>
                    </div>

                </div>
                <div class="row">
                    <ng-messages ng-if="BondQualityUpdateOrderForm.$submitted"
                                 for="BondQualityUpdateOrderForm.ReasonId.$error">
                        <ng-message when="required" class="errors">
                            Մերժման պատճառը մուտքագրված չէ
                        </ng-message>

                    </ng-messages>
                </div>
            </div>
           
        </div>

        <div class="form-group" ng-if="order.SubType == 3 && order.ReasonId == 99">
            <label class="tab_title col-sm-5" for="ReasonDescription">Մերժման պատճառի նկարագրություն<span class='redStyle'>*</span></label>
            <div class="col-sm-7">
                <div class="row">
                    <input type="text" maxlength="500" class="form-control tab_title unstyled" id="ReasonDescription" name="ReasonDescription" ng-model="order.ReasonDescription" style="text-align:left;" required>
                </div>
                <div class="row">
                    <ng-messages ng-if="BondQualityUpdateOrderForm.$submitted"
                                 for="BondQualityUpdateOrderForm.ReasonDescription.$error">
                        <ng-message when="required" class="errors">
                            Մերժման պատճառի նկարագրությունը մուտքագրված չէ
                        </ng-message>

                    </ng-messages>
                </div>
            </div>
          
        </div>
    </div>
   
  
</form>
