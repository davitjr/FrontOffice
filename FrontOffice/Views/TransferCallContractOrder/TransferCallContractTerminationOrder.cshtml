
@{
    Layout = null;
}

<style type="text/css">
    #transferCallContractTerminationLoad .ui-widget input {
        font-family: 'webly_semibold';
    }
</style>
<div id="transferCallContractTerminationLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>

<form ng-controller="TransferCallContractOrderCtrl" style="min-width:550px;">

    <div id="contractTermination_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-6 " ng-click="saveTransferCallContractTerminationOrder();">
                <span id="h-menu-item-6"><img id="h-menu-icon-6" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newTransferCallContractTerminationOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <errors></errors>
    <div class="col-md-11 ">
        <div class="col-sm-5 my_label">Հերթական համար</div><div class="col-sm-7 my_text1">{{transferCallContract.ContractId}}</div>
        <div class="col-sm-5 my_label line_height" style="clear:both">Համաձայնագրի համար</div><div class="col-sm-7 my_text1 line_height">{{transferCallContract.ContractNumber}} </div>
        <div class="col-sm-5 my_label line_height" style="clear:both">Համաձայնագրի գաղտնաբառ</div><div class="col-sm-7 my_text1 line_height"> {{transferCallContract.ContractPassword}}</div>
        <div class="col-sm-5 my_label line_height" style="clear:both">Կնքման ա/թ</div><div class="col-sm-7 my_text1 line_height"> {{transferCallContract.ContractDate | mydate | date: 'dd/MM/yyyy'}}</div>
        <div class="col-sm-5 my_label line_height" style="clear:both">Հաշիվ</div><div class="col-sm-7 my_text1 line_height"> {{transferCallContract.Account.AccountNumber}} {{transferCallContract.Account.Currency}}</div>
        <div class="col-sm-5 my_label line_height" style="clear:both">Ներգրավող ՊԿ</div><div class="col-sm-7 my_text1 line_height"> {{transferCallContract.InvolvingSetNumber}}</div>
        <p class="text-left"></p>
        <br />
        <div class="col-sm-12 form-group" style="padding:0">
            <label class="tab_title col-sm-5" for="RegistrationDate">Փակման ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-8 ">
                    <input type="date" class="form-control tab_title unstyled" style="text-align: left;" id="ClosingDate" name="ClosingDate" ng-model="order.TransferCallContractDetails.ClosingDate" required>
                </div>
            </div>
        </div>

        <br />



    </div>

</form>
