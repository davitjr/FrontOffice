@{
    Layout = null;
}


<div id="remittanceCancellationOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="RemittanceCancellationOrderCtrl" ng-init="initRemittanceCancellationOrder()" name="RemittanceCancellationOrderForm" style="min-width:550px" id="RemittanceCancellationOrderForm" role="form" class="form-horizontal" prevent-enter-submit novalidate labels-required>
    <div id="receivecheque_menu" class="menu-bar dialog-menu light-green" ng-if="order.subType == 2 || (order.subType == 1 && canCancelSentRemittance)">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="RemittanceCancellationOrderForm.$setSubmitted();RemittanceCancellationOrderForm.$valid && saveRemittanceCancellationOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
           
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newRemittanceCancellationOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div class="col-sm-12" style="padding-left:10px" ng-if="order.subType == 2 || (order.subType == 1 && canCancelSentRemittance)">
        <div style="max-width:540px;">
            <errors></errors>
        </div>
        <div class="form-group">
            <label class="tab_title col-sm-5" for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-7 ">
                <div class="row">
                    <input type="date" disabled="disabled" class="form-control tab_title unstyled" id="RegistrationDate" name="RegistrationDate" ng-model="order.RegistrationDate" style="text-align:left;" required>
                </div>

            </div>
        </div>

        <div class="form-group">
            <label class="tab_title col-sm-5" for="URN">Փոխանցման հսկիչ համար</label>
            <div class="col-sm-7 ">
                <div class="row">
                    <input type="text" disabled="disabled" class="form-control tab_title unstyled" id="URN" name="URN" ng-model="order.URN" style="text-align:left;" required>
                </div>

            </div>
        </div>

        <div class="form-group">
            <label class="tab_title col-sm-5" for="CancellationReversalCode">Չեղարկման/վերադարձման գործողության տեսակ</label>
         
            <div class="col-sm-7">
                <div class="row">
                    <loading-control scopevariable="cancellationReversalCodes"></loading-control>
                    <div data-ng-init="getCancellationReversalCodes()">
                        <select ng-show="cancellationReversalCodes" data-ng-model="order.CancellationReversalCode" class="form-control"
                                data-ng-options="k as v for (k,v) in cancellationReversalCodes" name="CancellationReversalCode" required>
                            <option value="" style="margin-left:25px">-Ընտրեք-</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <ng-messages ng-if="RemittanceCancellationOrderForm.$submitted"
                                 for="RemittanceCancellationOrderForm.CancellationReversalCode.$error">
                        <ng-message when="required" class="errors">
                            Չեղարկման/վերադարձման գործողության տեսակը մուտքագրված չէ
                        </ng-message>

                    </ng-messages>
                </div>
            </div>
        </div>     
    </div>


</form>
