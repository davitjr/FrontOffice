<script type="text/javascript">
    $("#cardTariffContractContent").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>
<div class="product-container" ng-controller="CardTariffContractCtrl" id="AllCardTariffContracts" data-ng-init="$root.SessionProperties.CustomerType != 6 && getCustomerCardTariffContracts()" ng-show="(hideBlank!='true' && cardTariffContracts.length==0) || (cardTariffContracts.length!=0 && cardTariffContracts.length!=undefined)">
    <div class="header-title">
        <a href="/#cardtariffcontracts" style="color:black;">Աշխատավարձային ծրագրեր</a>
        <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
    </div>
    <div class="product-collapsable-section">
        <div class="product-container-header">
            <div class="include-closed-products">
                <input type="checkbox" class="css-square-checkbox lrg" id="include-closed-CardTariffContracts" data-ng-model="filter" ng-true-value="2" ng-false-value="1" ng-change="QualityFilter()">
                <label for="include-closed-CardTariffContracts" name="include-closed-periodics-checkbox_lbl" class="css-label lrg custom-square-checkbox">Դիտել փակվածները</label>
            </div>
        </div>
        <div class="product-content-table custom-scroll" id="cardTariffContractContent" ng-class="{'product-content-table-full_height' : hideBlank!='true' }">
            <div ng-if="cardTariffContracts==undefined">
                <loading></loading>
            </div>
            <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;width:inherit">
                <tbody>
                    <tr ng-if="filter==1 && customerCardTariffContracts.length!=0" ng-repeat="contract in cardTariffContracts" ng-class="{'selected':$index==selectedRow}" ng-click="setClickedRow($index,contract);" style="cursor: pointer;" ng-dblclick="openCardTariffContractDetails();">
                        <td class="col-md-4">
                            <span class="tab_text">Աշխ․ ծրագրի համար` </span> {{ ::contract.TariffID }}
                            <br /> <span class="tab_text">Աշխ․ ծրագրի հիմք` </span> <span class="tab_title">{{ ::contract.ReasonDescription }}</span>

                        </td>
                        <td class="col-sm-1 click_toggle" context="contextCardTariffContracts" id="contextMenu"><div id="contextMenu"></div> </td>
                    </tr>
                    <tr ng-if="filter==1 && customerCardTariffContracts.length==0">
                        <td colspan="2" style="text-align:center;">
                            Առկա չեն գործող աշխատավարձային ծրագրեր
                        </td>
                    </tr>
                    <tr ng-if="filter!=1"><td style="color:red; border-width:3px" colspan="2">Փակված աշխատավարձային ծրագրեր </td></tr>
                    <tr  ng-if="closingCardTariffContracts.length!=0" ng-repeat="closingContract in closingCardTariffContracts" ng-class="{'selected':$index == selectedRowClose}" ng-click="setClickedRowClose($index,closingContract);" ng-dblclick="openCardTariffContractDetails();" style="cursor: pointer;">
                        <td class="col-md-4">
                            <span class="tab_text">Համար` </span> {{ closingContract.TariffID }}
                            <br /> <span class="tab_text">Տեսակ` </span> <span class="tab_title">{{ closingContract.ReasonDescription }}</span>
                           
                        </td>
                        <td class="col-sm-1 click_toggle" context="contextCardTariffContracts" id="contextMenu"><div id="contextMenu"></div> </td>
                    </tr>

                </tbody>
            </table>
        </div>
        <ul id="contextCardTariffContracts" class="dropdown-menu">
            <li><a style="color: black;text-decoration:none!important ;" ui-sref="cardTariffContractDetails({ selectedContract:selectedContract })">Մանրամասն դիտարկում</a></li>
            <li><a style="color: black;text-decoration:none!important ;" href="#" ng-click="printCardTarifContract(selectedContract.TariffID)">Վճարման հանձնարարագրի նմուշ</a></li>

        </ul>
    </div>
</div>





