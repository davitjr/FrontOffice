@{
    Layout = null;
}
<style>
.table-wrapper { 
    overflow-x:scroll;
    overflow-y:visible;
    width:900px;
}


td, th {
    border: 1px solid #cecece;
    width: 100px;
}

        .top th {
        font-size: 12px;
        }


</style>
<form ng-show="false">
    <div class="menu-bar dialog-menu light-green">
    </div>
    <div>
    </div>
</form>
<div class="table-wrapper"   ng-controller="LoanCtrl"  ng-init="getLoanProductProlongations(productId)">
    <div class="product-container" style="width:auto;min-width:900px">
        <div class="header-title" >
            Վարկային գծի երկարացման դիմումներ
            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>
        <div class="product-collapsable-section ">
            <div class="product-container-header col-sm-12"  style="height:auto;width:1200px;font-size:13px;text-align:center;">
                <div class="col-sm-1" >Վերջ</div>
                <div class="col-sm-1" >Տոկոսադրույք</div>
                <div class="col-sm-1" >Փաստացի տոկոսադրույք</div>
                <div class="col-sm-1" >Փաստացի տոկոսադրույք ծախսերով</div>
                <div class="col-sm-1" >Տուժանքի տոկոսադրույք</div>
                <div class="col-sm-1">Սկիզբ</div>
                <div class="col-sm-1" >Գրանցման ա/թ</div>
                <div class="col-sm-1" >Գրանցողի ՊԿ</div>
                <div class="col-sm-1" >Հաստատման ա/թ</div>
                <div class="col-sm-1" >Հաստատողի ՊԿ</div>
                <div class="col-sm-1" >Ակտիվացման ա/թ</div>
                <div class="col-sm-1" >Ակտիվացնողի ՊԿ</div>
            </div>
            <div class="product-content-table custom-scroll col-sm-12 " ng-class="{'product-content-table-full_height' : hideBlank!='true' }" style="min-height:100px;padding:0px">
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <tbody>
                        <tr ng-repeat="productProlongation in productProlongations">
                            <td style="text-align:center">{{::productProlongation.EndDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:center">{{::productProlongation.InterestRate*100 |number:2}} %</td>
                            <td style="text-align:center">{{::productProlongation.InterestRateEffective*100 | number:2}} %</td>
                            <td style="text-align:center">{{::productProlongation.InterestRateFull*100 | number:2}} %</td>
                            <td style="text-align:center">{{::productProlongation.PenaltyAddPercent*100 | number:2}} %</td>
                            <td style="text-align:center">{{::productProlongation.StartDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:center">{{::productProlongation.RegistrationDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:center">{{::productProlongation.RegistrationSetNumber}}</td>
                            <td style="text-align:center">{{::productProlongation.ConfirmationDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:center">{{::productProlongation.ConfirmationSetNumber}}</td>
                            <td style="text-align:center">{{::productProlongation.ActivationDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:center">{{::productProlongation.ActivationSetNumber}}</td>
                        </tr>
                        <tr ng-if="productProlongations.length==0">
                            <td colspan="12" style="text-align:left">Տվյալ վարկի/վարկային գծի երկարացման դիմումներ առկա չեն</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>