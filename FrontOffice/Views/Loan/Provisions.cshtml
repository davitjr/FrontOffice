@{
    Layout = null;
}
<div ng-controller="ProvisionCtrl" ng-init="getProductProvisions(productid)">
    <div class="product-container" style="width:90%">
        <div class="header-title">
            Գրավներ
            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>
        <div class="product-collapsable-section">
            <div class="product-container-header">

            </div>
            <div class="product-content-table-full_height custom-scroll" id="provisionsContent" style="min-height:100px;">
                <div ng-if="provisions==undefined">
                    <loading></loading>
                </div>
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <tbody>
                        <tr ng-repeat="provision in ::provisions" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index)" style="max-height:200px">
                            <td class="text-left col-sm-11">
                                <div style="margin-left: 5pt;">
                                    <div>
                                        <span class="my_label" style="font-size:13px">Գումար` </span>{{::provision.Amount | number:2}} {{::provision.Currency}}
                                    </div>
                                    <div>
                                        <span class="my_label" style="font-size:13px">Տեսակ՝ </span>{{ ::provision.TypeDescription }}
                                    </div>
                                    <div>
                                        <span class="my_label" style="font-size:13px">Նկարագրություն՝ </span>{{ ::provision.Description }}
                                    </div>
                                    <div>
                                        <span class="my_label" style="font-size:13px">Գրավի համար` </span>{{::provision.Id}}

                                        <button style="float: right !important" ng-controller="PopUpCtrl" ng-if="provision.Type == 1 || provision.Type == 2 || provision.Type == 3 || provision.Type == 4" ng-click="params={checkForDebitAccount:0,isLoanInsurance:isLoanInsurance,loanProductId:productId,IdPro:provision.Id,isProvision:true}; openWindow('/InsuranceOrder/PersonalInsuranceOrder','Ապահովագրության մուտքագրում','newInsuranceOrder')" data-original-title="Նոր պայմանագիր">Ավելացնել ապահովագրություն</button>

                                    </div>


                                </div>
                            </td>
                            <td class="col-sm-1 click_toggle" context="contextProvisions" id="contextMenu"><div id="contextMenu"></div> </td>
                        </tr>
                        <tr ng-if="provisions.length==0 ">
                            <td colspan="3" style="text-align:center;">
                                Տվյալները բացակայում են
                            </td>
                        </tr>
                    </tbody>
                </table>
                <ul id="contextProvisions" class="dropdown-menu">
                    <li><a style="color: black;text-decoration:none!important ;" href="" ng-controller="PopUpCtrl" class="my_button" ng-click="params={provision: selectedProvision};openWindow('/Provision/ProvisionDetails','Գրավի մանրամասներ','provisiondetails')">Դիտել</a></li>
                    <li><a style="color: black;text-decoration:none!important ;" href="" ng-controller="PopUpCtrl" class="my_button" ng-click="params={productId: selectedProvision.Id};openWindow('Provision/ProvisionOwners','Գրավին կից հաճախորդներ','owners')">Կից հաճախորդներ</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>