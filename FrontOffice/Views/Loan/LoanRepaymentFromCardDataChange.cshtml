@{
    Layout = null;
}

<div id="LoanRepaymentFromCardDataChangeLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="LoanCtrl" style="min-width:650px;" id="LoanRepaymentFromCardDataChangeID" name="LoanRepaymentFromCardDataChangeForm" role="form" novalidate class="form-horizontal" prevent-enter-submit>

    <div id="cardDataChangeOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="LoanRepaymentFromCardDataChangeForm.$setSubmitted();LoanRepaymentFromCardDataChangeForm.$valid && SaveLoanRepaymentFromCardDataChange(ActionName, appid, ChangeReasonAdd, EndDate)" ng-controller="LoanCtrl">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('LoanRepaymentFromCardDataChange')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div style="max-width:700px">
            <errors></errors>
        </div>
      
        <div class="col-sm-11">
            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="date" class="form-control ng-pristine ng-valid ng-not-empty" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="OperDay" required>
                    </div>
                </div>
            </div>            
            <div class=" form-group" ng-show="ActionName != 1">
                <label class="tab_title col-sm-5 " for="EndDate">Վերջ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input type="date" class="form-control tab_title" style="text-align: left;" id="EndDate" name="EndDate" ng-model="EndDate" ng-required="ActionName != 1">
                    </div>
                    <div class="row">
                        <ng-messages ng-if="LoanRepaymentFromCardDataChangeForm.$submitted || LoanRepaymentFromCardDataChangeForm.EndDate.$dirty" for="LoanRepaymentFromCardDataChangeForm.EndDate.$error">
                            <ng-message when="required" class="errors">
                                Վերջ դաշտը մուտքագրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>


            <div class="form-group ">
                <label class="tab_title col-sm-5" id="ChangeReasonAdd">Նշումներ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <textarea rows="3" style="text-align:left" onkeypress="return isArmenianUnicode(event.keyCode)" onpaste="return CheckPasteText(event)" ng-model="ChangeReasonAdd" id="ChangeReasonAdd" name="ChangeReasonAdd" class="form-control tab_title"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<div ng-if="OperDay>EndDate" class="col-md-10  errors">Մուտքագրման օրը պետք է փոքր լինի վերջից</div>*@
</form>











