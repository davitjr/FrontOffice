@{
    Layout = null;
}

<div id="GetLoanRepaymentFromCardDataChangeHistory" ng-init="GetLoanRepaymentFromCardDataChangeHistory(appid)" ng-controller="LoanCtrl">
    <div class="product-container" style="width:90%">
        <div class="header-title">
            Դադարեցնել քարտից վարկի մարումները

            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>
        <div class="product-collapsable-section">
            <div class="product-container-header">
                <div ng-show="LoanRepaymentFromCardDataChange.SetNumber == 0" ng-controller="PopUpCtrl" ng-click="params={ActionName: '0', appid:appid, EndDate:EndDateValue};openWindow('Loan/LoanRepaymentFromCardDataChangeForm','Ստեղծում','LoanRepaymentFromCardDataChange')" class="ng-scope">
                    <i class="add-new-product tipB" data-original-title="Նոր գրություն"></i>
                </div>

            </div>
            <div class="product-content-table-full_height custom-scroll" id="provisionsContent" style="min-height:100px;">

                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <tbody>
                        <tr ng-show="LoanRepaymentFromCardDataChange.SetNumber != 0" style="max-height:200px">

                            <td class="text-left col-sm-11">
                                <div style="margin-left: 5pt;">
                                    <div>
                                        <span class="my_label" style="font-size: 15px; color: #245775; height: 23px;">Գրանցման ա/թ` </span>{{LoanRepaymentFromCardDataChange.StartDate | mydate | date: 'dd/MM/yyyy'}}
                                    </div>
                                    
                                    <div>
                                        <span class="my_label" style="font-size: 15px; color: #245775; height: 23px;">Վերջ` </span>{{LoanRepaymentFromCardDataChange.EndDate | mydate | date: 'dd/MM/yyyy'}}
                                    </div>

                                    <div>
                                        <span class="my_label" style="font-size: 15px; color: #245775; height: 23px;">Մուտքագրողի ՊԿ՝ </span>{{LoanRepaymentFromCardDataChange.SetNumber}}
                                    </div>
                                    <div>
                                        <span class="my_label" style="font-size: 15px; color: #245775; height: 23px;">Նկարագրություն՝ </span>{{LoanRepaymentFromCardDataChange.Description}}
                                    </div>

                                </div>
                            </td>
                            <td class="col-sm-1 click_toggle" context="contextTokens1" id="contextMenu"><div id="contextMenu"></div> </td>
                        </tr>
                        <tr ng-show="LoanRepaymentFromCardDataChange.SetNumber == 0">
                            <td colspan="3" style="text-align:center;">
                                Տվյալները բացակայում են
                            </td>
                        </tr>
                    </tbody>
                </table>
                <ul id="contextTokens1" class="dropdown-menu">
                    <li> <a style="color: black;text-decoration:none!important ;" href="" class="my_button" ng-controller="PopUpCtrl" ng-click="params={ActionName: '1', appid:LoanRepaymentFromCardDataChange.AppId};openWindow('Loan/LoanRepaymentFromCardDataChangeForm','Հեռացում','LoanRepaymentFromCardDataChange')">Հեռացում </a></li>
                </ul>
            </div>
        </div>

    </div>


</div>










