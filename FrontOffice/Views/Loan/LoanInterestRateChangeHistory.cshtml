@{
    Layout = null;
}


<style>
    #freezeDetailsTable {
        overflow-x: hidden;
        overflow-y: hidden;
        width: 900px;
    }


        #freezeDetailsTable td, th {
            border: 1px solid #cecece;
            width: 100px;
            font-size: 12px;
        }

        #freezeDetailsTable top th {
            font-size: 12px;
        }

    #tbl table .top td {
        font-size: 12px;
    }
</style>


<form style="width:520px" ng-controller="LoanCtrl" ng-init="getLoanInterestRateChangeHistoryDetails(productID)">



    <div class="product-collapsable-section ">
       
            <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                <thead class="product-container-header">
                    <tr>
                        <td style="text-align:center;width:90px;">Փոփոխման ամսաթիվ</td>
                        <td style="text-align:center;width:104px;">Հին արժեք</td>
                        <td style="text-align:center;width:80px;">Նոր արժեք</td>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="loanInterestRateChangeHistoryDetail in loanInterestRateChangeHistoryDetails" class="">

                        <td style="text-align:center">{{::loanInterestRateChangeHistoryDetail.ChangeDate | mydate | date: 'dd/MM/yyyy'}}</td>
                        <td style="text-align:center">{{::loanInterestRateChangeHistoryDetail.InterestRateOld*100|number:2}}%</td>
                        <td style="text-align:center">{{::loanInterestRateChangeHistoryDetail.InterestRateNew*100|number:2}}%</td>
                    </tr>

                </tbody>
            </table>

        
    </div>  

</form>