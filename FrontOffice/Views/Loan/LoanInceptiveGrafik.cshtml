<style>
    #tbl table, #tbl th, #tbl td {
        border: 1px solid #cecece;
        border-collapse: collapse;
    }

    #tbl table {
        border-collapse: collapse;
    }

        #tbl table .top td {
            font-size: 12px;
        }

        #tbl table tr {
            height: 7px;
        }

    #tbl .form-horizontal {
        margin-top: -22px;
    }
</style>
<form style="max-width:1000px" id="loanGrafik" ng-controller="LoanCtrl" ng-init="getLoanInceptiveGrafik(loan)"
      role="form" class="form-horizontal" novalidate>
    <div id="loanGrafik_menu" class="menu-bar dialog-menu light-green">
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div class="col-sm-12" id="tbl">
            <div class="col-sm-8" style="font-size:13px">
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Վարկային հաշիվ</div>
                    <div class="product-detail-cell product-detail-value">{{::selectedLoan.LoanAccount.AccountNumber}}&nbsp;&nbsp;{{::selectedLoan.LoanAccount.Currency}}</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Ժամկետ</div>
                    <div class="product-detail-cell product-detail-value">{{::selectedLoan.StartDate | mydate | date: 'dd/MM/yyyy'}} - {{::selectedLoan.EndDate | mydate | date: 'dd/MM/yyyy'}}</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Տոկոսադրույք</div>
                    <div class="product-detail-cell product-detail-value">{{::selectedLoan.InterestRate*100|number:2}}%</div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
                    <div class="product-detail-cell product-detail-value">{{::selectedLoan.QualityDescription}}</div>
                </div>
            </div>
            <br /><br /><br /><br /><br />
            <table border="1" width="100" id="loansGrafikContent">
                <tr class="product-container-header">
                    <td rowspan="2" style="text-align:center;width:7%;">N</td>
                    <td rowspan="2" style="text-align:center" class="col-sm-2">Մարման <br /> ա/թ</td>
                    <td rowspan="2" style="text-align:center" class="col-sm-1">Տոկոսա<br />դրույք</td>
                    <td rowspan="2" style="text-align:center">Վարկի մնացորդ</td>
                    <td colspan="{{::tableColspanCount}}" style="text-align:center">Մարման ենթակա</td>
                </tr>
                <tr class="product-container-header">
                    <td style="text-align:center">Վարկի տոկոսագումար</td>
                    <td style="text-align:center">Վարկի գումար</td>
                    <td style="text-align:center">Սպասարկման վճար</td>
                    <td ng-show="checkRescheduledAmount" style="text-align:center">Հետաձգված գումար</td>
                    <td style="text-align:center">Ընդամենը</td>
                </tr>
                <tr ng-repeat="grafik in ::loanGrafik">
                    <td style="text-align:right">{{::$index+1}}&nbsp;&nbsp;&nbsp;</td>
                    <td style="text-align:center" class="col-sm-2">{{::grafik.RepaymentDateTostring}}</td>
                    <td style="text-align:center" class="col-sm-1">{{::grafik.InterestRate*100|number:2}}%</td>
                    <td style="text-align:right">{{::grafik.RestCapitalToString}}&nbsp;&nbsp;&nbsp;</td>
                    <td style="text-align:right"> {{::grafik.RateRepaymentToString}}&nbsp;&nbsp;&nbsp;</td>
                    <td style="text-align:right">{{::grafik.CapitalRepaymentToString}}&nbsp;&nbsp;&nbsp;</td>
                    <td style="text-align:right">{{::grafik.FeeRepaymentToString}}&nbsp;&nbsp;&nbsp;</td>
                    <td ng-show="checkRescheduledAmount" style="text-align:right">{{::grafik.RescheduledAmountToString}}&nbsp;&nbsp;&nbsp;</td>
                    <td style="text-align:right">{{::grafik.TotalRepaymentToString}}&nbsp;&nbsp;&nbsp;</td>
                </tr>
                <tr style="text-align:-webkit-right; margin-bottom:15px;" ng-if="loanGrafik">

                    <td style="border-bottom-color:white;border-left-color:white;border-top-color:white;border-right-color:white" colspan="4">
                        Ընդամենը`
                    </td>
                    <td style="border-bottom-color:white;border-left-color:white;border-top-color:white;border-right-color:white">
                        {{::inceptiveSum1.toFixed(2)| currency:''}}&nbsp;&nbsp;&nbsp;
                    </td>
                    <td style="border-bottom-color:white;border-left-color:white;border-top-color:white;border-right-color:white">
                        {{::inceptiveSum2.toFixed(2)| currency:''}}&nbsp;&nbsp;&nbsp;
                    </td>

                    <td style="border-bottom-color:white;border-left-color:white;border-top-color:white;border-right-color:white">
                        {{::inceptiveSum3.toFixed(2)| currency:''}}&nbsp;&nbsp;&nbsp;
                    </td>
                    <td ng-show="checkRescheduledAmount" style="border-bottom-color:white;border-left-color:white;border-top-color:white;border-right-color:white">
                        {{::inceptiveSum5.toFixed(2)| currency:''}}&nbsp;&nbsp;&nbsp;
                    </td>
                    <td style="border-bottom-color:white;border-left-color:white;border-top-color:white;border-right-color:white">
                        {{::inceptiveSum4.toFixed(2)| currency:''}}&nbsp;&nbsp;&nbsp;
                    </td>

                </tr>
                
            </table>


        </div>

    </div>


</form>