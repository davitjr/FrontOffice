@{
    Layout = null;
}
<style type="text/css">
    #servicePaymentNoteOrderForm .ui-widget input {
        font-family: 'webly_semibold';
    }

</style>
<div id="noteLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="ServicePaymentNoteOrderCtrl"  name="ServicePaymentNoteOrderForm" id="servicePaymentNoteOrderForm" role="form"  style="min-width:700px;"  novalidate class="form-horizontal" labels-required>
    <div id="newaccount_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="ServicePaymentNoteOrderForm.$setSubmitted();ServicePaymentNoteOrderForm.$valid  && saveServicePaymentNoteOrder(87);">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newServicePaymentNote')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

   <div style="max-width:530px;margin-left:15px">
        <errors></errors>
    </div>

    <div class="col-sm-10">  
       <div class="form-group">
            <label class="tab_title col-sm-6 " for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-8 ">
                    <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="serviceNoteOrder.OperationDate" >
                </div>
            </div>
        </div>

        @*<usersetnumber setnumber="serviceNoteOrder.UserId" formname="ServicePaymentNoteOrderForm" labelname="ՊԿ"></usersetnumber>*@

        <div class="form-group">
            <label class="tab_title col-sm-6">Նշում</label>
            <div class="col-sm-6">
                <div class="row">
                    <select ng-change="setNoteActionType(serviceNoteOrder.Note.NoteActionType)" data-ng-model="serviceNoteOrder.Note.NoteActionType"  name="NoteActionType"  class="form-control" required>
                        <option value="" hidden="hidden">Ընտրեք...</option>
                        <option value="0" style="margin-left:25px">Չգանձել</option>
                        <option value="1" style="margin-left:25px">Գանձել</option>
                    </select>
                </div>
                <div class="row">
                    <ng-messages ng-if="ServicePaymentNoteOrderForm.$submitted || ServicePaymentNoteOrderForm.NoteActionType.$dirty"
                                 for="ServicePaymentNoteOrderForm.NoteActionType.$error">
                        <ng-message when="required" class="errors">
                            Նշումը ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>

            </div>
        </div>
        <div class="form-group"  ng-show="serviceNoteOrder.Note.NoteActionType!=1">
            <label class="tab_title col-sm-6">Բացատրություն</label>
            <div class="col-sm-6" data-ng-init="getServicePaymentNoteReasons()">
                <div class="row">
                    <loading-control scopevariable="servicePaymentNoteReasons"></loading-control>

                    <select  data-ng-model="noteReason" name="NoteReason"  class="form-control" 
                             data-ng-options="note as note.value for note in servicePaymentNoteReasons" required>
                             <option class="tab_text" hidden value="">Ընտրեք...</option>
                    </select>

                </div>
                <div class="row">
                    <ng-messages ng-if="ServicePaymentNoteOrderForm.$submitted || ServicePaymentNoteOrderForm.NoteReason.$dirty"
                                 for="ServicePaymentNoteOrderForm.NoteReason.$error">
                        <ng-message when="required" class="errors">
                          Բացատրություն ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>

            </div>
        </div>

        <div class="form-group" ng-show="serviceNoteOrder.Note.NoteActionType!=1">
            <label class="tab_title col-sm-6">Լրացուցիչ տվյալ </label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="row-no-margin" style="min-width:260px;height:73px">
                        <textarea name="AdditionalDescription" class="form-control" style="text-align:left;height:65px;" ng-model="serviceNoteOrder.Note.AdditionalDescription">  </textarea>
                   </div>
                </div>
                <div class="row">
                </div>

            </div>
        </div>
    </div>
   
</form>
   










