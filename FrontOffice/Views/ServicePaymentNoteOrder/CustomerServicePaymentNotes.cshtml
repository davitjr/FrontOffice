@{
    Layout = null;
}
<style>
    #servicePaymentNoteDetails {
        overflow-x: hidden;
        overflow-y: hidden;
        width: 850px;
    }


    #servicePaymentNoteDetails td, th {
        border: 1px solid #cecece;
        width: 100px;
        font-size: 13px;
    }

    #servicePaymentNoteDetails top th {
        font-size: 12px;
    }

    #notesTable table .top td {
        font-size: 12px;
    }

    .redBackground {
        background-color: rosybrown;
    }
</style>


<div style="min-height:300px" id="servicePaymentNoteDetails" ng-controller="ServicePaymentNoteOrderCtrl" ng-init="getServicePaymentNoteList()">
    <div   class="product-container" style="width:auto;min-width:840px">

        <div class="header-title">
            Սպասարկան վարձի գանձման նշումներ
            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>
        
        <div class="product-collapsable-section " style="margin-bottom:15px;" >
        
            <div id="notesTable" class="product-content-table custom-scroll">
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <thead class="product-container-header">
                        <tr>
                            <td style="text-align:center;width:60px;">ՊԿ</td>
                            <td style="text-align:center;width:80px;">Ա/Թ</td>
                            <td style="text-align:center;width:60px;">Նշում</td>
                            <td style="text-align:center;width:300px;">Բացատրություն</td>
                            <td style="text-align:center;width:220px;">Լրացուցիչ բացատրություն </td>
                            <td style="text-align:center;width:50px;"> <i style="margin-right:10px" class="add-new-product " data-toggle="tooltip" data-trigger="hover" data-placement="bottom" title="Նոր նշում" ng-show="$root.SessionProperties.SourceType == 2" ng-controller="PopUpCtrl" ng-click="openWindow('/ServicePaymentNoteOrder/PersonalServicePaymentNoteOrder','Սպասարկան վարձի գանձման նշման հայտի մուտքագրում','newServicePaymentNote')"></i> </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="note in paymentServiceNotes" ng-click="setSelectedNoteIndex($index)">
                            <td style="text-align:center;width:60px!important">{{::note.UserId}}</td>
                            <td style="text-align:center;width:80px!important">{{::note.NoteDate| mydate | date:'dd/MM/yyyy'}}</td>
                            <td style="text-align:center;width:60px!important">{{::note.NoteActionTypeDescription}}</td>
                            <td style="text-align:start;width:300px!important">{{::note.NoteReasonDescription}}</td>
                            <td style="text-align:start;width:220px!important">{{::note.AdditionalDescription}}</td>
                            <td class="col-sm-1 click_toggle" style="width:50px!important" context="contextSevicePaymentNote" id="contextMenu"><div id="contextMenu"></div> </td>
                        </tr>
                        <tr ng-if="paymentServiceNotes.length==0 ">
                            <td colspan="6" style="text-align:center">Տվյալներ առկա չեն</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <ul id="contextSevicePaymentNote" class="dropdown-menu">
                <li><a href="" style="color: #4a8a2b;text-decoration:none!important ;" ng-controller="PopUpCtrl" ng-click="params={selectedNote:selectedNote};openWindow('/ServicePaymentNoteOrder/DeleteServicePaymentNoteOrder','Սպասարկան վարձի գանձման նշման հեռացման հայտի մուտքագրում','deleteServicePaymentNote')">Հեռացնել</a></li>
            </ul>
        </div>
                   
    </div>
</div>


<script type="text/javascript">
    $("#notesTable").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>

<script>
    $("[data-toggle=tooltip]").tooltip({
        placement: $(this).data("placement") || 'bottom'
    });
</script>





