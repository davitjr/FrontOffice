@{
    Layout = null;
}
<style type="text/css">
    #deleteServicePaymentNoteOrderForm .ui-widget input {
        font-family: 'webly_semibold';
    }

</style>
<div id="noteLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="ServicePaymentNoteOrderCtrl"  name="DeleteServicePaymentNoteOrderForm" id="deleteServicePaymentNoteOrderForm" role="form"  style="min-width:650px;"  novalidate class="form-horizontal" labels-required>
    <div id="newaccount_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="DeleteServicePaymentNoteOrderForm.$setSubmitted();DeleteServicePaymentNoteOrderForm.$valid  && saveServicePaymentNoteOrder(88);">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Հեռացնել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('deleteServicePaymentNote')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

   <div style="max-width:530px">
        <errors></errors>
    </div>

    <div class="col-sm-10">

        <div class="form-group">
            <label class="tab_title col-sm-6 " for="RegistrationDate">Նշման ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-8 ">
                    <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;"  name="RegistrationDate" ng-model="selectedNote.NoteDateFormated">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="tab_title col-sm-6">Նշում</label>
            <div class="col-sm-6">
                <div class="row">              
                    <input type="text" class="form-control" disabled ng-model="selectedNote.NoteActionTypeDescription" />
                </div>

            </div>
        </div>
        <div class="form-group">
            <label class="tab_title col-sm-6">Բացատրություն</label>
            <div class="col-sm-6" data-ng-init="getServicePaymentNoteReasons()">
                <div class="row">
                    <input type="text" class="form-control" disabled ng-model="selectedNote.NoteReasonDescription" />
                </div>
            </div>
        </div>


        <div class="form-group">
            <label class="tab_title col-sm-6">Լրացուցիչ տվյալ </label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="row-no-margin" style="min-width:260px;height:73px">
                        <textarea disabled name="AdditionalDescription" class="form-control" style="text-align:left;height:65px;" ng-model="selectedNote.AdditionalDescription">  </textarea>
                   </div>
                </div>
            </div>
        </div>

    </div>
   
</form>
   










