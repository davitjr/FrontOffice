            <div class="product-detail-cell product-detail-value" ng-style="$root.SessionProperties.IsCalledFromHB == true? {'font-weight':'bold'}:''">{{orderDetails.Sender}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Գրանցման հասցե</div>
            <div class="product-detail-cell product-detail-value" ng-if="$root.SessionProperties.IsCalledFromHB != true || ((orderDetails.Quality != 3 && orderDetails.Quality != 20) && $root.SessionProperties.IsCalledFromHB == true)">{{orderDetails.SenderAddress || "-"}}</div>
            <div class="col-sm-6" ng-if="$root.SessionProperties.IsCalledFromHB == true && (orderDetails.Quality == 3 || orderDetails.Quality == 20)">
                <div class="row">
                    <textarea rows="2" ng-model="orderDetails.SenderAddress" name="SenderAddress" id="SenderAddress" ng-enter="" required class="tab_title form-control" style="text-align:left"></textarea>
                </div>
                <div class="row">
                    <ng-messages ng-if="internationalPaymentOrderForm.$submitted || internationalPaymentOrderForm.SenderAddkress.$dirty"
                                 for="internationalPaymentOrderForm.SenderAddress.$error">
                        <ng-message when="required" class="errors">
                            Գրանցման հասցեն լրացված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>

        <div class="product-detail-row" ng-if="orderDetails.Currency!='RUR'">
            <div class="product-detail-cell product-detail-lable">Գրանցման քաղաք</div>
            <div class="product-detail-cell product-detail-value" ng-if="$root.SessionProperties.IsCalledFromHB != true || ((orderDetails.Quality != 3 && orderDetails.Quality != 20) && $root.SessionProperties.IsCalledFromHB == true)">{{orderDetails.SenderTown || "-"}}</div>
            <div class="col-sm-6" ng-if="$root.SessionProperties.IsCalledFromHB == true && (orderDetails.Quality == 3 || orderDetails.Quality == 20)">
                <div class="row">
                    <input type="text" ng-model="orderDetails.SenderTown" name="SenderTown" id="SenderTown" ng-enter="" required class="tab_title form-control" style="text-align:left" />
                </div>
                <div class="row">
                    <ng-messages ng-if="internationalPaymentOrderForm.$submitted || internationalPaymentOrderForm.SenderTown.$dirty"
                                 for="internationalPaymentOrderForm.SenderTown.$error">
                        <ng-message when="required" class="errors">
                            Գրանցման քաղաքը լրացված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>

        <div class="product-detail-row" ng-if="orderDetails.Currency!='RUR'">
            <div class="product-detail-cell product-detail-lable">Գրանցման երկիր</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.SenderCountryName || "-"}}</div>
        </div>
        <div class="product-detail-row" ng-if="orderDetails.SenderType == 6">
            <div class="product-detail-cell product-detail-lable">Անձնագիր</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.SenderPassport}}</div>
        </div>
        <div class="product-detail-row" ng-if="orderDetails.SenderType == 6">
            <div class="product-detail-cell product-detail-lable">Ծննդյան ամսաթիվ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.SenderDateOfBirth  | date: 'dd/MM/yyyy' }}</div>
        </div>
        <div class="product-detail-row" ng-if="orderDetails.SenderType == 6">
            <div class="product-detail-cell product-detail-lable">Էլեկտրոնային հասցե</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.SenderEmail || "-"}}</div>
        </div>
        <div class="product-detail-row" ng-if="orderDetails.SenderType != 6">
            <div class="product-detail-cell product-detail-lable">ՀՎՀՀ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.SenderCodeOfTax}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հեռախոսահամար</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.SenderPhone || "-"}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Այլ բանկերում հաշվեհամարներ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.SenderOtherBankAccount || "-"}}</div>
        </div>
        <div class="product-detail-row" ng-if="orderDetails.Currency!='RUR'">
            <div class="product-detail-cell product-detail-lable">Միջնորդ բանկի SWIFT կոդ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.IntermediaryBankSwift || "-"}}</div>
        </div>
        <div class="product-detail-row" ng-if="orderDetails.Currency!='RUR'">
            <div class="product-detail-cell product-detail-lable">Միջնորդ բանկի տվյալներ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.IntermediaryBank || "-"}}</div>
        </div>
        <div class="product-detail-row" ng-if="orderDetails.Currency!='RUR'">
            <div class="product-detail-cell product-detail-lable">Ստացող բանկի SWIFT կոդ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.ReceiverBankSwift || "-"}}</div>
        </div>

        <div class="product-detail-row" ng-if="orderDetails.FedwireRoutingCode!='' && orderDetails.FedwireRoutingCode!=undefined  && orderDetails.FedwireRoutingCode!=null ">
            <div class="product-detail-cell product-detail-lable">Ստացող բանկի Fedwire Routing կոդ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.FedwireRoutingCode || "-"}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ստացող բանկի տվյալներ</div>
            <div class="product-detail-cell product-detail-value">{{orderDetails.ReceiverBank}}</div>
        </div>
        <div class="product-detail-row">
