                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Հրաժարման հայտ</span>
            </li>
            <li class="root-menu-item-4 " ng-if="(orderDetails.Quality == 3 || orderDetails.Quality == 20) && $root.SessionProperties.IsCalledFromHB == true" ng-click="internationalPaymentOrderDetailsForm.$setSubmitted();internationalPaymentOrderDetailsForm.$valid ? saveInternationalPaymentAddresses() : showValidationMessage();" style="padding-right:0">
