            <li class="root-menu-item-3 " ng-if="orderDetails.Quality!=undefined && (orderDetails.Quality == 3 || orderDetails.Quality == 20) && $root.SessionProperties.IsCalledFromHB == true" ng-controller="OrderCtrl" ng-click="confirmOrder(orderDetails.Id);">
