        </li>*@
            <li class="root-menu-item-5 " ng-if="orderDetails.Quality!=undefined && orderDetails.Quality ==30 && $root.SessionProperties.IsCalledFromHB != true" ng-controller="PopUpCtrl" ng-click="params={removableorder:orderDetails};openWindow('/RemovalOrder/RemovalOrder','Հեռացման հայտ','removalOrder',callbackgetPaymentOrder)">
