@{
    Layout = null;
}

<div id="cardUSSDServiceOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="CardUSSDServiceOrderCtrl" style="min-width:650px;min-height:300px;" id="CardUSSDServiceOrderForm" ng-init="getArcaCardSMSServiceActionTypes(cardUSSDService);getCardMobilePhone(productID)" name="CardUSSDServiceOrderForm" role="form" novalidate class="form-horizontal" prevent-enter-submit>

    <div id="CardUSSDServiceOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-5 " ng-click="CardUSSDServiceOrderForm.$setSubmitted(); CardUSSDServiceOrderForm.$valid && getCardApplicationDetails((order.ActionType==1)?11:15,CardNumber)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Դիմում</span>
            </li>
            <li class="root-menu-item-4 " ng-click="CardUSSDServiceOrderForm.$setSubmitted();CardUSSDServiceOrderForm.$valid && saveAndApproveCardUSSDServiceOrder(productID);">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('card_USSD_service_order')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div style="padding:15px;max-width:700px">
            <errors></errors>
        </div>


        <div class="col-sm-11">
            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="date" class="form-control tab_title" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                    </div>

                </div>
            </div>


            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="CardNumber">Քարտի համար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="text" class="form-control tab_title" style="text-align: left;" id="CardNumber" name="CardNumber" ng-model="CardNumber" required>
                    </div>
                </div>
            </div>


            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="mobilePhone">Հեռախոսահամար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="text" class="form-control tab_title" style="text-align: left;" id="mobilePhone" name="mobilePhone" ng-model="order.MobilePhone" required>
                    </div>
                    <ng-messages ng-if="CardUSSDServiceOrderForm.$submitted || CardUSSDServiceOrderForm.mobilePhone.$dirty"
                                 for="CardUSSDServiceOrderForm.mobilePhone.$error">
                        <ng-message when="required" class="errors">
                            Հեռախոսահամարը սխալ է
                        </ng-message>
                    </ng-messages>
                </div>
            </div>

            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="ActionType">Գործողության տեսակ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <select data-ng-model="order.ActionType" name="ActionType" id="ActionType" class="form-control" required
                                data-ng-options="k as v for (k,v) in ActionTypes">
                            <option selected="selected" value="" hidden>Ընտրեք</option>
                        </select>
                        <ng-messages ng-if="CardUSSDServiceOrderForm.$submitted || CardUSSDServiceOrderForm.ActionType.$dirty"
                                     for="CardUSSDServiceOrderForm.ActionType.$error">
                            <ng-message when="required" class="errors">
                                Գործողությունը  նշված չէ
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>











