<form style="max-width:450px" ng-controller="AccountReOpenOrderCtrl" ng-init="details=true;getAccountReOpenOrder(selectedOrderId);generateNewOrderNumberForFee()" >
    <loading-control style="margin-left:20em" scopevariable="order"></loading-control>
    <div ng-show="order" class="menu-bar dialog-menu light-green " style="margin-left:-5px;margin-top:0" ng-if="$root.SessionProperties.IsCalledFromHB != true">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-if="order.Quality!=undefined" ng-click="getAccountReOpenOrderFeeDetails(true)">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="printButton h-menu-icon">Հանձնարարական</span>
            </li>
            <li class="root-menu-item-5 " ng-if="order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50" ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հրաժարման հայտ','removalOrder',callbackgetAccountReOpenOrder)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Հրաժարման հայտ</span>
            </li>
        </ul>
    </div>
    <div ng-show="order" class="product-details bhoechie-tab-content" style="min-width:450px;padding:30px;padding-top:10px;padding-bottom:0px;">
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հայտի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.Id}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{order.RegistrationDateString}}</div>
        </div>
        <div class="product-detail-row" ng-if="$root.SessionProperties.IsCalledFromHB != true">
            <div class="product-detail-cell product-detail-lable">Գործառնական օր</div>
            <div class="product-detail-cell product-detail-value">{{order.OperationDateString}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Միջնորդավճարի գանձում</div>
            <div class="product-detail-cell product-detail-value">{{feeChargeType}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վերաբացման պատճառ</div>
            <div class="product-detail-cell product-detail-value">{{order.ReopenReasonDescription}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հաշվեհամարներ</div>
            <div class="product-detail-cell product-detail-value" >
                <div ng-repeat="ac in order.ReOpeningAccounts"> {{::ac.AccountNumber}} {{::ac.Currency}}  </div>
            </div>          
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Քաղվածքի ստացում</div>
            <div class="product-detail-cell product-detail-value">{{order.StatementDeliveryTypeDescription}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value">
                <span ng-if="order.Quality==30" class="greenStyle">{{ order.QualityDescription }}</span>
                <span ng-if="order.Quality==31" class="redStyle">{{ order.QualityDescription }}</span>
                <span ng-if="order.Quality!=31 && order.Quality!=30">{{ order.QualityDescription }}</span>
            </div>
        </div>
        <div ng-if="order.Quality==31" ng-controller="OrderCtrl" ng-init="getOrderRejectHistory(selectedOrderId)" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մերժման պատճառ` </div>
            <div class="product-detail-cell product-detail-value">
                <span class="redStyle">{{ rejectHistory.ReasonDescription }}</span>
            </div>
        </div>
        <div class="product-detail-row" ng-if="$root.SessionProperties.IsCalledFromHB != true">
            <div class="col-sm-12 my_text1 line_height" style="padding-left:0px">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>
        </div>
    </div>
</form>
