                        <div class="product-detail-cell product-detail-value">{{fond.IsActive==true?'Այո':'Ոչ'}}</div>
                    </div>
                </div>*@


            <div class="form-group" data-ng-init="getCurrentAccountCurrencies()">

                <div class="col-sm-12">
                    <div class="row-no-margin">

                        <section class="panel panel-success" style="max-width: 520px">
                            <header class="panel-heading">
                                <span class="panel-title" style="font-size: 14px;" ng-show="marginType ==1">Ընթացիկ (ցպահանջ) հաշիվների տեղաբաշխում</span>
                                <span class="panel-title" style="font-size: 14px;" ng-show="marginType ==2">Ժամկետային ավանդների տեղաբաշխում</span>
                                <span class="panel-title" style="font-size: 14px;" ng-show="marginType ==3">Բանկի կողմից թողարկված պարտատոմսերի դիմաց ներգրաված միջոցների տեղաբաշխում</span>
                            </header>
                            <div class="panel-body">
                                <span style="display:inline-block ; ">
                                    <input type="month" class="form-control col-sm-12" id="MarginDate" ng-model="InterestMargin.marginDate" ng-change="getInterestMarginDetailsByDate()">
