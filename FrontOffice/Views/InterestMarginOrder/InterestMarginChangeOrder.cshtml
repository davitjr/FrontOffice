                                        <span style="display:inline-block ; ">
                                            <select ng-show="currencies" ng-disabled="InterestMarginDetail.isDisable" data-ng-model="InterestMarginDetail.Currency" name="Currency" id="Currency" class="form-control " required style="max-width:120px"
                                                    data-ng-options="k as v for (k,v) in ::currencies">
                                                <option value="" hidden="hidden" style="margin-left:10px">Ընտրեք...</option>
                                            </select>
                                        </span>
                                        <span class="input-group" style="display:inline-block ; ">
