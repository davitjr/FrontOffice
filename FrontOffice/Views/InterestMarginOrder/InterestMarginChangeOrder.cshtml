@{
    Layout = null;
}

<div id="InterestMarginChangeOrderSaveLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="InterestMarginChangeOrderCtrl" data-ng-init="getInterestMarginDetails(marginType); initInterestMarginChangeOrder()" name="InterestMarginChangeOrderForm" id="InterestMarginChangeOrderForm" role="form" style="min-width:600px;min-height:570px;" novalidate class="form-horizontal" labels-required>

    <div id="InterestMarginOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="InterestMarginChangeOrderForm.$setSubmitted(); saveInterestMarginChangeOrder()">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('InterestMarginorder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
    </div>


    <div class="col-sm-12" style="padding:0;padding-left:5px;">

        <div class="col-sm-12" style="max-width:1000px">

            @*<div style="max-width:630px">
                    <errors></errors>
                </div>


                <div class="product-details bhoechie-tab-content" style="min-width:210px;margin-left:10px;">
