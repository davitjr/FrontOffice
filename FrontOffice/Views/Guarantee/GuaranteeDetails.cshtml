@{
    Layout = null;
}

<div ng-controller="GuaranteeCtrl" data-ng-init="getGuarantee(productId)" id="guaranteedetails">
    <div id="guarantee_details_menu" class="menu-bar dialog-menu light-green details-menu">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-3 " ng-if="$root.SessionProperties.SourceType == 2  && guarantee.Quality==10" ng-controller="PopUpCtrl" ng-click="params={product:guarantee,orderType:109};openWindow('/LoanProductActivationOrder/PersonalLoanProductActivationOrder','Երաշխիքի ակտիվացում','newLoanProductActivation')">
                <span id="h-menu-item-3"><img id="h-menu-icon-2" class="applicationButton h-menu-icon">Ակտիվացնել</span>
            </li>
            <li class="root-menu-item-3 " ng-if="$root.SessionProperties.SourceType == 2 && guarantee.Quality!=40 && guarantee.Quality!=10" ng-click="saveGuaranteeTerminationOrder(productId)">
                <span id="h-menu-item-5" onclick="return false;">
                    <img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Դադարեցում
                </span>
            </li>

            <li class="root-menu-item-5 " ng-class="{'my_disable':disabelButton==true}" ng-controller="PopUpCtrl" ng-if="guarantee.Quality<10 && isOnlineAcc==true" ng-click="params={productId:guarantee.ProductId,actionType:2,productType:guarantee.ProductType};openWindow('/ClassifiedLoanActionOrder/PersonalClassifiedLoanActionOrder','Երաշխիքի դուրսգրում','newClassifiedLoanActionOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-2" class="closeAccountButton h-menu-icon">Դուրս գրել</span>
            </li>
            <li class="root-menu-item-5 " ng-class="{'my_disable':disabelButton==true}" ng-controller="PopUpCtrl" ng-if="guarantee.Quality==11 && isOnlineAcc==true" ng-click="params={productId:guarantee.ProductId,actionType:1,productType:guarantee.ProductType};openWindow('/ClassifiedLoanActionOrder/PersonalClassifiedLoanActionOrder','Երաշխիքի հետբերում','newClassifiedLoanActionOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-2" class="closeAccountButton h-menu-icon">Հետ բերել </span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div class="product-details bhoechie-tab-content" style="min-width:800px;margin-left:10px;">

        <div class="product-detail-row" ng-if="guarantee.CreditCode!=''">
            <div class="product-detail-cell product-detail-lable">Կոդ</div>
            <div class="product-detail-cell product-detail-value" style="font-weight:bold;">{{guarantee.CreditCode}}
          <span style="left:4pt; color: #337AB7; cursor:pointer;vertical-align:top;"ng-controller="PopUpCtrl"ng-click="params={creditCode:guarantee.CreditCode,loanCurrency:guarantee.Currency};openWindow('/Loan/CreditCodeAccountDetails','Հաշվեհամարներ','creditCodeAccountDetails');" class="glyphicon glyphicon-info-sign" /></div>

        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Գլխավոր պայմանագրի համար</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.MainContractNumber }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.QualityDescription }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վարկային պայմ-գրի համար</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.ContractNumber }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պայմանագրային գումար</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.StartCapitalString }} {{guarantee.Currency}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Սկիզբ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.StartDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վերջ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.ContractEndDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վճարված գումարի ժամկետի վերջ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.EndDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
       
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կցված հաշիվ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.ConnectAccount.AccountNumber}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մնացորդ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.CurrentCapitalString}} {{guarantee.Currency}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Միջնորդավճարի տոկոսադրույք</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.InterestRate}}%</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Միջնորդավճարի գանձում</div>
            <div class="product-detail-cell product-detail-value">{{percentCummulation[guarantee.PercentCummulation]}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վերջին հաշվարկի օր</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.DayOfRateCalculation | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Բենեֆեցիար</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.Benefeciar}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հաստատող բանկ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.ConfirmatorBank }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հաստատողի բանկի վերջին ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.ConfirmatorBankEndDate  | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div ng-if="guarantee.Quality==40" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Փակման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{guarantee.DayOfRateCalculation | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div ng-if="guarantee.OutLoanDate!=null" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable" style="color:red">Դուրսգրման օր</div>
            <div class="product-detail-cell product-detail-value" style="color:red">{{guarantee.OutLoanDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
       
        <div class="product-detail-row" ng-repeat="date in guarantee.ProlongationDates">
            <div class="product-detail-cell product-detail-lable" ng-if="$index==0">Երկարաձգումներ</div>
            <div class="product-detail-cell product-detail-lable" ng-if="$index>0">&nbsp;</div>
            <div class="product-detail-cell product-detail-value" >{{ date | mydate | date: 'dd/MM/yyyy' }}</div>
        </div>
        

    </div>

    
    <div class="bhoechie-tab-container" style="max-height:80%;" id="guaranteeDetailsContainer">
        <div class="bhoechie-tab-menu" style="display:inline-block; vertical-align: top;">
            <div class="list-group">

                <div class="list-group-item text-center active">Գրավ</div>
                <div class="list-group-item text-center"><span>Միջ/վճար և այլ մուծ.</span></div>
                <div class="list-group-item text-center"><span>Նվազեցում</span></div>
                <div class="list-group-item text-center"><span>Մոնիթորինգի եզրակացություն</span></div>


            </div>
        </div>
        <div class="bhoechie-tab" style="width: calc(100% - 140px); display: inline-block;">

            <div class="bhoechie-tab-content active">
                <provisions productid="productId"></provisions>
            </div>
            <div class="bhoechie-tab-content ">
                <productotherfees productid="productId"></productotherfees>
            </div>
            <div class="bhoechie-tab-content ">
                <givenguaranteereductions productid="productId"></givenguaranteereductions>
            </div>
            <div class="bhoechie-tab-content ">
                <loanmonitoring ng-if="guarantee" loan="guarantee"></loanmonitoring>
            </div>
        </div>
    </div>

</div>

<script>


    $("#guaranteedetails div.bhoechie-tab-menu>div.list-group>div").click(function (e) {
        e.preventDefault();
        $(this).siblings('#guaranteedetails div.active').removeClass("active");
        $(this).addClass("active");
        var index = $(this).index();
        $("#guaranteedetails div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
        $("#guaranteedetails div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
    });

    $("#guaranteeDetailsContainer").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>

