
@{
    Layout = null;
}

<form style="max-width:650px" ng-controller="CustomersNotesCtrl" data-ng-init="getPersonNoteHistory(selectedNote.NoteID)">


    <div class="product-details bhoechie-tab-content" style="padding-left:10px">
        <div class="product-detail-row col-sm-12">
            <div class="product-detail-cell product-detail-lable">Հաճախորդի համար</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.CustomerNumber}}</div>
        </div>
        <div class="product-detail-row col-sm-12">
            <div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.RegistrationDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>

        <div class="product-detail-row col-sm-12">
            <div class="product-detail-cell product-detail-lable">Մուտքագրող ՊԿ</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.SetNumber}}</div>
        </div>
        <div class="product-detail-row col-sm-12">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.QualityDescription}}</div>
        </div>
        <div class="product-detail-row col-sm-12" ng-if="selectedNote.Quality==2 || selectedNote.Quality==3">
            <div class="product-detail-cell product-detail-lable">Փակման/Հրաժարման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.ClosingDate | mydate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="product-detail-row col-sm-12" ng-if="selectedNote.Quality==2 || selectedNote.Quality==3">
            <div class="product-detail-cell product-detail-lable">Փակողի/Հրաժարողի ՊԿ</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.ClosingSetNumber}}</div>
        </div>
        <div class="product-detail-row col-sm-12" ng-if="selectedNote.Quality==3">
            <div class="product-detail-cell product-detail-lable">Հրաժարման տատճառ</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.ClosingDescription}}</div>
        </div>
        <div class="product-detail-row col-sm-12">
            <div class="product-detail-cell product-detail-lable">Նկարագրություն</div>
            <div class="product-detail-cell product-detail-value">{{selectedNote.Note}}</div>
        </div>

        <div class="product-container" style="max-width:550px;margin-bottom:15px;">
            <div class="header-title">
                Գրառման պատմություն
            </div>
            <div class="product-collapsable-section">
                <div class="product-container-header">
                    <div class="col-sm-4">Մուտքագրող</div>
                    <div class="col-sm-4">Մուտքագրման ա/թ</div>
                    <div class="col-sm-4">Կարգավիճակ</div>
                </div>
                <div class="product-content-table custom-scroll">
                    <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                        <tbody>
                            <tr ng-repeat="history in personOneNoteHistory">
                                <td style="text-align:center" colspan="1">{{history.ActionUserName}}
                                <td style="text-align:center" colspan="1">{{history.ActionDateString}}
                                <td style="text-align:center" colspan="1">{{history.PersonNote.QualityDescription}}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>

