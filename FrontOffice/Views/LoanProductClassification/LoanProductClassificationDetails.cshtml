<form name="LoanCLassificationForm" ng-controller="LoanProductClassificationCtrl" ng-init="getLoanProductClassifications()" novalidate>
    <div>
        <div class="col-xs-4">
            <span class="product-detail-lable">Սկիզբ</span>
            <input type="date" ng-model="dateFrom" name="DateFrom" class="form-control my_class"
                   required>
            <ng-messages ng-if="LoanCLassificationForm.$submitted || LoanCLassificationForm.DateFrom.$dirty"
                         for="LoanCLassificationForm.DateFrom.$error">
                <ng-message when="required" class="errors">
                    Նշեք ա/թ
                </ng-message>
            </ng-messages>
        </div>
        <div class="col-md-1">
            <br />
            <button type="submit" class="btn btn-primary">
                Որոնել 
            </button>
        </div>
    </div>
     <div class="product-container" style="width:97%">
       


        <div class="header-title">
            Դասակարգում
            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>
        <div class="product-collapsable-section">
            <div class="product-container-header" style="height:44px;">
                <div style="text-align:center" class="col-sm-1">Ա/թ</div>
                <div style="text-align:center" class="col-sm-3"><span>Պահուստավորվող գումար</span> </div>
                <div style="text-align:center" class="col-sm-1">Օրեր</div>
                <div style="text-align:center" class="col-sm-2">Սուբյեկտիվ</div>
                <div style="text-align:center" class="col-sm-1">Դաս</div>
                <div style="text-align:center" class="col-sm-2">Պահուստի գումար</div>
                <div style="text-align:center" class="col-sm-2">Տեսակ</div>
            </div>
            <div class="product-content-table-full_height custom-scroll" id="classificationsMainContractContent" style="min-height:100px;float:left;">
                <div ng-if="classifications==undefined">
                    <loading></loading>
                </div>
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <tbody>
                        <tr ng-repeat="classification in ::classifications">
                            <td class="col-sm-1">{{::classification.ClassificationDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td class="col-sm-3" style="text-align:right;">{{::classification.StoreAmount | number:2}}</td>
                            <td class="col-sm-1" style="text-align:center;">{{::classification.DaysCount}}</td>
                            <td class="col-sm-2" style="text-align:center;">{{classification.StoreType == 1 ? 'այո' : 'ոչ'}}</td>
                            <td class="col-sm-1" style="text-align:center;">{{::classification.StorePercent * 100}}%</td>
                            <td class="col-sm-2" style="text-align:right;">{{classification.StorePercent*classification.StoreAmount| number:2}}</td>
                            <td class="col-sm-2" style="text-align:right;">{{::classification.StoreAmountTypeDescription}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>

