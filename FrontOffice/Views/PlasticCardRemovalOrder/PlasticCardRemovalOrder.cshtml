@{
    Layout = null;
}

<style>
    .form-group input, .form-group select {
        height: 34px;
    }
    form.form-horizontal{
        min-width:450px;
    }
    .sub_inner textarea {
        max-width: 280px;
    }
    .textareaAditionalinfo{
        min-height: 60px;
        overflow: hidden;
    }

</style>
<div id="cardOrderRemovalLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>

<form ng-controller="PlasticCardRemovalOrderCtrl" name="PlasticCardRemovalOrderForm" id="PlasticCardRemovalOrderForm" role="form" novalidate class="form-horizontal" labels-required>
    <div id="plasticcardremoval_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="PlasticCardRemovalOrderForm.$setSubmitted();PlasticCardRemovalOrderForm.$valid && SavePlasticCardRemovalOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('plasticcardremoval')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

    <div style="max-width:530px">
        <errors></errors>
    </div>
    <div class="col-sm-12">
        <div class=" form-group">
            <label class="tab_title col-sm-4" for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-7 row">
                <div class="multiple_columns col-sm-8 ">
                    <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                </div>
            </div>
        </div>
        <div class="sub_inner form-group">
            <label class="tab_title col-sm-4" for="card">Քարտ</label>
            <div class="col-sm-8" ng-init="GetCards()">
                <div class="row">
                    <loading-control scopevariable="cards"></loading-control>
                    <select ng-show="cards" ng-model="card" name="card" id="card" class="form-control" required
                            ng-options="a as a.CardNumber + ' ' + a.Currency+' '+a.CardType for a in cards track by a.CardNumber">
                        <option value="" hidden="hidden" style="margin-left:25px">Ընտրեք...</option>
                    </select>
                    <ng-messages class="col-sm-11" ng-if="PlasticCardRemovalOrderForm.$submitted || PlasticCardRemovalOrderForm.card.$dirty"
                                 for="PlasticCardRemovalOrderForm.card.$error">
                        <ng-message when="required" class="errors">
                            Քարտը ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>
        <div class="sub_inner form-group">
            <label class="tab_title col-sm-4" for="RemovalReason">Պատճառ</label>
            <div class="col-sm-8" ng-init="getCardRemovalReasons()">
                <div class="row">
                    <loading-control scopevariable="reasons"></loading-control>
                    <select ng-show="reasons" ng-model="RemovalReason" name="RemovalReason" id="RemovalReason" class="form-control" required
                            ng-options="k as v for (k,v) in reasons track by k">
                        <option value="" hidden="hidden" style="margin-left:25px">Ընտրեք...</option>
                    </select>
                    <ng-messages class="col-sm-11" ng-if="PlasticCardRemovalOrderForm.$submitted || PlasticCardRemovalOrderForm.RemovalReason.$dirty"
                                 for="PlasticCardRemovalOrderForm.RemovalReason.$error">
                        <ng-message when="required" class="errors">
                            Պատճառը ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>
        <div ng-if="RemovalReason==5" class="sub_inner form-group">
            <label class="tab_title col-sm-4 control-label" for="RemovalReasonInfo">Լրացուցիչ</label>
            <div class="col-sm-8" style="padding-left: 0px;padding-right: 0px;">
                <textarea style="text-align:left;"  ng-keydown="checkHeight($event)" onkeypress="return isArmenianUnicode(event.keyCode)" onpaste="return CheckPasteText(event)"
                          ng-model="order.RemovalReasonInfo" name="RemovalReasonInfo" class="form-control tab_title textareaAditionalinfo" required></textarea>
                <ng-messages ng-if="PlasticCardRemovalOrderForm.$submitted || PlasticCardRemovalOrderForm.Add.$dirty"
                             for="PlasticCardRemovalOrderForm.RemovalReasonInfo.$error">
                    <ng-message when="required" class="errors">
                        Լրացուցիչ պատճառ լրացված չէ
                    </ng-message>
                </ng-messages>
            </div>
        </div>
    </div>
</form>