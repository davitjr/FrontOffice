@{
    Layout = null;
}
<div ng-controller="HBUserCtrl" data-ng-init="getHBUser();" id="hbUserDetails">
    <div id="hbUserdetails_menu" class="menu-bar dialog-menu light-green details-menu" style="min-width:810px;">
    </div>
    <div class="product-details bhoechie-tab-content" style="min-width:810px;margin-left:10px;">
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Օգտագործողի համար</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.ID}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Օգտագործողի անուն</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.UserName}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ակտիվության կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.IsActive ? 'Ակտիվ': 'Դադարեցված'}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.RegistrationDateString }}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Բլոկավորման կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.IsBlocked ? 'Բլոկավորված' : 'Ոչ բլոկավորված'}}</div>

        </div>
        <div class="product-detail-row" ng-show="hbuser.IsBlocked">
            <div class="product-detail-cell product-detail-lable">Բլոկավորման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.BlockingDateString}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Բլոկավորող աշխատակցի ՊԿ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.BlockingSetID}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հաստատման կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.ApproveStatus}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հաստատման ա/թ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.ApprovingDateString}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հաստատող աշխատակցի ՊԿ</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.ApprovingSetID}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Երկրորդ հաստատում</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.SecondConfirm ? 'Առկա է'  : 'Առկա չէ'}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հասանելիությունների սահմանափակում</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.LimitedAccess ? 'Առկա է'  : 'Առկա չէ'}}</div>

        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մուտքագրման իրավունք</div>
            <div class="product-detail-cell product-detail-value">{{hbuser.AllowDataEntry ? 'Առկա է'  : 'Առկա չէ'}}</div>

        </div>    

    </div>
    <div class="bhoechie-tab-container" style="max-height:80%;" id="hbUserDetailsContainer">
        <div class="bhoechie-tab-menu" style="display:inline-block; vertical-align: top;">
            <div class="list-group">
                <div class="list-group-item text-center active"><span>Ակտիվ թոքեններ</span></div>
                <div class="list-group-item text-center "><span>Դադարեցված թոքեններ</span></div>
                <div class="list-group-item text-center "><span>Չակտիվացված թոքեններ</span></div>
            </div>
        </div>
        <div ng-if="hbuser" class="bhoechie-tab" style="width: calc(100% - 140px); display: inline-block;">
            <div class="bhoechie-tab-content active">
                <hbtokens filter="1" hbuserid="hbuser.ID"></hbtokens>
            </div>
            <div class="bhoechie-tab-content">
                <hbtokens filter="2" hbuserid="hbuser.ID"></hbtokens>
            </div>

            <div class="bhoechie-tab-content">
                <hbtokens filter="3" hbuserid="hbuser.ID"></hbtokens>
            </div>
        </div>

    </div>

</div>
<script type="text/javascript">
    $("#hbUserDetails div.bhoechie-tab-menu>div.list-group>div").click(function (e) {
        e.preventDefault();
        $(this).siblings('#hbUserDetails div.active').removeClass("active");
        $(this).addClass("active");
        var index = $(this).index();
        $("#hbUserDetails div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
        $("#hbUserDetails div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
    });

    $("#hbUserDetailsContainer").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>