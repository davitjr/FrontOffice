@{
    Layout = null;
}
<style type="text/css">
    #HBActivationOrder .ui-widget input {
        font-family: 'webly_semibold';
    }

    #HBActivationOrder {
        min-width: 550px;
    }
</style>
<div id="HBActivationOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="HBActivationOrderCtrl" name="HBActivationOrder" ng-init="setPerson()" id="HBActivationOrder" role="form" novalidate class="form-horizontal" prevent-enter-submit labels-required>

    <div id="newHBActivationOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li ng-if="forPrint==true" class="root-menu-item-3 " ng-click="HBActivationOrder.$setSubmitted();HBActivationOrder.$valid && getFeeForNewTokenOrderDetails();">
                <span id="h-menu-item-3"><img id="h-menu-icon-3" class="h-menu-icon applicationButton">Ելքի օրդեր</span>
            </li>
            <li class="root-menu-item-4 " ng-click="HBActivationOrder.$setSubmitted();HBActivationOrder.$valid  && saveHBActivationOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newHBActivationOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

    <div style="max-width:530px">
        <errors></errors>
    </div>
    <div class="col-sm-11">
        <div class=" form-group">
            <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-8 ">
                    <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                </div>

            </div>
        </div>
        <div class="form-group" ng-if="request">
            <div class="tab_title col-sm-5 " for="debitAccount">Դիմումի ա/թ</div>
            <div class="col-sm-6 my_text1" style="padding-top: 7px;">{{request.RequestDate | date: 'dd/MM/yyyy'}}</div>
        </div>
        <div class="form-group" ng-if="request">
            <div class="tab_title col-sm-5 " for="debitAccount">Դիմումի տեսակ</div>
            <div class="col-sm-6 my_text1" style="padding-top: 7px;">{{request.RequestTypeDescription}}</div>
        </div>
        <div class="form-group" ng-if="serviceFee>0">
            <div class="tab_title col-sm-5 " for="debitAccount">Սպասարկման վարձ</div>
            <div class="col-sm-6 my_text1" style="padding-top: 7px;">{{serviceFee | number:2}} AMD</div>
        </div>


        <paymentaccount ng-if="serviceFee>0"
                        ng-init="getDebitAccounts(1,2)"
                        accounts="debitAccounts"
                        accountselectname="debitAccount"
                        account="order.DebitAccount"
                        check="0"
                        nameforaccount="'Սպ. վարձի գանձման հաշիվ'"
                        nameforcurrency="">
        </paymentaccount>
        <div class="row">
            <div class="col-sm-5"></div>
            <ng-messages ng-if="HBActivationOrder.$submitted || HBActivationOrder.debitAccount.$dirty"
                         for="HBActivationOrder.debitAccount.$error">
                <ng-message when="required" class="errors">
                    Հաշիվը ընտրված չէ
                </ng-message>
            </ng-messages>
        </div>
        <div class="product-container" style="min-width:500px" ng-if="showTokensView==true">
            <div class="header-title">
                Տոկեններ
                <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
            </div>
            <div class="product-collapsable-section">
                <div class="product-content-table custom-scroll" ng-class="{'product-content-table-full_height' : hideBlank!='true' }" style="min-height:5px">
                    <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;padding-left:10px">
                        <tbody>
                            <tr ng-repeat="request  in order.HBActivationRequests">
                                <td style="padding-left:10px" ng-if="request.RequestType==1 || request.RequestType==2">
                                    <span>Հաճախորդ՝ {{::request.HBToken.UserCustomerNumber}}&nbsp;&nbsp;&nbsp;{{::request.HBToken.UserFullName}}</span> <br /> 
                                    <span>Տոկեն N` {{::request.HBToken.TokenNumber}} {{::request.HBToken.TokenTypeDescription}}</span>                                        
                                    <span ng-if="request.ServiceFee>0">
                                    <br />
                                    <strong>Անվճար</strong>&nbsp;&nbsp;<input type="checkbox" ng-model="request.IsFree" ng-change="setOrderAmount(order.HBActivationRequests)" ng-true-value="true" ng-false-value="false">
                                    </span>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div style="margin-bottom:180px" ng-if="$root.SessionProperties.CustomerType!=6"></div>
    </div>

</form>











