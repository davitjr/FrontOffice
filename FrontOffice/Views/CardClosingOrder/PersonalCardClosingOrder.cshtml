
@{
    Layout = null;
}


<style type="text/css">
    #Reason .chosen-container-multi {
        border-radius: 4px;
    }

    #Reason .chosen-choices {
        border-radius: 4px;
    }

    #Reason .chosen-container {
        position: fixed;
        z-index: 99;
        height: 35px;
        width:490px;
        max-width:490px;
    }
</style>

<div id="cardClosingLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>

<form ng-controller="CardClosingOrderCtrl" style="min-width:700px;" name="CardClosingOrderForm" role="form" novalidate class="form-horizontal" prevent-enter-submit labels-required>
    <div id="cardClosing_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-3 " ng-click="getCardClosingApplication();">
                <span id="h-menu-item-3"><img id="h-menu-icon-3" class="h-menu-icon applicationButton">Քարտի և Քարտային հաշվի փակման դիմում</span>
            </li>
            <li class="root-menu-item-4 " ng-click="CardClosingOrderForm.$setSubmitted();CardClosingOrderForm.$valid && saveCardClosingOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('cardClosing')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div class="col-sm-12">
            <div class="form-group">
                <label class="tab_title col-sm-3" for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-8 ">
                    <div class="col-sm-9 multiple_columns">
                        <input type="date" disabled="disabled" class="tab_title form-control unstyled" id="RegistrationDate" name="RegistrationDate" data-ng-model="order.OperationDate" style="text-align:left" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="tab_title col-sm-3" for="reason">Փակման պատճառ</label>
                <div ng-show="reasons" id="Reason" class="my_title col-sm-9" data-ng-init="getCardClosingReasons()">
                    <select chosen name="ClosingReason" id="ClosingReason" data-ng-model="order.ClosingReason" class="form-control chosen-search col-sm-12"
                            data-ng-options="k as v for (k,v) in reasons" required>
                        <option value="" hidden>Ընտրեք պատճառը...</option>
                    </select>
                    <ng-messages ng-if="CardClosingOrderForm.$submitted || CardClosingOrderForm.ClosingReason.$dirty"
                                 for="CardClosingOrderForm.ClosingReason.$error">
                        <br />
                        <ng-message when="required" class="errors">
                            Պատճառն ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>

            <div ng-if="order.ClosingReason==21 || order.ClosingReason==22 || order.ClosingReason==40 ||order.ClosingReason==49 ||order.ClosingReason==92 " class="form-group">
                <label class="tab_title col-sm-3 control-label" for="description">Լրացուցիչ</label>
                <div class="col-sm-9 ">
                    <textarea style="text-align:left" onkeypress="return isArmenianUnicode(event.keyCode)" onpaste="return CheckPasteText(event)" ng-model="order.ClosingReasonAdd" name="Add" class="form-control tab_title" required></textarea>
                    <ng-messages ng-if="CardClosingOrderForm.$submitted || CardClosingOrderForm.Add.$dirty"
                                 for="CardClosingOrderForm.Add.$error">
                        <ng-message when="required" class="errors">
                            Լրացուցիչ պատճառն ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
            <div class="form-group">
                <label class="tab_title col-sm-3 control-label" for="closeCardAccount">Փակել Քարտային հաշիվը</label>
                <div class="col-sm-9" style="margin-top: 15px;">
                    <input type="checkbox" ng-model="order.CloseCardAccount" name="closeCardAccount" />
                </div>
            </div>
            <div style="max-width:520px">
                <errors></errors>
            </div>

            <div ng-show="warnings.length>0" class="panel panel-warning" data-ng-init="getCardClosingWarnings()">
                <div class="panel-heading"><span class="glyphicon glyphicon-warning-sign"></span> Ուշադրություն</div>
                <div class="panel-body">
                    <div ng-repeat="war in warnings">
                        {{$index+1}}.{{::war}}
                    </div>
                </div>

            </div>
            <br />
        </div>
    </div>
   



</form>



