
@{
    Layout = null;
}

<div>
    <form style="min-width:600px" ng-controller="CardClosingOrderCtrl" ng-init="getCardClosingOrder(selectedOrderId)">
        <loading-control style="margin-left:20em" scopevariable="order.Id"></loading-control>
        <div ng-show="order.Id">

            <div ng-if="order.Quality!=undefined && order.Source != 1 && order.Source != 5 && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50" id="cardClosingOrderDetails_menu" class="menu-bar dialog-menu light-green " style="margin-left:-15px;margin-top:0">
                <ul id="menu" class="dialog-menu">
                    <li class="root-menu-item-5 " ng-if="order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50" ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հրաժարման հայտ','removalOrder',callbackgetCardClosingOrder)">
                        <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Հրաժարման հայտ</span>
                    </li>

                </ul>
            </div>

            <div class="product-details bhoechie-tab-content" style="min-width:600px;margin-right:10px;padding-left:10px">

                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Հայտի համար</div>
                    <div class="product-detail-cell product-detail-value">{{order.Id}}</div>
                </div>

                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
                    <div class="product-detail-cell product-detail-value">{{order.RegistrationDateString}}</div>
                </div>

                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Գործառնական օր</div>
                    <div class="product-detail-cell product-detail-value">{{order.OperationDateString}}</div>
                </div>

                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Քարտի համար</div>
                    <div class="product-detail-cell product-detail-value">{{card.CardNumber}}</div>
                </div>

                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Տեսակ, արժույթ</div>
                    <div class="product-detail-cell product-detail-value">{{card.CardType}}, {{card.Currency}}</div>
                </div>

                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Փակման պատճառ</div>
                    <div class="product-detail-cell product-detail-value">{{order.ClosingReasonDescription}}</div>
                </div>

                <div ng-if="order.ClosingReasonAdd" class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Լրացուցիչ</div>
                    <div class="product-detail-cell product-detail-value">{{order.ClosingReasonAdd}}</div>
                </div>



                <div class="product-detail-row">
                    <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
                    <div ng-if="order.Quality==30" class="product-detail-cell product-detail-value greenStyle">{{order.QualityDescription}}</div>
                    <div ng-if="order.Quality==31" class="product-detail-cell product-detail-value redStyle">{{order.QualityDescription}}</div>
                    <div ng-if="order.Quality!=31 && order.Quality!=30" class="product-detail-cell product-detail-value">{{order.QualityDescription}}</div>
                </div>

                <div ng-if="order.Quality==31" class="">
                    <div ng-controller="OrderCtrl" ng-init="getOrderRejectHistory(selectedOrderId)" class="" style="clear:both;color:#6F6A6A;font-weight:bold">Մերժման պատճառ`</div>
                    <div class="redStyle">&nbsp;&nbsp;&nbsp;{{ rejectHistory.ReasonDescription }}</div>
                </div>

            </div>
            <div style="clear:both;color:#6F6A6A;font-weight:bold; margin-left:10px">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>

