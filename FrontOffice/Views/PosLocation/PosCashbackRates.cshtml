@{
    Layout = null;
}
<style>
    #collectionsDetails {
        overflow-x: hidden;
        overflow-y: hidden;
        width: 900px;
    }


    #collectionsTable td, th {
        border: 1px solid #cecece;
        width: 100px;
        font-size: 12px;
    }

    #collectionsTable top th {
        font-size: 12px;
    }

    #tbl table .top td {
        font-size: 12px;
    }

    .redBackground {
        background-color: rosybrown;
    }

    .greenStyle {
        color: green;
    }
</style>

<div id="posRatesDetails" ng-controller="PosLocationCtrl" ng-init="getPosCashbackRates(terminalId)">
    <div class="product-container" style="width:500px;margin:5px;">
        <div class="header-title">
            Cashback Միջնորդավճար
            
        </div>
        <div class="product-collapsable-section ">
            <div id="collectionsTable" class="product-content-table" style="min-height:100px;padding:0px;margin:5px;">
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <thead class="product-container-header">
                        <tr>
                            <td style="text-align:center;width:25px;">Տեսակ </td>
                            <td style="text-align:center;width:20px;">%</td>
                            <td style="text-align:center;width:20px;">ACBA %</td>
                            <td style="text-align:center;width:20px;">Սկիզբ</td>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="rate in ::posCashbackRates">
                            <td>
                                <img src="~/Content/Images/Amex_icon.png" height="20" width="20" align="left" style="margin-right:5px;margin-top:3px;" />
                                {{::rate.CardTypeDescription }}
                            </td>
                            <td style="text-align:center">{{::rate.Rate*100  | number:2}}%</td>  
                            <td style="text-align:center">{{::rate.RateFromACBA*100  | number:2}}%</td>
                            <td style="text-align:center">{{::rate.StartDateString}}</td>  
        
                        </tr>
                        <tr ng-if="posCashbackRates.length==0">
                            <td colspan="8" style="text-align:center">Տվյալներ առկա չեն</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#collectionsTable").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>