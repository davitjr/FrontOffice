@{
    Layout = null;
}

<div id="cardAccountOrderRemovalLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>

<form ng-controller="CardAccountRemovalOrderCtrl" name="CardAccountRemovalOrderForm" id="CardAccountRemovalOrderForm" role="form" style="min-width:650px;min-height:532px;" novalidate class="form-horizontal" labels-required>
    <div id="cardaccountremoval_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="CardAccountRemovalOrderForm.$setSubmitted();CardAccountRemovalOrderForm.$valid && SaveCardAccountRemovalOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('cardaccountremoval')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

    <div style="max-width:530px">
        <errors></errors>
    </div>
    <div class="col-sm-10">
        <div class=" form-group">
            <label class="tab_title col-sm-6 " for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-8 ">
                    <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                </div>
            </div>
        </div>
        <div class="sub_inner form-group">
            <label class="tab_title col-sm-6 " for="card">Քարտ</label>
            <div class="col-sm-6" ng-init="GetCards()">
                <div class="row">
                    <loading-control scopevariable="cards"></loading-control>
                    <select ng-show="cards" ng-model="order.card" name="card" id="card" class="form-control" required
                            ng-options="a as a.CardNumber + ' ' + a.Currency+' '+a.CardType for a in cards track by a.CardNumber">
                        <option value="" hidden="hidden" style="margin-left:25px">Ընտրեք...</option>
                    </select>
                    <ng-messages class="col-sm-11" ng-if="CardAccountRemovalOrderForm.$submitted || CardAccountRemovalOrderForm.card.$dirty"
                                 for="CardAccountRemovalOrderForm.card.$error">
                        <ng-message when="required" class="errors">
                            Քարտը ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>
    </div>
</form>
