<script type="text/javascript">
    $("#paidFactoringsContent").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>

<style>
    .redBold {
        font-weight: bold;
        color: red;
    }

    .blueBold {
        font-weight: bold;
        color: blue;
    }
</style>

<div class="product-container" ng-controller="PaidFactoringCtrl" data-ng-init="$root.SessionProperties.CustomerType != 6 && getPaidFactorings()" ng-show="(hideBlank!='true' && paidFactorings.length==0) || (paidFactorings.length!=0 && paidFactorings.length!=undefined)">
    <div class="header-title">
        <a ui-sref="paidFactorings" style="color:black;">Վճարված ֆակտորինգներ</a>
        <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
    </div>
    <div class="product-collapsable-section">
        <div class="product-container-header">
            <div class="include-closed-products">
                <input type="checkbox" class="css-square-checkbox lrg" id="include-closed-paid-factorings" data-ng-model="filter" ng-true-value="2" ng-false-value="1" ng-change="QualityFilter()">
                <label for="include-closed-paid-factorings" name="include-closed-paid-factorings-checkbox_lbl" class="css-label lrg custom-square-checkbox">Դիտել փակվածները</label>
            </div>
        </div>
        <div class="product-content-table custom-scroll" id="paidFactoringsContent" ng-class="{'product-content-table-full_height' : hideBlank!='true' }">
            <div ng-if="paidFactorings==undefined">
                <loading></loading>
            </div>
            <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                <tbody>
                    <tr ng-repeat="paidFactoring in paidFactorings" ng-if="filter==1 && paidFactorings.length!=0" style="cursor:pointer;" ng-class="{'selected':$index==selectedRow}" ng-click="setClickedRow($index)" ng-dblclick="selectedPaidFactoringIsAccessible && openPaidFactoringDetails();">
                        <td class="col-sm-4">
                            <span style="font-weight:bold;" ng-class="{ 'redBold': paidFactoring.Quality==5 ||  paidFactoring.Quality==11 || paidFactoring.Quality==12 || paidFactoring.Quality==2,'blueBold':paidFactoring.Quality==10  }">{{ ::paidFactoring.QualityDescription }}</span>
                            <span ng-if="paidFactoring.CreditCode!=''" style="color:brown;"><br />Կոդ` {{::paidFactoring.CreditCode}}</span>
                            <br /> Պայմ. գումար`{{ ::paidFactoring.StartCapitalString}} {{ ::paidFactoring.Currency }}
                            <span><br />Հաշվեհամար՝{{::paidFactoring.LoanAccount.AccountNumber}}</span>
                            <br /> Վերջ`{{::paidFactoring.EndDate | mydate | date: 'dd/MM/yyyy'}}
                        </td>
                        <td class="col-sm-2" style="text-align:right;">{{ ::paidFactoring.CurrentCapitalString }} {{ ::paidFactoring.Currency }}</td>
                        <td ng-if="paidFactoring.isAccessible" class="col-sm-1 click_toggle" context="contextPaidFactorings" id="contextMenu"><div id="contextMenu"></div> </td>

                    </tr>
                    <tr ng-if="filter==1 && paidFactorings.length==0 ">
                        <td colspan="3" style="text-align:center;">
                            Առկա չեն գործող վճարված ֆակտորինգներ
                        </td>
                    </tr>
                    <tr ng-if="filter!=1"><td style="color:red; border-width:3px" colspan="3">Փակված վճարված ֆակտորինգներ </td></tr>
                    <tr ng-repeat="paidFactoring in closingPaidFactorings" ng-if="closingPaidFactorings.length!=0" ng-class="{'selected':$index==selectedRowClose}" ng-click="setClickedRowClose($index)" ng-dblclick="selectedPaidFactoringIsAccessible && openPaidFactoringDetails();">
                        <td class="col-sm-3">
                            {{ ::paidFactoring.QualityDescription }}
                            <br /> Վերջ`{{::paidFactoring.EndDate | mydate | date: 'dd/MM/yyyy'}}

                        </td>
                        <td class="col-sm-2" style="text-align:right;">{{ ::paidFactoring.CurrentCapitalString }} {{ ::paidFactoring.Currency }}</td>
                        <td ng-if="paidFactoring.isAccessible" class="col-sm-1 click_toggle" context="contextPaidFactorings" id="contextMenu"><div  id="contextMenu"></div> </td>
                    </tr>

                </tbody>
            </table>
            <ul id="contextPaidFactorings" class="dropdown-menu">
                <li ng-if="selectedPaidFactoringIsAccessible"><a style="color: black;text-decoration:none!important ;" ui-sref="paidFactoringDetails({ productId : selectedProductId,closedPaidFactoring:selectedClosedPaidFactoring })">Մանրամասն դիտարկում</a></li>
            </ul>
        </div>

    </div>

</div>