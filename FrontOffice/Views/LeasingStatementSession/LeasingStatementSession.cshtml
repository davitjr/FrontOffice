<style>
    #summary tr {
        height: auto;
        max-width: 100%;
    }
</style>
<form name="LeasingStatementSessionForm" id="LeasingStatementSessionForm" ng-controller="LeasingStatementSessionCtrl" ng-init="getLeasingStatementSessions();getStatementSessionQualityTypes()" novalidate style="margin-top:15px">
    <div id="LeasingStatementSessionLoad" class="overlay hidden">
        <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
    </div>
    <div class="col-sm-6" style="padding:0px">
        <div class="product-container col-sm-12" style="min-width:710px;margin-top:-5px;padding:0px">
            <div class="header-title">
                {{LeasingStatementSessionsText}}
                <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
            </div>
            <div class="product-collapsable-section">
                <div class="product-container-header" style="height:25px">
                    <div class="col-sm-11">
                        <div class="col-sm-2" style="text-align:center">Համար</div>
                        <div class="col-sm-2" style="text-align:center">Ա/թ</div>
                        <div class="col-sm-2" style="text-align:center">Սկիզբ</div>
                        <div class="col-sm-2" style="text-align:center">Վերջ</div>
                        <div class="col-sm-4" style="text-align:center">Կարգավիճակ</div>
                    </div>
                    <div ng-controller="PopUpCtrl" ng-click="openWindow('/LeasingStatementSession/AddLeasingStatementSession','Քաղվածքների նոր սեսիա','addLeasingStatementSession')">
                        <i class="add-new-product tipB" style="margin-top:3px" data-original-title="Մուտքագրում"></i>
                    </div>
                </div>
                <div id="LeasingStatementSessionContent" class="product-content-table custom-scroll" style="height:600px">
                    <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                        <tbody>
                            <tr ng-repeat="LeasingStatementSession in LeasingStatementSessions" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index)" style="max-height:200px">
                                <td>
                                    <div>
                                        <span class="col-sm-2" style="text-align:center">{{ ::LeasingStatementSession.SessionNumber}}</span>
                                        <span class="col-sm-2" style="text-align:center">{{ ::LeasingStatementSession.RegistrationDate | mydate | date: 'dd/MM/yyyy' }} </span>
                                        <span class="col-sm-2" style="text-align:center">{{ ::LeasingStatementSession.StatementStartDate | mydate | date: 'dd/MM/yyyy' }} </span>
                                        <span class="col-sm-2" style="text-align:center">{{ ::LeasingStatementSession.StatementEndDate | mydate | date: 'dd/MM/yyyy' }} </span>
                                        <span class="col-sm-4" style="text-align:center">{{ statementSessionQualityTypes[LeasingStatementSession.Quality]}}</span>
                                    </div>

                                    <div ng-if="LeasingStatementSession.ScheduleString!= null && LeasingStatementSession.Quality == 2" colspan="6" style="margin-left:20px; margin-top:10px; color:#ff0100">Պլանավորում՝ {{ LeasingStatementSession.ScheduleString }}</div>
                                </td>
                                <td class="col-sm-1 click_toggle" context="context" id="contextMenu"><div id="contextMenu"></div> </td>
                            </tr>
                        </tbody>
                    </table>
                    <div ng-if="LeasingStatementSessions.length==0" style="color:red;font-size:16px;text-align:center;">Նշված ժամանակահատվածում գործարքները բացակայում են</div>
                </div>
            </div>
        </div>
    </div>
    <ul id="context" class="dropdown-menu">
        <li ng-if="currentStatementSession.Quality==1 && statementType == 100"><a style="color: black;text-decoration:none!important ;" ng-controller="PopUpCtrl" class="my_button" ng-click="params={SessionNumber:currentStatementSession.SessionNumber};openWindow('/LeasingStatementSession/StartLeasingStatementSession','Քաղվածքների ստեղծում','startLeasingstatementsession')">Սկսել քաղվածքների ստեղծումը</a></li>
        <li><a style="color: black;text-decoration:none!important ;" class="my_button" ng-controller="PopUpCtrl" ng-click="params={SessionNumber:currentStatementSession.SessionNumber,statementSessionQualityTypes:statementSessionQualityTypes}; openWindow('/LeasingStatementSession/LeasingStatementSessionDetails','Մանրամասն դիտարկում ','Leasingstatementsessiondetails')">Դիտարկել</a></li>
        <li ng-if="currentStatementSession.Quality==2  && statementType == 100"><a style="color: black;text-decoration:none!important ;" ng-controller="PopUpCtrl" class="my_button" ng-click="deleteLeasingStatementSessionSchedule(currentStatementSession.SessionNumber)">Հեռացնել պլանավորումը</a></li>
        <li ng-if="(currentStatementSession.Quality==1 || currentStatementSession.Quality==2) && statementType == 100"><a style="color: black;text-decoration:none!important ;" class="my_button" ng-click="deleteLeasingStatementSession()">Հեռացնել սեսիան</a></li>
        <li><a style="color: black;text-decoration:none!important ;" class="my_button" ng-controller="PopUpCtrl" ng-click="params={SessionNumber:currentStatementSession.SessionNumber,statementStartDate:currentStatementSession.StatementStartDate,statementEndDate:currentStatementSession.StatementEndDate};openWindow('/LeasingStatementSession/LeasingStatementSessionReport','Քաղվածքների ցուցակ','Leasingstatementsessionreport')">Քաղվածքների ցուցակ</a></li>
        <li><a style="color: black;text-decoration:none!important ;" ng-controller="PopUpCtrl" class="my_button" ng-click="params={SessionNumber:currentStatementSession.SessionNumber};openWindow('/LeasingStatementSession/LeasingStatementSessionHistory','Սեսիայի պատմություն',Leasingstatementsessionhistory)">Սեսիայի պատմություն</a></li>
        <li ng-if="statementType == 100"><a style="color: black;text-decoration:none!important ;" class="my_button" ng-click="printCustomersWithoutEmailForStatementReport(currentStatementSession.SessionNumber,currentStatementSession.StatementEndDate)">Էլ․ հասցե չունեցող հաճախորդներ</a></li>
    </ul>
</form>
