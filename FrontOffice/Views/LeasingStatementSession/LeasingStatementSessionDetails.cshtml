@{
    Layout = null;
}
<form id="LeasingStatementSessionDetails" ng-controller="LeasingStatementSessionCtrl" ng-init="getLeasingSessionDetails(SessionNumber)" style="overflow-x:hidden" name="LeasingStatementSessionDetailsForm" role="form" class="form-horizontal">
    <div id="LeasingStatementSessionDetailsLoad" class="overlay hidden">
        <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
    </div>
    <span ng-click="getLeasingSessionDetails(SessionNumber)" class="glyphicon glyphicon-refresh" data-placement="bottom" data-toggle="tooltip" style="cursor: pointer; margin-left: 15px;margin-top:5px" aria-hidden="true" data-original-title="Թարմացնել"> <a>Թարմացնել</a></span>
    <span ng-if="LeasingStatementSessionDetails.Quality==2 || LeasingStatementSessionDetails.Quality==3" ng-click="changeStatementSessionStatus(SessionNumber)" data-placement="bottom" data-toggle="tooltip" style="cursor: pointer; margin-left: 15px;margin-top:5px" aria-hidden="true" data-original-title="Ստուգել կարգավիճակը"> <a>Ստուգել կարգավիճակը</a></span>
    <div class="product-details bhoechie-tab-content" style="min-width:600px;padding-left:10px;">

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Սեսիայի կարգավիճակ</div>
            <div class="product-detail-cell product-detail-value" style="font-size:medium">{{statementSessionQualityTypes[LeasingStatementSessionDetails.Quality]}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Քաղվածքների ընդհանուր քանակ</div>
            <div class="product-detail-cell product-detail-value" style="font-size:medium">{{LeasingStatementSessionDetails.TotalStatementCount}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ստեղծված քաղվածքների ընդհանուր քանակ</div>
            <div class="product-detail-cell product-detail-value" style="font-size:medium">{{LeasingStatementSessionDetails.CreatedStatementCount}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ստեղծված PDF քաղվածքներ</div>
            <div class="product-detail-cell product-detail-value" style="font-size:medium">{{LeasingStatementSessionDetails.CreatedStatementCountPDF}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ստեղծված EXCEL քաղվածքներ</div>
            <div class="product-detail-cell product-detail-value" style="font-size:medium">{{LeasingStatementSessionDetails.CreatedStatementCountEXCEL}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ուղարկված քաղվածքներ</div>
            <div class="product-detail-cell product-detail-value" style="font-size:medium">{{LeasingStatementSessionDetails.SentStatementCount}}</div>
        </div>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մերժված քաղվածքներ</div>
            <div class="product-detail-cell product-detail-value" style="font-size:medium">{{LeasingStatementSessionDetails.RejectedStatementCount}}</div>
        </div>


        @*<div class="col-sm-7"></div>
        <div>
            <button type="button" class="btn btn-sm btn-primary" ng-controller="PopUpCtrl" ng-click="params={SessionNumber:SessionNumber};openWindow('/LeasingStatementSession/LeasingStatementSessionHistory','Սեսիայի պատմություն',Leasingstatementsessionhistory)">Սեսիայի պատմություն</button>
        </div>*@
    </div>
</form>
