<form ng-controller="PeriodicTransferDataChangeOrderCtrl" ng-init="getPeriodicDataChangeOrder(selectedOrderId);" style="width:450px">
    <loading-control style="margin-left:20em" scopevariable="order"></loading-control>
    <div ng-if="order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6" ng-show="order" class="menu-bar dialog-menu light-green"
         style="margin-left:-3px;margin-top:0px">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-5 " ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հրաժարման հայտ','removalOrder',callbackgetPeriodicPaymentOrder)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5"><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;Հրաժարման հայտ</span>
            </li>
        </ul>
    </div>
    <div ng-show="order" class="product-details bhoechie-tab-content" style="padding-left:10px">
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Հայտի համար</div>
            <div class="product-detail-cell product-detail-value">{{order.Id}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պարբերական փոխանցման տեսակը</div>
            <div ng-if="order.SubType==3" class="product-detail-cell product-detail-value">Սեփական հաշիվների միջև</div>
            <div ng-if="order.SubType==1" class="product-detail-cell product-detail-value">ՀՀ տարածքում</div>
            <div ng-if="order.SubType==4" class="product-detail-cell product-detail-value">Բյուջե</div>
            <div ng-if="order.SubType==5" class="product-detail-cell product-detail-value">SWIFT-ով ուղարկվող քաղվածք</div>
        </div>
        <div class="product-detail-row" ng-if="order.SubType!=5">
            <div class="product-detail-cell product-detail-lable">Գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.AmountString}}</div>
        </div>
        <div class="product-detail-row" ng-if="order.SubType!=5">
            <div class="product-detail-cell product-detail-lable">Արժույթ</div>
            <div class="product-detail-cell product-detail-value">{{order.Currency}}</div>
        </div>
        <div class="product-detail-row" ng-if="order.SubType!=5">
            <div class="product-detail-cell product-detail-lable">Ամբողջ մնացորդ</div>
            <div ng-if="order.ChargeType==2" class="product-detail-cell product-detail-value">Այո</div>
            <div ng-if="order.ChargeType==1" class="product-detail-cell product-detail-value">Ոչ</div>
        </div>
        <div class="product-detail-row" ng-if="order.SubType!=5">
            <div class="product-detail-cell product-detail-lable">Թողնվող մնացորդ</div>
            <div class="product-detail-cell product-detail-value">{{order.MinDebetAccountRest.toFixed(2)}}</div>
        </div>
        <div ng-if="order.ChargeType==2" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Նվազագույն գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.MinAmountLevel.toFixed(2)}}</div>
        </div>
        <div ng-if="order.ChargeType==2" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Առավելագույն գումար</div>
            <div class="product-detail-cell product-detail-value">{{order.MaxAmountLevel.toFixed(2)}}</div>
        </div>
        <div ng-if="order.LastOperationDate!=null" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վերջ</div>
            <div class="product-detail-cell product-detail-value">{{order.LastOperationDate | mydate | date: 'dd/MM/yyyy' }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Թույլատրել մասնակի վճարում</div>
            <div ng-if="order.PartialPaymentSign==1" class="product-detail-cell product-detail-value">Այո</div>
            <div ng-if="order.PartialPaymentSign!=1" class="product-detail-cell product-detail-value">Ոչ</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Պարբերականություն</div>
            <div class="product-detail-cell product-detail-value">{{order.Periodicity}} օր</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Ստուգման օրերի քանակ</div>
            <div class="product-detail-cell product-detail-value">{{order.CheckDaysCount}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Վճարման նպատակ</div>
            <div class="product-detail-cell product-detail-value">{{order.Description}}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div ng-if="order.Quality==30" class="product-detail-cell product-detail-value greenStyle">{{ order.QualityDescription }}</div>
            <div ng-if="order.Quality==31" class="product-detail-cell product-detail-value redStyle">{{ order.QualityDescription }}</div>
            <div ng-if="order.Quality!=31 && order.Quality!=30" class="product-detail-cell product-detail-value">{{ order.QualityDescription }}</div>
        </div>
        <div class="product-detail-row">
            <div class="product-detail-cell my_text1">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>
        </div>
    </div>
</form>