@{
    Layout = null;
}

<div id="loanDelayOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="LoanDelayOrderCtrl" style="min-width:650px;" id="LoanDelayOrderForm" name="LoanDelayOrderForm" role="form" novalidate class="form-horizontal" prevent-enter-submit>

    <div id="loanDelayOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="LoanDelayOrderForm.$setSubmitted();LoanDelayOrderForm.$valid && saveLoanDelayOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('loanDelayOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div class="col-sm-12">
            <div style="max-width:520px;min-width:520px;">
                <errors></errors>
            </div>
            <div class="form-group">
                <label class="tab_title col-sm-5 control-label " for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-6 row">
                    <input type="date" disabled="disabled" class="tab_title form-control" id="RegistrationDate" name="RegistrationDate" data-ng-model="order.OperationDate" style="text-align:left" required>
                </div>
            </div>

            <div class="form-group" ng-if="isCreditLine!=true" ng-init="getLoanGrafik()">
                <label class="tab_title col-sm-5" for="DelayDate">Վարկը հետաձգված է մինչև (ներառյալ)</label>
                <div class="col-sm-6">
                    <div class="row">
                        <select name="DelayDate" ng-model="oneItemloanGrafik" id="DelayDate" class="form-control" required
                                data-ng-options="k as k.RepaymentDateTostring for k in loanGrafik" ng-change="order.DelayDate = oneItemloanGrafik.RepaymentDateTostring">

                            <option value="" hidden="hidden" style="margin-left:25px">Ընտրեք ամսաթիվ...</option>

                        </select>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="LoanDelayOrderForm.$submitted || LoanDelayOrderForm.DelayDate.$dirty"
                                     for="LoanDelayOrderForm.DelayDate.$error">
                            <ng-message when="required" class="errors">
                                Վարկը հետաձգված է մինչև (ներառյալ) ընտրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>

                </div>
            </div>

            <div class="form-group" ng-if="isCreditLine==true" ng-init="getCreditLineGrafik()">
                <label class="tab_title col-sm-5" for="DelayDate">Վարկը հետաձգված է մինչև (ներառյալ)</label>
                <div class="col-sm-6">
                    <div class="row">
                        <select name="DelayDate" ng-model="oneItemloanGrafik" id="DelayDate" class="form-control" required
                                data-ng-options="k as k.EndDateToString for k in creditlinegrafik" ng-change="order.DelayDate = oneItemloanGrafik.EndDateToString">

                            <option value="" hidden="hidden" style="margin-left:25px">Ընտրեք ամսաթիվ...</option>

                        </select>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="LoanDelayOrderForm.$submitted || LoanDelayOrderForm.DelayDate.$dirty"
                                     for="LoanDelayOrderForm.DelayDate.$error">
                            <ng-message when="required" class="errors">
                                Վարկը հետաձգված է մինչև (ներառյալ) ընտրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>

                </div>
            </div>

            <div class="form-group ">
                <label class="tab_title col-sm-5 " for="DelayReason">Փոփոխության կատարման հիմք</label>
                <div class="col-sm-6">
                    <div class="row">
                        <textarea rows="3" style="text-align:left" onkeypress="return isArmenianUnicode(event.keyCode)" onpaste="return CheckPasteText(event)" ng-model="order.DelayReason" required id="DelayReason" name="DelayReason" class="form-control tab_title"></textarea>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="LoanDelayOrderForm.$submitted || LoanDelayOrderForm.DelayReason.$dirty"
                                     for="LoanDelayOrderForm.DelayReason.$error">
                            <ng-message when="required" class="errors">
                                Փոփոխության կատարման հիմքը նշված չէ
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>




        </div>



</form>