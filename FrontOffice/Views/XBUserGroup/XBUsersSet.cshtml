@{
    Layout = null;
}
<style>
    .radio-inline {
        margin-top: -22px;
        font-size: 14px;
    }

    .ui-widget-content {
        color: #6d6d6d;
    }

    .form-control {
        color: #6d6d6d;
    }

    #XBUsersSetForm .chosen-container .chosen-drop {
        position: initial !important
    }

</style>
<div id="xbUsersSetLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>

<form ng-controller="XBUserGroupCtrl" style="min-width:650px;" id="XBUsersSetForm" name="XBUsersSetForm" role="form" ng-submit="XBUsersSetForm.$valid && setHBUsers()" novalidate class="form-horizontal" prevent-enter-submit labels-required>

    <div id="setxbusers_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="XBUsersSetForm.$setSubmitted();XBUsersSetForm.$valid && setHBUsers();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('xbusersset')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div style="max-width:700px">
            <errors></errors>
        </div>
     
    
        <div class="col-sm-10">
            <div class="form-group">
                <label class="tab_title col-sm-6 " for="HBUsers">Օգտագործողներ</label>
                <loading-control scopevariable="hbusers"></loading-control>
                <div ng-show="hbusers" class="my_title col-sm-6" @*data-ng-init="getPotentialXBUsers()"*@ data-ng-init="getChosenHBUsers()">
                    <div class="row">

                        <select chosen="ChosenHBUsersList" multiple="" name="HBUsers" id="HBUsers" data-ng-model="ChosenHBUsersList" class="chosen-select col-sm-12" data-placeholder="Ընտրեք Օգտագործողին..."
                                data-ng-options="u.UserName group by u.UserFullName for u in hbusers"></select>
                    </div>

                </div>
            </div>
        </div>
      

        <br />
        <br /><br /><br />
      
    </div>

</form>

<script>
    $("[data-toggle=tooltip]").tooltip({
        placement: $(this).data("placement") || 'bottom'
    });
</script>



