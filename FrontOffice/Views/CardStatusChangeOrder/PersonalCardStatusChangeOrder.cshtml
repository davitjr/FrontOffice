@{
    Layout = null;
}

<div id="cardDataChangeOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="CardStatusChangeOrderCtrl" style="min-width:650px;" id="CardStatusChangeOrderForm" name="CardStatusChangeOrderForm" role="form" novalidate class="form-horizontal" prevent-enter-submit>

    <div id="cardDataChangeOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="CardStatusChangeOrderForm.$setSubmitted();CardStatusChangeOrderForm.$valid && saveCardStatusChangeOrder(productid);">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('card_status_change_order')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div style="max-width:700px">
            <errors></errors>
        </div>


        <div class="col-sm-11" >
            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="date" class="form-control tab_title" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                    </div>

                </div>
            </div>

            <div class="form-group" style="margin-left: 0;" ng-init="order.CardStatus.Status=1">
                <input type="checkbox" class="checkbox-inline" id="forATSAccount" ng-model="order.CardStatus.Status" ng-true-value="1" ng-false-value="2" >
                <label class="tab_title">
                    <span ng-click="order.CardStatus.Status=1">Լիարժեք փաստաթղթեր: Քարտը տրամադրված է:</span>
                </label>
            </div>
            
            <div class="form-group" style="margin-left: 0;" ng-if="cardStatus==3">
                <input type="checkbox" class="checkbox-inline" id="forATSAccount" ng-model="order.CardStatus.Status" ng-true-value="2" ng-false-value="1">
                <label class="tab_title">
                    <span ng-click="order.CardStatus.Status=2">Թերի փաստաթղթեր: Քարտը տրամադրված է:</span>
                </label>
            </div>
            <div class="form-group "  ng-if="order.CardStatus.Status==2">
                <label class="tab_title col-sm-5 " for="Reason">Պատճառ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <textarea rows="3" style="text-align:left" required onkeypress="return isArmenianUnicode(event.keyCode)" onpaste="return CheckPasteText(event)" ng-model="order.CardStatus.Reason" id="Reason" name="Reason" class="form-control tab_title"></textarea>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="CardStatusChangeOrderForm.$submitted || CardStatusChangeOrderForm.Reason.$dirty"
                                     for="CardStatusChangeOrderForm.Reason.$error">
                            <ng-message when="required" class="errors">
                                Պատճառը նշված չէ
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>
        </div>
    </div>



</form>











