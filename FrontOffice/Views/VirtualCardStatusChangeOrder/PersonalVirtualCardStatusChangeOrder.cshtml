@{
	Layout = null;
}

<div id="virtualCardStatusChangeOrderLoad" class="overlay hidden">
	<img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="VirtualCardStatusChangeOrderCtrl" style="min-width:650px;" id="VirtualCardStatusChangeOrderForm" name="VirtualCardStatusChangeOrderForm" role="form" novalidate class="form-horizontal" prevent-enter-submit>

	<div id="cardDataChangeOrder_menu" class="menu-bar dialog-menu light-green">
		<ul id="menu" class="dialog-menu">
			<li class="root-menu-item-4 " ng-click="VirtualCardStatusChangeOrderForm.$setSubmitted();VirtualCardStatusChangeOrderForm.$valid && saveVirtualCardStatusChangeOrder(virtualcardid,productid);">
				<span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
			</li>
			<li class="root-menu-item-5 " onclick="CloseBPDialog('virtual_card_status_change_order')">
				<span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
			</li>
		</ul>
		<div id="right-menu" style="display:none;">
		</div>
	</div>
	<div>
		<div style="max-width:700px">
			<errors></errors>
		</div>


		<div class="col-sm-11">
			<div class=" form-group">
				<label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
				<div class="col-sm-6">
					<div class="row">
						<input disabled="disabled" type="date" class="form-control tab_title" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
					</div>

				</div>
			</div>
			<div class="form-group">
				<label class="tab_title col-sm-5" for="statuses">Նոր կարգավիճակ</label>
				<div class="col-sm-7">
					<div class="row">
						<loading-control scopevariable="statuses"></loading-control>
						<div data-ng-init="getVirtualCardChangeActions()">
							<select ng-show="statuses" data-ng-model="order.Status" class="form-control"
									data-ng-options="k as v for (k,v) in statuses" name="statuses" required>
								<option value="" style="margin-left:25px">-Ընտրեք-</option>
							</select>
						</div>
					</div>
					<div class="row">
						<ng-messages ng-if="VirtualCardStatusChangeOrderForm.$submitted" for="VirtualCardStatusChangeOrderForm.statuses.$error">
							<ng-message when="required" class="errors">
								Մերժման պատճառը մուտքագրված չէ
							</ng-message>
						</ng-messages>
					</div>
				</div>

			</div>
			<div class="form-group">
				<label class="tab_title col-sm-5" for="ReasonId">Փոփոխման պատճառ</label>
				<div class="col-sm-7">
					<div class="row">
						<loading-control scopevariable="reasons"></loading-control>
						<div data-ng-init="getVirtualCardStatusChangeReasons()">
							<select ng-show="reasons" data-ng-model="order.ChangeReason" class="form-control"
									data-ng-options="k as v for (k,v) in reasons" name="ReasonId" required>
								<option value="" style="margin-left:25px">-Ընտրեք-</option>
							</select>
						</div>
					</div>
					<div class="row">
						<ng-messages ng-if="VirtualCardStatusChangeOrderForm.$submitted" for="VirtualCardStatusChangeOrderForm.ReasonId.$error">
							<ng-message when="required" class="errors">
								Փոփոխման պատճառը ընտրված չէ
							</ng-message>
						</ng-messages>
					</div>
				</div>

			</div>
			<div class="form-group ">
				<label class="tab_title col-sm-5" for="ChangeReasonAdd">Նշումներ</label>
				<div class="col-sm-6">
					<div class="row">
						<textarea rows="3" style="text-align:left" onkeypress="return isArmenianUnicode(event.keyCode)" onpaste="return CheckPasteText(event)" ng-model="order.ChangeReasonAdd" id="ChangeReasonAdd" name="ChangeReasonAdd" class="form-control tab_title"></textarea>
					</div>
				</div>
			</div>
		</div>
	</div>



</form>











