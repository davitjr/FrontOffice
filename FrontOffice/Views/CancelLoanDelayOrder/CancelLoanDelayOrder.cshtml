@{
    Layout = null;
}

<div id="cancelLoanDelayOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="CancelLoanDelayOrderCtrl" style="min-width:650px;" id="CancelLoanDelayOrderForm" name="CancelLoanDelayOrderForm" role="form" novalidate class="form-horizontal" prevent-enter-submit>

    <div id="cancelLoanDelayOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="CancelLoanDelayOrderForm.$setSubmitted();CancelLoanDelayOrderForm.$valid && saveCancelLoanDelayOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('cancelLoanDelayOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div class="col-sm-12">
            <div style="max-width:520px;min-width:520px;">
                <errors></errors>
            </div>
            <div class="form-group">
                <label class="tab_title col-sm-5 control-label " for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-6 row">
                    <input type="date" disabled="disabled" class="tab_title form-control" id="RegistrationDate" name="RegistrationDate" data-ng-model="order.OperationDate" style="text-align:left" required>
                </div>
            </div>

            <div class="form-group ">
                <label class="tab_title col-sm-5 control-label " for="CancelDelayReason">Չեղարկման հիմք</label>
                <div class="col-sm-6">
                    <div class="row">

                        <select ng-model="order.DelayReason" name="CancelDelayReason" id="CancelDelayReason" class="form-control" required>
                            <option value="" hidden="hidden" style="margin-left:25px">Ընտրեք...</option>
                            <option value="1" style="margin-left:25px">Սխալ դիմում</option>
                            <option value="2" style="margin-left:25px">Հետաձգված ամսաթվի ճշտում</option>
                        </select>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="CancelLoanDelayOrderForm.$submitted || CancelLoanDelayOrderForm.CancelDelayReason.$dirty"
                                     for="CancelLoanDelayOrderForm.CancelDelayReason.$error">
                            <ng-message when="required" class="errors">
                                Չեղարկման հիմքը ընտրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>
        </div>
        
        

    </div>

</form>