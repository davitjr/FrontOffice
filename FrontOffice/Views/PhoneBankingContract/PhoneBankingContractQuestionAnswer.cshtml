@{
    Layout = null;
}
<style>
    .radio-inline {
        margin-top: -22px;
        font-size: 14px;
    }

    .ui-widget-content {
        color: #6d6d6d;
    }

    .form-control {
        color: #6d6d6d;
    }
</style>
<div id="questionAnswerLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>

<form ng-controller="PhoneBankingContractCtrl" ng-init="getPhoneBankingContractQuestions()" style="min-width:650px;" id="QuestionAnswerForm" name="QuestionAnswerForm" role="form" ng-submit="QuestionAnswerForm.$valid && saveQuestionAnswer()" novalidate class="form-horizontal" prevent-enter-submit labels-required>

    <div id="newxbusergroup_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="QuestionAnswerForm.$setSubmitted();QuestionAnswerForm.$valid && saveQuestionAnswer();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newquestionanswer')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div style="max-width:800px">
            <errors></errors>
        </div>
        <div style="max-width:700px;margin-left:50px">
            <a style="color:red">
                {{alert}}
            </a>
        </div>

        <div class="col-sm-10">

            <div class="form-group">
                <label class="tab_title col-sm-6 " for="Question">Հարց</label>
                <div class="col-sm-6">
                    <div class="row">
                        <select data-ng-model="Question" name="Question" id="Question" class="form-control"
                                data-ng-options="item as item.value for item  in questionsList" required>
                            <option value="" hidden>Ընտրեք հարցը ...</option>
                        </select>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="QuestionAnswerForm.$submitted || QuestionAnswerForm.Question.$dirty"
                                     for="QuestionAnswerForm.Question.$error">
                            <ng-message when="required" class="errors">
                                Հարցը մուտքագրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>

                </div>
            </div>

            <div class="form-group">
                <label class="tab_title col-sm-6 " for="Answer">Պատասխան</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input  type="text" class="form-control" id="Answer" name="Answer" ng-model="Answer" required>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="QuestionAnswerForm.$submitted || QuestionAnswerForm.Answer.$dirty"
                                     for="QuestionAnswerForm.Answer.$error">
                            <ng-message when="required" class="errors">
                                Պատասխանը մուտքագրված չէ
                            </ng-message>
                        </ng-messages>
                    </div>

                </div>
            </div>
        </div>

        <br />
    </div>



</form>

