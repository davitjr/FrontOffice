@{
    Layout = null;
}
<style type="text/css">
    #DepositaryAccountOrderForm .ui-widget input {
        font-family: 'webly_semibold';
    }
</style>


<div id="depositaryAccountOrderSaveLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="DepositaryAccountOrderCtrl" name="DepositaryAccountOrderForm" id="DepositaryAccountOrderForm" ng-init="setCustomerNumber(CustomerNumber);" role="form" style="min-width:500px;min-height:160px;" novalidate class="form-horizontal" labels-required>

    <div id="DepositaryAccountOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4" ng-if="hasDepoAccount == false" ng-click="DepositaryAccountOrderForm.$setSubmitted();DepositaryAccountOrderForm.$valid  && saveDepositaryAccountOrder(true);">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Բացել</span>
            </li>
            <li class="root-menu-item-4"  ng-if="hasDepoAccount == undefined " ng-click="checkAndGetDepositaryAccount();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="searchMenuButton h-menu-icon">Ստուգել ԱՀ առկայությունը</span>
            </li>
            <li class="root-menu-item-5" onclick="CloseBPDialog('DepositaryNewAccountOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

    <div class="col-sm-7" style="padding:0;padding-left:5px">

        <div class="col-sm-11">
            <div class=" form-group">
                <label class="tab_title col-sm-6" for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="date" class="form-control tab_title" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                    </div>

                </div>
            </div>
            <div class=" form-group">
                <label class="tab_title col-sm-6" for="DepositaryAccountDescription">Արժեթղթերի հաշիվը հաշվառող անձի անվանում</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="text" class="form-control tab_title" style="text-align: left;" id="DepositaryAccountDescription" name="DepositaryAccountDescription" value="«ԱԿԲԱ ԲԱՆԿ» ԲԲԸ" required>
                    </div>
                </div>
            </div>
            <div class=" form-group" ng-controller="AccountCtrl" ng-if="hasDepoAccount == false">
                <label class="tab_title col-sm-6" for="otherBankAccount">Եկամտի ստացման հաշիվ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="input-group" style="display: inline-flex; width: 100%" ng-init="getCurrentAccounts();text='Այլ բանկի հաշիվ';check=1">
                            <span id="AccountInit" class="input-group-addon" ng-click="!disable && (check==0?check=1:check=0);order.AccountNumber.StockIncomeAccountNumber = ''" style="display: inline-block;padding-right: 20px;padding-top: 10px;" ng-disabled="disable" title="" data-placement="left" data-toggle="tooltip" data-original-title="{{text}}">
                                <input type="checkbox" aria-label="..." ng-model="check" ng-change="check==0?check=1:check=0;check==1?text='Այլ բանկի հաշիվ':text='Ընթացիկ հաշիվներ';order.AccountNumber.StockIncomeAccountNumber = ''" ng-disabled="disable" ng-true-value="1" ng-false-value="0">
                            </span>
                            <select ng-model="order.AccountNumber.StockIncomeAccountNumber"
                                    name="account" id="account" class="form-control" ng-hide="check==0" required>
                                <option value="">Ընտրեք Հաշվեհամարը...</option>
                                <option class="select_options_style" ng-repeat='account in accounts' ng-if="account.Currency == 'AMD' && account.TypeOfAccount != 282  && account.TypeOfAccount != 283 && account.JointType == 0 && account.AccountType == 10 " style="margin-left:25px" value='{{ account.AccountNumber }}'>{{ account.AccountNumber }}</option>
                            </select>
                            <input ng-hide="check==1" onkeypress='return event.charCode >= 48 && event.charCode <= 57 || event.charCode==46' type="text" class="form-control tab_title" style="text-align: left;" id="otherBankAccount" name="otherBankAccount" ng-model="order.AccountNumber.StockIncomeAccountNumber" placeholder="Լրացրեք այլ բանկի հաշիվը" required>
                        </div>
                    </div>
                    <div class="row">
                        <ng-messages ng-if="DepositaryAccountOrderForm.$submitted || DepositaryAccountOrderForm.otherBankAccount.$dirty || DepositaryAccountOrderForm.account.$dirty"
                                     for="DepositaryAccountOrderForm.otherBankAccount.$error">
                            <ng-message when="required" class="errors">
                                Հաշվեհամարը ընտրված/լրացված չէ
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

<script type="text/javascript">
    $('span').tooltip();
</script>
