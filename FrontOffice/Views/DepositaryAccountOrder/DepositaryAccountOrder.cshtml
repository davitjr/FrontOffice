@{
    Layout = null;
}
<style type="text/css">
    #DepositaryAccountOrderForm .ui-widget input {
        font-family: 'webly_semibold';
    }
</style>


<div id="depositaryAccountOrderSaveLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="DepositaryAccountOrderCtrl" name="DepositaryAccountOrderForm" id="DepositaryAccountOrderForm" ng-init="setCustomerNumber(CustomerNumber);" role="form" style="min-width:600px;min-height:420px;" novalidate class="form-horizontal" abels-required>

    <div id="DepositaryAccountOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="DepositaryAccountOrderForm.$setSubmitted();DepositaryAccountOrderForm.$valid  && saveDepositaryAccountOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('DepositaryAccountOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

    <div class="col-sm-7" style="padding:0;padding-left:5px">

        <div class="col-sm-12" style="max-width:650px">

            <div style="max-width:630px">
                <errors></errors>
            </div>
            <div class="panel panel-success" style="margin-bottom: 10px; ">
                <div class="panel-heading">Արժեթղթերի հաշվի տեղեկատվություն</div>
                <div class="panel-body" style="padding-bottom: 10px; padding-top: 10px; height:340px">

                    <div class="form-group" data-ng-init="getBanks();">
                        <label class="tab_title col-sm-5 " for="DepositaryAccountDescription">Արժեթղթերի հաշիվը  հաշվառող անձի անվանում<span class='redStyle'>*</span></label>

                        <div class="col-sm-6">
                            <div class="row">
                                <div class="multiple_columns col-sm-12">
                                    <loading-control scopevariable="newArray"></loading-control>
                                    <select chosen data-ng-model="BankCode" 
                                            name="DepositaryAccountDescription" id="DepositaryAccountDescriptionNew" class="form-control" required
                                            style="max-width:100%;" data-ng-options="k as k.description for k in  newArray" data-placeholder="Ընտրեք...">
                                        <option value="" hidden>Ընտրեք...</option>
                                    </select>

                                </div>
                            </div>

                            <div class="row">
                                <ng-messages ng-if="DepositaryAccountOrderForm.$submitted"
                                             for="DepositaryAccountOrderForm.CustomerDepositaryAccountDescription.$error">
                                    <ng-message when="required" class="errors">
                                        Արժեթղթերի հաշիվը  հաշվառող անձի անվանումը մուտքագրված չէ
                                    </ng-message>

                                </ng-messages>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="tab_title col-sm-5 " for="DepositaryAccount">Արժեթղթերի հաշիվ<span class='redStyle'>*</span></label>

                        <div class="col-sm-6">
                            <div class="row">
                                <div class="multiple_columns col-sm-12">
                                    <input class="form-control tab_title unstyled" style="text-align: left;" 
                                       id="DepositaryAccount" name="DepositaryAccount"  ng-model="order.AccountNumber.AccountNumber" type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57'  required />

                                </div>
                            </div>

                            <div class="row">
                                <ng-messages ng-if="DepositaryAccountOrderForm.$submitted "
                                             for="DepositaryAccountOrderForm.DepositaryAccount.$error">
                                    <ng-message when="required" class="errors">
                                        Արժեթղթերի հաշիվը մուտքագրված չէ
                                    </ng-message>

                                </ng-messages>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>













