<script type="text/javascript">
    $("#paidAccreditivesContent").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>
<div class="product-container" ng-controller="PaidAccreditiveCtrl" data-ng-init="$root.SessionProperties.CustomerType != 6 && getPaidAccreditives()" ng-show="(hideBlank!='true' && paidAccreditives.length==0) || (paidAccreditives.length!=0 && paidAccreditives.length!=undefined)">
    <div class="header-title">
        <a ui-sref="paidAccreditives" style="color:black;">Վճարված ակրեդիտիվներ</a>
        
        <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
    </div>
    <div class="product-collapsable-section">
        <div class="product-container-header">
            <div class="include-closed-products">
                <input type="checkbox" class="css-square-checkbox lrg" id="include-closed-paidAccreditives" data-ng-model="filter" ng-true-value="2" ng-false-value="1" ng-change="QualityFilter()">
                <label for="include-closed-paidAccreditives" name="include-closed-paidAccreditives-checkbox_lbl" class="css-label lrg custom-square-checkbox">Դիտել փակվածները</label>
            </div>
        </div>
        <div class="product-content-table custom-scroll" id="paidAccreditivesContent" ng-class="{'product-content-table-full_height' : hideBlank!='true' }">
            <div ng-if="paidAccreditives==undefined">
                <loading></loading>
            </div>
            <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                <tbody>
                    <tr ng-repeat="paidAccreditive in ::paidAccreditives" ng-if="filter==1 && paidAccreditives.length!=0" ng-class=" {'selected':$index==selectedRow}" ng-click="setClickedRow($index)" ng-dblclick="selectedPaidAccreditive && openPaidAccreditiveDetails();">
                        <td class="col-sm-4">
                            {{ ::paidAccreditive.LoanTypeDescription }}
                            <span ng-if="paidAccreditive.CreditCode!=''" style="color:brown;"><br />Կոդ` {{::paidAccreditive.CreditCode}}</span>
                            <br /> {{ ::paidAccreditive.QualityDescription }}
                            <br /> Վերջ`{{::paidAccreditive.EndDate | mydate | date: 'dd/MM/yyyy'}}
                        </td>
                        <td class="col-sm-2" style="text-align:right;">{{ ::paidAccreditive.CurrentCapitalString }} {{ ::paidAccreditive.Currency }}</td>
                        <td class="col-sm-1 click_toggle" context="contextPaidAccredetives" id="contextMenu"><div id="contextMenu"></div> </td>

                    </tr>
                    <tr ng-if="filter==1 && paidAccreditives.length==0 ">
                        <td colspan="3" style="text-align:center;">
                            Առկա չեն գործող վճարված ակրեդիտիվներ
                        </td>
                    </tr>
                    <tr ng-if="filter!=1"><td style="color:red; border-width:3px" colspan="3">Փակված վճարված ակրեդիտիվներ </td></tr>
                    <tr ng-repeat="paidGuarantee in ::closingPaidGuarantees" ng-if="closingPaidGuarantees.length!=0" ng-class=" {'selected':$index==selectedRowClose}" ng-click="setClickedRowClose($index)" ng-dblclick="selectedPaidAccreditive && openPaidAccreditiveDetails();">
                        <td class="col-sm-3">
                            <br /> {{ ::paidAccreditive.QualityDescription }}
                            <br /> Վերջ`{{::paidAccreditive.EndDate | mydate | date: 'dd/MM/yyyy'}}
                        </td>
                        <td class="col-sm-2" style="text-align:right;">{{ ::paidAccreditive.CurrentCapitalString}} {{ ::paidAccreditive.Currency }}</td>
                        <td class="col-sm-1 click_toggle" context="contextPaidAccredetives" id="contextMenu"><div id="contextMenu"></div> </td>
                    </tr>

                </tbody>
            </table>
            <ul id="contextPaidAccredetives" class="dropdown-menu">
                <li ng-if="selectedPaidAccreditive"><a style="color: black;text-decoration:none!important ;" ui-sref="paidAccreditiveDetails({ productId : selectedProductId,closedPaidAccreditive:selectedClosedPaidAccreditive })">Մանրամասն դիտարկում</a></li>
            </ul>
        </div>

    </div>
</div>