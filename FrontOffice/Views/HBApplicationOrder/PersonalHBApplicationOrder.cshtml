@{
    Layout = null;
}
<style type="text/css">
    #HBApplicationoOrderForm .ui-widget input {
        font-family: 'webly_semibold';
    }
</style>


@*<div id="hpApplicationLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>*@
<form ng-controller="HBApplicationCtrl" name="HBApplicationoOrderForm" ng-init="initHBApplication()" id="HBApplicationoOrderForm" role="form" style="min-width:550px;min-height:250px;" novalidate class="form-horizontal" labels-required>
    <div id="hbapplication_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="HBApplicationoOrderForm.$setSubmitted();HBApplicationoOrderForm.$valid  && addHBApplication();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newhbapplication')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

    <div style="max-width:530px">
        <errors></errors>
    </div>
    <div style="max-width:700px;margin-left:50px">
        <a style="color:red">
            {{alert}}
        </a>
    </div>
    <div style="max-width:530px">
        <errors></errors>
    </div>
    <div class="col-sm-11" ng-if="hbApplication">

        <div class="form-group">
            <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-8 ">
                    <input  disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="hbApplication.RegistrationDate" required>               
                </div> 
            </div>
        </div>
      
        <div class="form-group" ng-if="$root.SessionProperties.CustomerType!=6">
            <label class="tab_title col-sm-5" for="countOfGroups">Հաստատման խմբերի քանակ<span class="redStyle">*</span></label>
            <div class="col-sm-5">
                <div class="row">
                    <select    name="countOfSchemaGroups" id="countOfSchemaGroups" data-ng-model="hbApplication.countOfSchemaGroups" class="form-control" >                                                                                                                                                             
                        <option value="1" >1 </option>
                        <option value="2">2</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group" ng-if="$root.SessionProperties.CustomerType!=6">
            <label class="tab_title col-sm-5 " for="description">Անվանում</label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="multiple_columns col-sm-12">
                        <textarea disabled type="text" class="form-control tab_title unstyled" style="text-align: left;" id="Description" name="Description" ng-model="hbApplication.Description" ></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group" ng-if="$root.SessionProperties.CustomerType!=6">
            <label class="tab_title col-sm-5 " for="position">Պաշտոն</label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="multiple_columns col-sm-12">
                        <input disabled type="text" class="form-control tab_title unstyled" style="text-align: left;" id="Position" name="Position" ng-model="hbApplication.Position" >
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group" ng-if="$root.SessionProperties.CustomerType!=6">
            <label class="tab_title col-sm-5 " for="fullName">Անուն,Ազգանուն</label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="multiple_columns col-sm-12">
                        <input disabled type="text" class="form-control tab_title unstyled" style="text-align: left;" id="FullName" name="FullName" ng-model="hbApplication.FullName" >
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group" ng-if="$root.SessionProperties.CustomerType!=6">
            <label class="tab_title col-sm-5 " for="Manager">Ղեկավար</label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="multiple_columns col-sm-12">
                        <input disabled type="text" class="form-control tab_title unstyled" style="text-align: left;" id="Manager" name="Manager" ng-model="hbApplication.Manager">
                    </div>
                </div>           
            </div>
        </div>

        <div class="form-group" ng-if="$root.SessionProperties.CustomerType!=6">
            <label class="tab_title col-sm-5 " for="chiefAcc">Գլխավոր հաշվապահ</label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="multiple_columns col-sm-12">
                        <input disabled type="text" class="form-control tab_title unstyled" style="text-align: left;" id="ChiefAcc" name="ChiefAcc" ng-model="hbApplication.ChiefAcc" >
                    </div>
                </div>
            </div>
        </div>
            <usersetnumber setnumber="hbApplication.InvolvingSetNumber" formname="HBApplicationoOrderForm" labelname="Ներգրավող ՊԿ"></usersetnumber>
    </div>
</form>










