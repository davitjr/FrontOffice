
@{
    Layout = null;
}

<div class="form-group">
    <label class="tab_title col-sm-5 " for="ReasonId">Պատճառ<span style="color:red;">*</span></label>
    <div class="col-sm-6" data-ng-init="getTypeofPaymentReasonAboutOutTransfering()">
        <div class="row">
            <select ng-model="reasonid" name="ReasonId" id="ReasonId" class="form-control" required
                    data-ng-options="k as v for (k,v) in typeofPaymentReasonAboutOutTransfering">
                <option value="" hidden="hidden" style=" margin-left:25px">Ընտրեք տեսակը...</option>
            </select>
        </div>
        <div class="row">
            <ng-messages ng-if="formname.$submitted || formname.ReasonId.$dirty"
                         for="formname.ReasonId.$error">
                <ng-message when="required" class="errors">
                    Տեսակը ընտրված չէ
                </ng-message>
            </ng-messages>
        </div>
    </div>
   
    <div class="tab_title col-sm-5" ng-show="reasonid == 99">
        Այլ<span style="color:red;">*</span>
    </div>
    <div ng-if="reasonid== 99">
        <textarea  type="text" ng-model="$parent.reasoniddescription" name="OtherReasonTextArea" value=""   onkeypress="return isArmenianUnicode(event.keyCode)" class="form-control tab_title col-sm-5  for_international_transfer"  style="margin-top:5px;display:block" id="OtherReasonTextArea" required />
    </div>
    <ng-messages ng-if="formname.$submitted || formname.OtherReasonTextArea.$dirty"
                 for="formname.OtherReasonTextArea.$error">
        <ng-message when="required" class="errors for_error_transfer_arm for_error_tranfer_budget for_international_transfer for_international_transfer_other_option" style="margin-left:234px;">
            Դաշտը լրացված չէ
        </ng-message>
    </ng-messages>
</div>

