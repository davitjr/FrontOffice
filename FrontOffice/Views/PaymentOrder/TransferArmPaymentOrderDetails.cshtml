            <div ng-if="order.CreditorStatus != 10 && order.CreditorStatus != 20 && order.CreditorStatus > 0">Այլ անձի (պարտատիրոջ) անվանում</div>

            <div ng-if="order.CreditorDescription != null" class="product-detail-cell product-detail-value">{{order.CreditorDescription}}</div>
        </div>


        <div class="product-detail-row">
            <div ng-if="order.CreditorDocumentNumber != null && order.CreditorDocumentType == 1" class="product-detail-cell product-detail-lable">Այլ անձի (պարտատիրոջ) ՀԾՀ</div>
            <div ng-if="order.CreditorDocumentNumber != null && order.CreditorDocumentType == 2" class="product-detail-cell product-detail-lable">Այլ անձի (պարտատիրոջ) ՀԾՀ չստանալու մասին տեղեկանքի համար</div>
            <div ng-if="order.CreditorDocumentNumber != null && order.CreditorDocumentType == 3" class="product-detail-cell product-detail-lable">Այլ անձի (պարտատիրոջ) անձնագիրր</div>
            <div ng-if="order.CreditorDocumentNumber != null && order.CreditorDocumentType == 4" class="product-detail-cell product-detail-lable">Այլ անձի (պարտատիրոջ) ՀՎՀՀ</div>
            <div class="product-detail-cell product-detail-value">{{order.CreditorDocumentNumber}}</div>
        </div>

        <div ng-if="order.CreditorDeathDocument != null && order.CreditorDeathDocument !=''" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Այլ անձի (պարտատիրոջ) մահվան վկայական</div>
            <div class="product-detail-cell product-detail-value">{{order.CreditorDeathDocument}}</div>
        </div>


        <div ng-if="order.CreditCode!='' && order.CreditCode!=undefined" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">&nbsp;&nbsp;&nbsp; Վարկային/կրեդիտ կոդը</div>
            <div class="product-detail-cell product-detail-value">{{order.CreditCode}}</div>
        </div>
        <div ng-if="order.Borrower!='' && order.Borrower!=undefined" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">&nbsp;&nbsp;&nbsp; Վարկառու</div>
            <div class="product-detail-cell product-detail-value">{{order.Borrower}}</div>
        </div>
        <div ng-if="order.MatureTypeDescription!='' && order.MatureTypeDescription!=undefined" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">&nbsp;&nbsp;&nbsp; Վարկի մարման տեսակ</div>
            <div class="product-detail-cell product-detail-value">{{order.MatureTypeDescription}}</div>
        </div>

        <orderoppersondetails opperson="order.OPPerson" ng-show="order.OPPerson" ng-if="$root.SessionProperties.IsCalledFromHB != true"></orderoppersondetails>

        <div class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
            <div ng-if="order.Quality==30" class="product-detail-cell product-detail-value greenStyle">{{order.QualityDescription}}</div>
            <div ng-if="order.Quality==31" class="product-detail-cell product-detail-value redStyle">{{order.QualityDescription}}</div>
            <div ng-if="order.Quality!=31 && order.Quality!=30" class="product-detail-cell product-detail-value">{{order.QualityDescription}}</div>
        </div>

         <div ng-if="order.Quality==31" ng-controller="OrderCtrl" ng-init="getOrderRejectHistory(selectedOrderId)" class="product-detail-row">
            <div class="product-detail-cell product-detail-lable">Մերժման պատճառ`</div>
            <div class="product-detail-cell product-detail-value"><span class="redStyle">{{ rejectHistory.ReasonDescription }}</span></div>
        </div>

    </div>
    <div style="clear:both;color:#6F6A6A;font-weight:bold;margin-left:10px" ng-if="$root.SessionProperties.IsCalledFromHB != true">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>
    <br /><br />
    <orderattachments orderid="selectedOrderId"></orderattachments>

