<style type="text/css">
    *[tabindex]:focus {
        outline: 3px green solid !important;
    }
</style>

<form style=" overflow-y: hidden;  overflow-x: hidden;  width:500px" ng-controller="LeasingCustomerClassificationCtrl" id="closeGroundsForNotClassifyingCustomerLoanForm">
     
    <div class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li  tabindex="4" ng-click="CloseGroundsForNotClassifyingCustomerLoan()" ng-keypress="keyPressCloseGroundsForNotClassifyingCustomerLoan($event)" style="padding-right:0">
                <span><img id="h-menu-icon-4" class="submitButton h-menu-icon">Հաստատել</span>
            </li>
            <li  tabindex="5" ng-controller="PopUpCtrl" ng-click="CloseBPDialog('closeGroundsForNotClassifyingCustomerLoanForm')" ng-keypress="keyPressCloseBPDialogCloseGroundsForNotClassifyingCustomerLoan($event)" style="padding-right:0">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
    </div>

     
    <div>
        <div class="row" style=" padding-bottom:15px">
            <div class="col-sm-3">
                <div align="left" class="panel-heading">Հաշվեհամար </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group">
                    <input  tabindex="1" type="text" style="width:280px" id="group" ng-model="closeAccount">
                </div>
            </div>
        </div>

        <div class="row" style=" padding-bottom:15px">
            <div class="col-sm-3">
                <div align="left" class="panel-heading">Զեկուցագրի համար </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group">
                    <input  tabindex="2" type="text" style="width:280px" id="group" ng-model="closeDocNumber">
                </div>
            </div>
        </div>

        <div class="row" style=" padding-bottom:15px">
            <div class="col-sm-3">
                <div align="left" class="panel-heading">Զեկուցագրի ա/թ </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group">
                    <input  tabindex="3" type="date" ng-model="closeReportDate" name="Date" style="height:30px;  width:auto" required>
                </div>
            </div>
        </div>

      

    </div>

</form>



