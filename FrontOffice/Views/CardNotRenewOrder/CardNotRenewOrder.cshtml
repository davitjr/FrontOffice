<style type="text/css">
    #cardNotRenewOrderForm .ui-widget input {
        font-family: 'webly_semibold';
    }

    #cardNotRenewOrderForm .panel-heading {
        background-color: #f3cd9f !important;
    }
</style>
<div id="cardNotRenewOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="CardNotRenewOrderCtrl" name="cardNotRenewOrderForm" id="cardNotRenewOrderForm" ng-init="getCard(productId)" role="form" style="min-width:550px;min-height:400px;" class="form-horizontal" novalidate>
    <div id="cardreplace_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="cardNotRenewOrderForm.$setSubmitted();cardNotRenewOrderForm.$valid && saveCardNotRenewOrder();">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('cardnotreneworder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div style="max-width:530px">
        <errors></errors>
    </div>
    <div class="col-sm-10">
        <div class=" form-group">
            <label class="tab_title col-sm-6 " for="RegistrationDate">Ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-12">
                    <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                </div>
            </div>
        </div>
        <div class=" form-group">
            <label class="tab_title col-sm-6 " for="CardAccount">Քարտի համար</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-12 ">
                    <input disabled="disabled" class="form-control tab_title unstyled" style="text-align: left;" id="CardNumber" name="CardNumber" ng-model="card.CardNumber">
                </div>
            </div>
        </div>
        <div class=" form-group">
            <label class="tab_title col-sm-6 " for="CardType">Քարտի տեսակ և արժույթ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-12 ">
                    <input disabled="disabled" class="form-control tab_title unstyled" style="text-align: left;" id="CardType" name="CardType" value="{{card.CardType+' '+card.Currency}}">
                </div>
            </div>
        </div>
        <div class=" form-group" ng-init="GetCardHolderData(productId, cardNotRenewOrder.CardHolderName)">
            <label class="tab_title col-sm-6 " for="FirstNameEng">Անուն(անգլերեն)</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-12 ">
                    <input disabled="disabled" class="form-control tab_title unstyled" style="text-align: left;" id="name" name="name" ng-model="name">
                </div>
            </div>
        </div>
        <div class=" form-group" ng-init="GetCardHolderData(productId, cardNotRenewOrder.CardHolderLastName)">
            <label class="tab_title col-sm-6 " for="FirstNameEng">Ազգանուն(անգլերեն)</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-12 ">
                    <input disabled="disabled" class="form-control tab_title unstyled" style="text-align: left;" id="lastName" name="lastName" ng-model="lastName">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="tab_title col-sm-6" for="currency">Աշխատավարձային ծրագիր</label>
            <div class="col-sm-6">
                <div class="row">
                    <label class="tab_title">
                        {{card.RelatedOfficeNumber + ' (' + relOfficeDescription + ')'}}
                    </label>
                </div>
            </div>
        </div>
        <div class="sub_inner form-group">
            <label class="tab_title col-sm-6 " for="cardNotRenewReasons">Պատճառ</label>
            <div class="col-sm-6 row" data-ng-init="GetCardNotRenewReasons()">
                <div class="multiple_columns col-sm-12 ">
                    <loading-control scopevariable="cardNotRenewReasons"></loading-control>
                    <select ng-show="cardNotRenewReasons"
                            data-ng-model="cardNotRenewOrder.reason" class="form-control" name="cardNotRenewReasons" required
                            data-ng-options="k as v for (k,v) in cardNotRenewReasons">
                        <option value="" hidden="hidden" style="margin-left:03px" required>Ընտրեք...</option>
                    </select>
                    <ng-messages ng-if="cardNotRenewOrderForm.$submitted || cardNotRenewOrderForm.cardNotRenewReason.$dirty"
                                 for="cardNotRenewOrderForm.cardNotRenewReason.$error">
                        <ng-message when="required" class="errors">
                            Պատճառը ընտրված չէ
                        </ng-message>
                    </ng-messages>
                </div>
            </div>
        </div>
    </div>
</form>


