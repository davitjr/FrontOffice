@{
    Layout = null;
}
<style>
    #collectionsDetails {
        overflow-x: hidden;
        overflow-y: hidden;
        width: 900px;
    }


   #collectionsTable td, th {
        border: 1px solid #cecece;
        width: 100px;
        font-size: 12px;
    }

    #collectionsTable top th {
        font-size: 12px;
    }

     #tbl table .top td {
                font-size: 12px;
            }

       .greenStyle {
        color: green;
        
    }
</style>

<div id="collectionsDetails" ng-controller="DAHKCtrl" >
    <div class="product-container" style="width:auto;min-width:890px">
        <div class="include-closed-products">
            <input type="checkbox" class="css-square-checkbox lrg" id="include-closed-collections" ng-model="showAllCollections" ng-true-value="true" ng-false-value="false">
            <label for="include-closed-collections" name="include-closed-collections-checkbox_lbl" class="css-label lrg custom-square-checkbox">Ցուցադրել ամբողջ պատմությունը</label>
        </div>
        <div class="header-title">
            Բռնագանձումներ
            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>
        <div class="product-collapsable-section ">
            <div id="collectionsTable" class="product-content-table" style="min-height:100px;padding:0px;margin:5px;">
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <thead class="product-container-header">
                        <tr>
                            <td style="text-align:center;width:70px;">Հաղորդագր. ա/թ</td>
                            <td style="text-align:center;width:80px;">Հաղորդագր. N</td>
                            <td style="text-align:center;width:90px;">Վարույթի N</td>
                            <td style="text-align:center;width:70px;">Վարույթի կոդ</td>
                            <td style="text-align:center">Գումար</td>
                            <td style="text-align:center">Ընդհանուր պարտք</td>
                            <td style="text-align:center">Ազատել մնացած միջոցները</td>
                            <td style="text-align:center">Նկարագրություն</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="dahkDetail in dahkCollections | filter: showOnlyActiveCollections()">
                            <td style="text-align:center">{{::dahkDetail.RequestDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:center">{{::dahkDetail.RequestNumber}}</td>
                            <td style="text-align:center">{{::dahkDetail.InquestNumber}}</td>
                            <td style="text-align:center">{{::dahkDetail.InquestCode}}</td>
                            <td style="text-align:right">{{::dahkDetail.Amount | number:2}} {{::dahkDetail.Currency}}</td>
                            <td style="text-align:right">{{::dahkDetail.TotalDebt | number:2}} {{::dahkDetail.Currency}}</td>
                            <td style="text-align:center"><span ng-show="dahkDetail.ReleaseRemaining==1" class="glyphicon glyphicon-ok greenStyle "></span></td>
                            <td style="text-align:center">{{::dahkDetail.Description}}</td>
                        </tr>
                        <tr ng-if="dahkCollections.length==0">
                            <td colspan="8" style="text-align:center">Տվյալներ առկա չեն</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#collectionsTable").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>