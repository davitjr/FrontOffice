@{
    Layout = null;
}
<style>
    #blockagesDetails {
        overflow-x: hidden;
        overflow-y: hidden;
        width: 900px;
    }


   #blockagesTable td, th {
        border: 1px solid #cecece;
        width: 100px;
        font-size: 12px;
    }

    #blockagesTable top th {
        font-size: 12px;
    }

     #tbl table .top td {
                font-size: 12px;
            }

    .redBackground {
        background-color: red;
        font-weight:bold;
    }

    .greenBackground {
        background-color: green;
        font-weight: bold;
    }
</style>

<div id="blockagesDetails" ng-controller="DAHKCtrl" >

    <div class="form-group col-sm-3" style="margin-top:10px;margin-left:10px;">
        <div class="row">
            <label class="product-detail-lable " for="requestNumberFiltered">Հաղորդագր. N</label>
        </div>
        <div class="row">
            <div>
                <select data-ng-model="requestNumberFiltered" name="requestNumberFiltered" id="requestNumberFiltered" class="form-control"
                        data-ng-options="dahkDet.RequestNumber for dahkDet in dahkBlockages | unique:'RequestNumber'">
                    <option value="" style="margin-left:25px">Ընտրեք...</option>
                </select>
            </div>
        </div>
       

     

    </div>

    <div class="form-group col-sm-3" style="margin-top:10px;margin-left:10px;">
        <div class="row">
            <label class="product-detail-lable " for="inquestCodeFiltered">Վարույթի կոդ</label>
        </div>
       <div class="row">
           <div class="">
               <select data-ng-model="inquestCodeFiltered" name="inquestCodeFiltered" id="inquestCodeFiltered" class="form-control"
                       data-ng-options="dahkDet.InquestCode for dahkDet in dahkBlockages | unique:'InquestCode'">
                   <option value="" style="margin-left:25px">Ընտրեք...</option>
               </select>
           </div>
       </div>
    </div>
    <div class="product-container" style="width:auto;min-width:890px">
        <div class="include-closed-products">
            <input type="checkbox" class="css-square-checkbox lrg" id="include-closed-blockages" ng-model="showAllBlockages" ng-true-value="true" ng-false-value="false">
            <label for="include-closed-blockages" name="include-closed-blockages-checkbox_lbl" class="css-label lrg custom-square-checkbox">Ցուցադրել ամբողջ պատմությունը</label>
        </div>
        <div class="header-title" >
            Արգելանքներ և ազատումներ
            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>

        <div class="product-collapsable-section ">
            <div id="blockagesTable" class="product-content-table" style="min-height:100px;padding:0px;margin:5px;">
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <thead class="product-container-header">
                        <tr>
                            <td style="text-align:center;width:40px;">N</td>
                            <td style="text-align:center;width:70px;">Հաղորդագր. ա/թ</td>
                            <td style="text-align:center;width:80px;">Հաղորդագր. N</td>
                            <td style="text-align:center;width:90px;">Վարույթի N</td>
                            <td style="text-align:center;width:70px;">Վարույթի կոդ</td>
                            <td style="text-align:center;width:70px;">Տեղադրման ա/թ</td>
                            <td style="text-align:center">Գումար</td>
                            <td style="text-align:center;width:50px;">ՊԿ</td>
                            <td style="text-align:center">Գործողություն</td>
                            <td style="text-align:center">Նկարագրություն</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="dahkDetail in dahkBlockages | filter:inquestCodeFiltered.InquestCode | filter:requestNumberFiltered.RequestNumber | filter: showOnlyActiveBlockages() " class="" >
                            <td ng-class="{'redBackground' : dahkDetail.ShowPriority == '1','greenBackground' : dahkDetail.ShowPriority == '2' }"> {{$index + 1}} </td>
                            <td style="text-align:center">{{::dahkDetail.RequestDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:center">{{::dahkDetail.RequestNumber}}</td>
                            <td style="text-align:center">{{::dahkDetail.InquestNumber}}</td>
                            <td style="text-align:center">{{::dahkDetail.InquestCode}}</td>
                            <td style="text-align:center">{{::dahkDetail.SetDate | mydate | date: 'dd/MM/yyyy'}}</td>
                            <td style="text-align:right"> {{::dahkDetail.Amount | number:2}} {{::dahkDetail.Currency}}</td>
                            <td style="text-align:center">{{::dahkDetail.UserId}}</td>
                            <td style="text-align:center">{{::dahkDetail.ActionTypeDescription}}</td>
                            <td style="text-align:center">{{::dahkDetail.Description}}</td>
                        </tr>
                        <tr ng-if="dahkBlockages.length==0">
                            <td colspan="10" style="text-align:center">Տվյալներ առկա չեն</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#blockagesTable").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>