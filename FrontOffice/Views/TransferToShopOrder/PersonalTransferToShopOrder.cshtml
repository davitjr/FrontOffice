@{
    Layout = null;
}
<div id="transferToShopOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="TransferToShopOrderCtrl" name="TransferToShopOrderForm" id="TransferToShopOrderForm" role="form" style="min-width:650px;" novalidate class="form-horizontal" labels-required>
    <div id="newaccount_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-4 " ng-click="TransferToShopOrderForm.$setSubmitted();TransferToShopOrderForm.$valid && saveTransferToShopOrder()">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('newTransferToShopOrder')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>

    <div style="max-width:530px">
        <errors></errors>
    </div>

    <div class="col-sm-10">
        <div class=" form-group">
            <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
            <div class="col-sm-6 row">
                <div class="multiple_columns col-sm-8 ">
                    <input disabled="disabled" type="date" class="form-control tab_title unstyled" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                </div>
            </div>
        </div>

        <div class=" form-group" ng-init="getShopAccount(productId)">
            <label class="tab_title col-sm-5 ">Կրեդիտ հաշիվ</label>
            <div class="col-sm-6 ">
                <div class="row">
                    <label class="tab_title">{{order.ReceiverAccount.AccountNumber}} {{order.ReceiverAccount.Currency}}</label>
                </div>
                <div class="row">
                    <label class="tab_title">{{order.ReceiverAccount.AccountDescription}}</label>
                </div>
            </div>
        </div>


        <div class="form-group" ng-init="getShopTransferAmount(productId)">
            <label class="tab_title col-sm-5 ">Գումար</label>
            <div class="col-sm-6 ">
                <div class="row">
                    <label class="tab_title">{{order.Amout|number:2}} {{order.Currency}}</label>
                </div>

            </div>
        </div>


        <orderdescription description="order.Description"
                          operations="null"
                          labeldescription="'Նկարագրություն'"
                          formname=" transfertoshoporderform">
        </orderdescription>


    </div>

</form>











