@{
    Layout = null;
}
<style>
    #card3dSecureServiceDetails {
        overflow-x: hidden;
        overflow-y: hidden;
        width: 850px;
    }


        #card3dSecureServiceDetails td, th {
            border: 1px solid #cecece;
            width: 100px;
            font-size: 13px;
        }

        #card3dSecureServiceDetails top th {
            font-size: 12px;
        }

    #historyTable table .top td {
        font-size: 12px;
    }

    .redBackground {
        background-color: rosybrown;
    }
</style>


<div style="min-height:300px" id="card3dSecureServiceDetails" ng-controller="card3DSecureServiceOrderOrderCtrl" ng-init="getCard3DSecureServiceHistory()">
    <div class="product-container" style="width:auto;min-width:840px">

        <div class="header-title">
            Պատմություն
            <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
        </div>

        <div class="product-collapsable-section " style="margin-bottom:15px;">
            <div id="historyTable" class="product-content-table custom-scroll">
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <thead class="product-container-header">
                        <tr>
                            <td style="text-align:center;width:20%!important;">Գործողության տեսակ</td>
                            <td style="text-align:center;width:20%!important;">Ա/Թ</td>
                            <td style="text-align:center;width:20%!important;">Ուղարկված ֆայլ</td>
                            <td style="text-align:center;width:20%!important;">Email</td>
                            <td style="text-align:center;width:10%!important;">Arca-ի պատասխան</td>
                            <td style="text-align:center;width:10%!important;">ՊԿ</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="history in card3dSecureServiceHistory">
                            <td style="text-align:center;width:20%!important">{{::history.ActionTypeDescription}}</td>
                            <td style="text-align:center;width:20%!important">{{::history.RegistrationDate| mydate | date:'dd/MM/yyyy'}}</td>
                            <td style="text-align:center;width:20%!important;">{{::history.RequestFileName}}</td>
                            <td style="text-align:center;width:20%!important;">{{::history.Email}}</td>
                            <td style="text-align:center;width:10%!important;">
                                <span ng-show="history.ArcaResponse==0">OK</span>
                                <span ng-show="history.ArcaResponse==1">ERROR</span>
                            </td>
                            <td style="text-align:center;width:10%!important">{{::history.SetNumber}}</td>
                            


                        </tr>
                        <tr ng-if="card3dSecureServiceHistory.length==0">
                            <td colspan="6" style="text-align:center">Տվյալներ առկա չեն</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


<script type="text/javascript">
    $("#historyTable").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>

<script>
    $("[data-toggle=tooltip]").tooltip({
        placement: $(this).data("placement") || 'bottom'
    });
</script>





