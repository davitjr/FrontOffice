
@{
    Layout = null;
}
<style>
    #customerLinkedPersonsList {
        overflow-x: hidden;
        overflow-y: hidden;
        width: 850px;
    }
    
        #customerLinkedPersonsList td, th {
            border: 1px solid #cecece;
            width: 100px;
            font-size: 13px;
        }

        #customerLinkedPersonsList top th {
            font-size: 12px;
        }

    #personsTable table .top td {
        font-size: 12px;
    }

    .redBackground {
        background-color: rosybrown;
    }
</style>


<div style="min-height:300px" id="customerLinkedPersonsList" ng-controller="CustomerCtrl" ng-init="getCustomerLinkedPersons(customerNumber,1)">
    <div class="product-container" style="width:auto;min-width:840px">

        <div class="header-title">
            Փոխկապակցված անձիք
        </div>

        <div class="product-collapsable-section " style="margin-bottom:15px;">

            <div id="personsTable" class="product-content-table custom-scroll">
                <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                    <thead class="product-container-header">
                        <tr>
                            <td style="text-align:center;" class="col-sm-3">Տեսակ</td>
                            <td style="text-align:center;" class="col-sm-4">Հաճախորդի համար</td>
                            <td style="text-align:center;" class="col-sm-3">Անուն Ազգանուն/Անվանում</td>
                            <td style="text-align:center;" class="col-sm-2">Մասն(%)</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="linkedPerson in ::linkedPersonsList">
                            <td style="text-align:left;" class="col-sm-3">{{::linkedPerson.linkType.value}}</td>
                            <td style="text-align:center;" class="col-sm-4">
                                {{::linkedPerson.linkedCustomerNumber}}
                                <script type="text/javascript">
                                    $('[data-toggle="tooltip"]').tooltip({
                                        placement: 'left'
                                    });
                                </script>
                                <button type="button" style="float:right" ng-click="getAttachmentDocumentList(linkedPerson.linkedCustomerNumber,true,true);">
                                    <span class="fa fa-print" data-toggle="tooltip" data-original-title="Կցված փաստաթղթեր"></span>
                                </button>
                                <button type="button" ng-controller="PopUpCtrl" style="float:right" ng-click="params={customerNumber:linkedPerson.linkedCustomerNumber}; openWindow('/Customer/CustomerDetails','Հաճախորդի տվյալներ','customerdetails')">
                                    <span class="fa fa-info-circle" data-toggle="tooltip" data-original-title="Հաճախորդի տվյալներ"></span>
                                    @*fa-user*@
                                </button>
                            </td>
                            <td style="text-align:left;" class="col-sm-3">{{::linkedPerson.CustomerDescription}}</td>
                            <td style="text-align:center;" class="col-sm-2">{{linkedPerson.participationCent == 0 ? '' : linkedPerson.participationCent + '%' }}</td>
                        </tr>
                        <tr ng-if="linkedPersonsList.length==0" >
                            <td colspan="4" style="text-align:center">Տվյալներ առկա չեն</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


<script type="text/javascript">
    $("#personsTable").mCustomScrollbar({
        theme: "rounded-dark",
        scrollButtons: {
            scrollAmount: 200,
            enable: true
        },
        mouseWheel: {
            scrollAmount: 200
        }
    });
</script>






