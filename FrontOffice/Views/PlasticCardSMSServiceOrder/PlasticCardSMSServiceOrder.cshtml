@{
    Layout = null;
}

<div id="PlasticCardSMSServiceOrderLoad" class="overlay hidden">
    <img class="loader-image non-selectable" src="../../Content/Images/invisible.png" />
</div>
<form ng-controller="PlasticCardSMSServiceOrderCtrl" style="min-width:650px;min-height:300px;" id="PlasticCardSMSServiceOrderForm"
      ng-init="GetAllTypesOfPlasticCardsSMS();getArcaCardSMSServiceActionTypes();getAuthorizedCustomerNumber();"
      name="PlasticCardSMSServiceOrderForm" role="form" novalidate class="form-horizontal" prevent-enter-submit>

    <div id="PlasticCardSMSServiceOrder_menu" class="menu-bar dialog-menu light-green">
        <ul id="menu" class="dialog-menu">
            <li class="root-menu-item-5 " ng-click="PlasticCardSMSServiceOrderForm.$setSubmitted();  getCardApplicationDetails((order.ActionType==1)?11:15,CardNumber)">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Դիմում</span>
            </li>
            <li class="root-menu-item-4 " ng-click="PlasticCardSMSServiceOrderForm.$setSubmitted(); saveAndApprovePlasticCardSMSServiceOrder(productID);">
                <span id="h-menu-item-4"><img id="h-menu-icon-4" class="submitButton h-menu-icon">Պահպանել</span>
            </li>
            <li class="root-menu-item-5 " onclick="CloseBPDialog('PlasticCardSMSService')">
                <span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon cancelButton">Հրաժարվել</span>
            </li>
        </ul>
        <div id="right-menu" style="display:none;">
        </div>
    </div>
    <div>
        <div style="padding:15px;max-width:700px">
            <errors></errors>
        </div>


        <div class="col-sm-11">
            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="RegistrationDate">Մուտքագրման ա/թ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="date" class="form-control tab_title" style="text-align: left;" id="RegistrationDate" name="RegistrationDate" ng-model="order.OperationDate" required>
                    </div>

                </div>
            </div>


            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="CardNumber">Քարտի համար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="text" class="form-control tab_title" style="text-align: left;" id="CardNumber" name="CardNumber" ng-model="cardNumber" required>
                    </div>
                </div>
            </div>

            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="CurrentPhone">Ընթացիկ հեռախոսահամար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input disabled="disabled" type="text" class="form-control tab_title" style="text-align: left;" id="CurrentPhone" name="CurrentPhone" ng-model="CurrentPhone" required>
                    </div>

                    <ng-messages ng-if="PlasticCardSMSServiceOrderForm.$submitted || PlasticCardSMSServiceOrderForm.CurrentPhone.$dirty"
                                 for="PlasticCardSMSServiceOrderForm.CurrentPhone.$error">
                        <ng-message when="required" class="errors">
                            Ընթացիկ հեռախոսահամար  նշված չէ:
                        </ng-message>
                    </ng-messages>

                    <div ng-if="isMainPhone" style="color:red;font-size:12px;text-align:left;margin-left: -15px">
                        Տվյալ հեռախոսահամարը չի հանդիսանում հիմնական բջջային հեռախոսահամար:
                    </div>
                </div>
            </div>


            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="MobilePhone">Հիմնական հեռախոսահամար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <select data-ng-model="Tuple" name="Tuple" id="Tuple" class="form-control" required
                                data-ng-options="k.m_Item1  for k in MobilePhones"
                                ng-disabled="IsDisableMobilePhone">
                            <option selected="selected" value="" hidden>Ընտրեք</option>
                        </select>
                    </div>

                </div>
            </div>

            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="ActionType">Գործողության տեսակ</label>
                <div class="col-sm-6">
                    <div class="row">

                        <select data-ng-model="order.OperationType" name="ActionType" id="ActionType" class="form-control" required
                                data-ng-options="k as v for (k,v) in ActionTypes"
                                ng-change="Actions()">
                            <option selected="selected" value="" hidden>Ընտրեք</option>
                        </select>
                        <ng-messages ng-if="PlasticCardSMSServiceOrderForm.$submitted || PlasticCardSMSServiceOrderForm.ActionType.$dirty"
                                     for="PlasticCardSMSServiceOrderForm.ActionType.$error">
                            <ng-message when="required" class="errors">
                                Գործողության տեսակը նշված չէ:
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>

            <div class=" form-group">
                <label class="tab_title col-sm-5 " for="SMSType">SMS-ի տեսակ</label>
                <div class="col-sm-6">
                    <div class="row">
                        <select data-ng-model="order.SMSType" name="SMSType" id="SMSType" class="form-control" required
                                data-ng-options="k as v for (k,v) in TypeOfPlasticCardsSMS"
                                ng-change="SMSActions()"
                                ng-disabled="IsDisableSmsType">

                            <option selected="selected" value="" hidden>Ընտրեք</option>
                        </select>
                    </div>
                    <ng-messages ng-if="PlasticCardSMSServiceOrderForm.$submitted || PlasticCardSMSServiceOrderForm.SMSType.$dirty"
                                 for="PlasticCardSMSServiceOrderForm.SMSType.$error">
                        <ng-message when="required" class="errors">
                            SMS-ի տեսակը  նշված չէ:
                        </ng-message>
                    </ng-messages>
                </div>
            </div>


            <div class="form-group">
                <label class="tab_title col-sm-5 " for="MinSum">Նվազագույն գումար</label>
                <div class="col-sm-6">
                    <div class="row">
                        <input ng-disabled="IsDisableSum" type="text" ng-change="IsNumber(order.SMSFilter);" class="form-control tab_title" style="text-align: left;" id="MinSum" name="MinSum" ng-model="order.SMSFilter" required>
                        <ng-messages ng-if="PlasticCardSMSServiceOrderForm.$submitted || PlasticCardSMSServiceOrderForm.MinSum.$dirty"
                                     for="PlasticCardSMSServiceOrderForm.MinSum.$error">
                            <ng-message when="required" class="errors">
                                Գումարը նշված չէ:
                            </ng-message>
                        </ng-messages>
                    </div>
                </div>
            </div>


        </div>
    </div>
</form>











