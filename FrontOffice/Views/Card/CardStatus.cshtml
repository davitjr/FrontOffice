<div ng-controller="CardCtrl" style="padding:20px;">
    <div class="product-detail-row">
        <div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
        <div class="product-detail-cell product-detail-value">{{cardStatus.StatusDescription}}</div>
    </div>
    <div class="product-detail-row" ng-show="cardStatus.Status==1">
        <div class="product-detail-cell product-detail-lable">Լիարժեք տրամադրման ամսաթիվ</div>
        <div class="product-detail-cell product-detail-value">{{cardStatus.RegistrationDate| mydate | date: 'dd/MM/yyyy'}}</div>
    </div>
    <div class="product-detail-row" ng-show="cardStatus.Status==2">
        <div class="product-detail-cell product-detail-lable">Թերի տրամադրման ամսաթիվ</div>
        <div class="product-detail-cell product-detail-value">{{cardStatus.RegistrationDate| mydate | date: 'dd/MM/yyyy'}}</div>
    </div>
    <div class="product-detail-row" ng-show="cardStatus.Status==2">
        <div class="product-detail-cell product-detail-lable">Թերի տրամադրման պատճառ</div>
        <div class="product-detail-cell product-detail-value">{{cardStatus.Reason}}</div>
    </div>
    <div class="product-detail-row">
        <div class="product-detail-cell product-detail-lable">ՊԿ</div>
        <div class="product-detail-cell product-detail-value">{{cardStatus.UserId}}</div>
    </div>
</div>
