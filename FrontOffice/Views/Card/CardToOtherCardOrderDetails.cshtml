
@{
	Layout = null;
}

<div>
	<form style="min-width:600px" ng-controller="CardCtrl" ng-init="getCardToOtherCardOrder(selectedOrderId)">
		<loading-control style="margin-left:20em" scopevariable="order.Id"></loading-control>
		<div ng-show="order.Id">

			<div ng-if="isCardDepartment=='1' && order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50" id="cardToOtherCardOrderDetails_menu" class="menu-bar dialog-menu light-green " style="margin-left:-15px;margin-top:0">
				<ul id="menu" class="dialog-menu">
					<li class="root-menu-item-5 " ng-if="isCardDepartment=='1' && order.Quality!=undefined && order.Quality !=31 && order.Quality !=30 && order.Quality !=32 && order.Quality !=40 && order.Quality !=41 && order.Quality !=6 && order.Quality !=50"" ng-controller="PopUpCtrl" ng-click="params={removableorder:order};openWindow('/RemovalOrder/RemovalOrder','Հրաժարման հայտ','removalOrder',callbackgetCardClosingOrder)">
						<span id="h-menu-item-5"><img id="h-menu-icon-5" class="h-menu-icon closeAccountButton">Հրաժարման հայտ</span>
					</li>

				</ul>
			</div>

			<div class="product-details bhoechie-tab-content" style="min-width:600px;margin-right:10px;padding-left:10px">

				<div class="product-detail-row">
					<div class="product-detail-cell product-detail-lable">Հայտի համար</div>
					<div class="product-detail-cell product-detail-value">{{order.Id}}</div>
				</div>

				<div class="product-detail-row">
					<div class="product-detail-cell product-detail-lable">Մուտքագրման ա/թ</div>
					<div class="product-detail-cell product-detail-value">{{order.RegistrationDateString}}</div>
				</div>

				<div class="product-detail-row">
					<div class="product-detail-cell product-detail-lable">Գործառնական օր</div>
					<div class="product-detail-cell product-detail-value">{{order.OperationDateString}}</div>
				</div>

				<div class="product-detail-row">
					<div class="product-detail-cell product-detail-lable">Ուղարկող Քարտի համար</div>
					<div class="product-detail-cell product-detail-value">{{order.SenderCardNumber}}</div>
				</div>

				<div class="product-detail-row">
					<div class="product-detail-cell product-detail-lable">Ստացողի քարտի համար</div>
					<div class="product-detail-cell product-detail-value">{{order.ReceiverCardNumber}}</div>
				</div>

				<div class="product-detail-row">
					<div class="product-detail-cell product-detail-lable">Ստացողի անուն ազգանուն</div>
					<div class="product-detail-cell product-detail-value">{{order.ReceiverName}}</div>
				</div>

				<div class="product-detail-row">
					<div class="product-detail-cell product-detail-lable">Կարգավիճակ</div>
					<div ng-if="order.Quality==30" class="product-detail-cell product-detail-value greenStyle">{{order.QualityDescription}}</div>
					<div ng-if="order.Quality==31" class="product-detail-cell product-detail-value redStyle">{{order.QualityDescription}}</div>
					<div ng-if="order.Quality!=31 && order.Quality!=30" class="product-detail-cell product-detail-value">{{order.QualityDescription}}</div>
				</div>

				<div ng-if="order.Quality==31" ng-controller="OrderCtrl" class="product-detail-row">
						<div ng-init="getOrderRejectHistory(selectedOrderId)" class="product-detail-cell product-detail-lable" style="clear:both;color:#6F6A6A;font-weight:bold">Մերժման պատճառ`</div>
						<div class="product-detail-cell product-detail-value redStyle">&nbsp;&nbsp;&nbsp;{{ rejectHistory.ReasonDescription }}</div>					
				</div>

			</div>
			<div style="clear:both;color:#6F6A6A;font-weight:bold; margin-left:10px">Կատարվել է {{selectedSourceDescription}}-ի միջոցով</div>

			<br />

		</div>
	</form>
</div>

