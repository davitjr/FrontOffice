<form name="CardActivationInArCa" ng-controller="CardCtrl" id="cardActivationInArCa"  novalidate>
    <div class="row">

        <div class="col-xs-4">
            <span class=" product-detail-lable">Սկիզբ</span>
            <input type="date" ng-model="dateFrom" name="DateFrom" class="form-control my_class"
                   required>
            <ng-messages ng-if="CardActivationInArCa.$submitted || CardActivationInArCa.DateFrom.$dirty"
                         for="StatementForm.DateFrom.$error">
                <ng-message when="required" class="errors">
                    Նշեք ա/թ
                </ng-message>
            </ng-messages>
        </div>
        <div class="col-xs-4">
            <span class=" product-detail-lable">Վերջ</span>
            <input type="date" ng-model="dateTo" name="DateTo" class="form-control my_class" required>
            <ng-messages ng-if="CardActivationInArCa.$submitted || CardActivationInArCa.DateTo.$dirty"
                         for="StatementForm.DateTo.$error">
                <ng-message when="required" class="errors">
                    Նշեք ա/թ
                </ng-message>
            </ng-messages>
        </div>
        <br />

        <div class="col-md-1">
            <div class="btn-group">
                <button ng-click="getCardActivationInArCa(cardnumber,dateFrom,dateTo)" type="button" class="btn btn-primary " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="glyphicon glyphicon-search"></span> Որոնել 
                </button>
               
            </div>
        </div>

        <div ng-if="dateFrom>dateTo" class="col-md-9  errors">Քաղվածքի ժամկետի սկիզբը պետք է փոքր լինի վերջից</div>


        <div  class="col-md-12 ">
            <br />
            <div class="product-detail-row">
                <div class="product-detail-cell product-detail-lable" ng-init="getLastSendedPaymentFileDate()">Վերջին ֆայլի ուղարկման ամսաթիվը և ժամ`</div>
                <div class="product-detail-cell product-detail-value">{{lastSendedPaymentFileDate | mydatetime}} </div>
            </div>
           
        </div>


        <div class="product-container" style="width:96%">
            <div class="header-title">
                Քաղվածք
                <div class="product-collapse tipB fa fa-chevron-down" data-original-title="Թաքցնել" onclick="CollapseProductContainer(this)"></div>
            </div>
            <div class="product-collapsable-section">
                <div class="product-container-header" style="height:44px;">
                    <div class="col-sm-2" style="text-align:center">Գործարքի ա/թ</div>
                    <div class="col-sm-2" style="text-align:center">Գործարքի գումար</div>
                    <div class="col-sm-2" style="text-align:center">Ելք</div>
                    <div class="col-sm-2" style="text-align:center">Մուտք</div>
                    <div class="col-sm-3" style="text-align:center">Ուղարկման  ա/թ և ժամ</div>
                </div>
                <div class="product-content-table-full_height custom-scroll" id="statementContent" style="min-height:100px;">
                    <div ng-if="accountStatement.Transactions==undefined">
                        <loading></loading>
                    </div>
                    <table class="table table-condensed table-hover" style="background-color:white; margin-top:0px !important;">
                        <tbody>
                            <tr ng-repeat="cardActivationInArCa in cardActivationInArCaList" ng-click="selectedCardActivationInArCaId(cardActivationInArCa)">
                                <td colspan="6">
                                    <div class="row">
                                        <div class="col-sm-2">{{::cardActivationInArCa.SendDate | mydate | date: 'dd/MM/yyyy' }}</div>
                                        <div class="col-sm-2" style="text-align:-webkit-right;padding:0px;"><span>{{::cardActivationInArCa.Amount | number:2}} {{::cardActivationInArCa.Currency}}</span></div>
                                        <div class="col-sm-2" style="text-align:-webkit-right;color:red"><span>{{cardActivationInArCa.DebitCredit=='d'?(cardActivationInArCa.Amount | number : 2):' '}}</span></div>
                                        <div class="col-sm-2" style="text-align:-webkit-right;color:green"><span>{{cardActivationInArCa.DebitCredit=='c'?(cardActivationInArCa.Amount | number : 2):' '}}</span></div>
                                        <div class="col-sm-3" style="text-align:-webkit-right;"><span ng-if="cardActivationInArCa.CardActivationInArCaPaymentDetails.InputDate!=null">{{::cardActivationInArCa.CardActivationInArCaPaymentDetails.InputDate | mydatetime }}</span> <span ng-if="cardActivationInArCa.CardActivationInArCaApigateDetails.ChangeDate!=null">{{::cardActivationInArCa.CardActivationInArCaApigateDetails.ChangeDate | mydatetime}}</span></div>
                                        <div class="col-sm-1"><span></span></div>
                                    </div>
                                    <div colspan="6" style="margin-top:10px;">
                                        <span style="font-weight:bold">Մուտքի/ելքի ակտիվացման եղանակ՝ </span> {{::cardActivationInArCa.ActivationType }}
                                    </div>
                                    <div colspan="6" style="margin-top:10px;" ng-if="cardActivationInArCa.CardActivationInArCaPaymentDetails.FileName!=null">
                                        <span> <span style="font-weight:bold">Ֆայլի անվանում՝</span>  {{::cardActivationInArCa.CardActivationInArCaPaymentDetails.FileName }}</span>
                                    </div>
                                    <div colspan="6" style="margin-top:10px;">
                                       <span style="font-weight:bold" ng-if="cardActivationInArCa.StatusDescription!=null && cardActivationInArCa.StatusDescription!=''">Կարգավիճակ՝</span> <span>{{::cardActivationInArCa.StatusDescription}}</span>
                                    </div>
                                    @*<div colspan="6" style="margin-top:10px;">
                                        <span><span style="font-weight:bold">Ֆայլի ուղարկման ամսաթիվը և ժամ`</span> <span ng-if="cardActivationInArCa.CardActivationInArCaPaymentDetails.InputDate!=null">{{cardActivationInArCa.CardActivationInArCaPaymentDetails.InputDate | mydatetime }}</span> <span ng-if="cardActivationInArCa.CardActivationInArCaApigateDetails.ChangeDate!=null">{{cardActivationInArCa.CardActivationInArCaApigateDetails.ChangeDate | mydatetime}}</span> </span>
                                    </div>*@
                                </td>
                                <td ng-if="cardActivationInArCa.ActivationType=='APIGate'" class="col-sm-1 click_toggle" context="contextAPIGate" id="contextMenu"><div id="contextMenu"></div> </td>
                                <td ng-if="cardActivationInArCa.ActivationType!='APIGate'" class="col-sm-1 click_toggle"></td>
                            </tr>
                        </tbody>
                    </table>

                    <ul id="contextAPIGate" class="dropdown-menu">
                        <li ><a href="" style="color: black;text-decoration:none!important ;" ng-controller="PopUpCtrl" ng-click="params={selectdedApigateId: selectdedApigateId};openWindow('Card/CardActivationInArCaApigateDetails','Ֆայլի ուղարկման պատմություն','apigate_details')">Դիտել պատմությունը</a></li>
                    </ul>

                </div>
            </div>
        </div>

    </div>

</form>
